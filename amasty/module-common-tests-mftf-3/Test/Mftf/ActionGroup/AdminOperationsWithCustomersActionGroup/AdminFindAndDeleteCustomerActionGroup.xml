<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminFindAndDeleteCustomerActionGroup" extends="AdminDeleteCustomerActionGroup">
        <waitForPageLoad after="navigateToCustomersPage" stepKey="waitForLoadAfterOpenPage"/>
        <click selector="{{AdminCustomerFiltersSection.filtersButton}}" after="clickClearFilters" stepKey="openFilter"/>
        <fillField selector="{{AdminCustomerFiltersSection.emailInput}}" after="openFilter"
                   userInput="{{customerEmail}}" stepKey="filterEmail"/>
        <click selector="{{AdminCustomerFiltersSection.apply}}" after="filterEmail" stepKey="applyFilter"/>
    </actionGroup>
</actionGroups>
