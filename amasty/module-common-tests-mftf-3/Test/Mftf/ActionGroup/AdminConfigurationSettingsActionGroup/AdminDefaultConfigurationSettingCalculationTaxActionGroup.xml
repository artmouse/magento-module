<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminDefaultConfigurationSettingCalculationTaxActionGroup"
                 extends="AdminConfigurationSettingsForCalculationTaxActionGroup">
        <checkOption selector="{{AdminConfigurationsTaxSection.TaxClassForShippingSystemValue}}"
                     after="selectTaxClassForShipping" stepKey="checkUseSystemValueForClassShipping"/>
        <checkOption selector="{{AdminConfigurationsTaxSection.TaxClassForProductSystemValue}}"
                     after="selectTaxClassForProduct" stepKey="checkUseSystemValueForClassProduct"/>
        <checkOption selector="{{AdminConfigurationsTaxSection.CalculationCatalogPricesSystemValue}}"
                     after="selectTaxClassForCatalogPrices" stepKey="checkUseSystemValueForCatalogPrices"/>
        <scrollTo selector="{{AdminConfigurationsTaxSection.TaxClassForProduct}}"
                  after="selectTaxClassForShippingPrices" stepKey="scrollToShipping"/>
        <checkOption selector="{{AdminConfigurationsTaxSection.CalculationShippingPricesSystemValue}}"
                     after="scrollToShipping" stepKey="checkUseSystemValueForShippingPrices"/>
        <selectOption selector="{{AdminConfigurationsTaxSection.CalculationEnableCrossBorderTrade}}"
                      userInput="{{crossBorderValues.crossBorderDisable}}" stepKey="chooseCrossBorderValue"/>
    </actionGroup>
</actionGroups>
