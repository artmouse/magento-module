<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminCheckTotalsInOrderActionGroup" extends="AdminOpenOrderOnIdActionGroup">
        <arguments>
            <argument name="totals"/>
        </arguments>
        <see selector="{{AdminOpenOrderSection.GrandTotal}}" userInput="{{totals.orderTotal}}" stepKey="checkGrandTotal"/>
        <see selector="{{AdminOpenOrderSection.Subtotal}}" userInput="{{totals.cartSubtotal}}" stepKey="checkSubtotal"/>
    </actionGroup>
</actionGroups>
