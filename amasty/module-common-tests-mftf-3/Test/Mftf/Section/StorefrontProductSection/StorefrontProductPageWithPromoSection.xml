<?xml version="1.0" encoding="UTF-8"?>
<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">

    <section name="StorefrontProductPageWithPromoSection">
        <element name="TopPromoBanner" type="block"
                 selector="//div[@class='column main']/div[@data-role='am-banners-lite']//img"/>
        <element name="AfterBannerLite" type="block"
                 selector="//div[@class='product-info-main']/div[@data-role='am-banners-lite']//img"/>
        <element name="LabelBannerLite" type="block"
                 selector="//div[@class='product media']/img[@class='am-banners-lite-label']"/>
    </section>
</sections>
