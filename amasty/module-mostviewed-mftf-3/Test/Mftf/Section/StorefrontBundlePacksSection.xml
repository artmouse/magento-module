<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/sectionSchema.xsd">
    <section name="StorefrontBundlePacksSection">
        <element name="bundlePackBlock" type="block" selector="div[class='amrelated-pack-wrapper']"/>
        <element name="bundlePackMainProductPDP" type="block" parameterized="true"
                 selector="//div[@data-amrelated-js='pack-item'][@data-item-role='main'][contains(string(), '{{name}}')]"/>
        <element name="bundlePackBundleProductPDP" type="block" parameterized="true"
                 selector="//div[@data-amrelated-js='pack-container']//div[@data-amrelated-js='pack-item'][contains(string(), '{{name}}')]"/>
        <element name="bundlePackDiscountPDP" type="block" parameterized="true"
                 selector="//div[@class='amrelated-discount -summary'][contains(string(), '{{discount}}')]"/>
        <element name="bundlePackFinalPricePDP" type="block" parameterized="true"
                 selector="//div[@data-amrelated-js='bundle-final-price'][contains(string(), '{{price}}')]"/>
        <element name="storeViewSwitcher" type="select" selector="div[id='switcher-language-trigger']"/>
        <element name="storeViewSelect" type="button" parameterized="true"
                 selector="(//li[@class='view-{{storeViewName}} switcher-option'])[1]"/>
        <element name="addBundlePackToCart" type="button" parameterized="true"
                 selector="//div[@class='amrelated-content-wrapper'][contains(string(), '{{name}}')]//button"/>
        <element name="addToCartInPopup" type="button"
                 selector="//button[@data-amrelated-js='add-to-cart-popup']"/>
        <element name="successMessage" type="block" selector="div[class='message-success success message']"/>
        <element name="finalBundlePrice" type="block" selector="(//span[@class='price'])[1]"/>
        <element name="productsInCart" type="block" selector="strong[class='product-item-name']"/>
        <element name="discountBlock" type="block" parameterized="true"
                 selector="//span[@data-th='checkout.sidebar.summary.totals.discount'][contains(text(), '{{discount}}')]"/>
        <element name="taxBlock" type="block" parameterized="true"
                 selector="//tr[@class='totals-tax-details shown']//span[contains(text(), '{{tax}}')]"/>
        <element name="expandTaxBlock" type="button" selector="tr[class='totals-tax-summary']"/>
        <element name="orderDiscountBlock" type="block" parameterized="true"
                 selector="//tr[@class='discount']//span[contains(text(), '{{discount}}')]"/>
        <element name="orderTaxBlock" type="block" parameterized="true"
                 selector="//tr[@class='totals-tax-summary']//span[contains(text(), '{{tax}}')]"/>
        <element name="cartDiscount" type="block" parameterized="true"
                 selector="//tr//td[@data-th='Discount']//span[@class='price'][contains(string(), '{{discount}}')]"/>
        <element name="upsellMessageProduct" type="block" parameterized="true"
                 selector="//div[@class='amrelated-cart-message']//a[@title='{{product}}']"/>
        <element name="upsellMessageDiscount" type="block" parameterized="true"
                 selector="//div[@class='amrelated-cart-message']//span[@class='price'][contains(text(), '{{discount}}')]"/>
        <element name="selectBundleProduct" type="block" parameterized="true"
                 selector="//div[@data-item-role='main']//a[contains(string(), '{{main}}')]/../../../../..//a[@title='{{bundle}}']/../../../..//label[@class='amrelated-label'] "/>
    </section>
</sections>

