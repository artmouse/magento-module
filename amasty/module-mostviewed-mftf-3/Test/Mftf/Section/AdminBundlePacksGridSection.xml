<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/sectionSchema.xsd">
    <section name="AdminBundlePacksGridSection">
        <element name="bundlePackName" type="block" parameterized="true"
                 selector="//tbody//tr//div[contains(text(), '{{item}}')]"/>
        <element name="selectAction" type="button" parameterized="true"
                 selector="//tbody//tr//div[contains(text(), '{{item}}')]/../..//td//button"/>
        <element name="deleteAction" type="button" parameterized="true"
                 selector="//tbody//tr//div[contains(text(), '{{item}}')]/../..//td//a[@data-action='item-delete']"/>
        <element name="bundlePackCheckbox" type="button" parameterized="true"
                 selector="//tbody//tr//div[contains(text(), '{{item}}')]/../../td[1]/label"/>
    </section>
</sections>
