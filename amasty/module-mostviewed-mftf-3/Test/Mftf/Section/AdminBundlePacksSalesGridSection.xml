<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/sectionSchema.xsd">
    <section name="AdminBundlePacksSalesGridSection">
        <element name="orderId" type="block" parameterized="true"
                 selector="//table//tr//td[contains(string(), '{{bundle}}')]/..//..//td[1]"/>
        <element name="orderDate" type="block" parameterized="true"
                 selector="//table//tr//td[contains(string(), '{{bundle}}')]/..//..//td[2]"/>
        <element name="bundlePrice" type="block" parameterized="true"
                 selector="//table//tr//td[contains(string(), '{{bundle}}')]/..//..//td[3]"/>
        <element name="grandTotalBase" type="block" parameterized="true"
                 selector="//table//tr//td[contains(string(), '{{bundle}}')]/..//..//td[4]"/>
        <element name="grandTotalPurchased" type="block" parameterized="true"
                 selector="//table//tr//td[contains(string(), '{{bundle}}')]/..//..//td[5]"/>
        <element name="bundleName" type="block" parameterized="true"
                 selector="//table//tr//td[contains(string(), '{{bundle}}')]"/>
        <element name="bundleItems" type="block" parameterized="true"
                 selector="//table//tr//td[contains(string(), '{{bundle}}')]/..//..//td[8]"/>
        <element name="gridRecordsFound" type="text"
                 selector="//div[@class='admin__data-grid-header']//div[@class='admin__control-support-text']"/>
    </section>
</sections>
