<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/sectionSchema.xsd">
    <section name="StorefrontRelatedProductRulesSection">
        <element name="relatedProductRuleBlock" type="block"
                 selector="div[class='block widget amrelated-grid-wrapper block-products-list grid']"/>
        <element name="ruleAddToCartButton" type="button"
                 selector="//li[@class='product-item']//button[@title='Add to Cart']"/>
        <element name="ruleAddToWishlistButton" type="button"
                 selector="//li[@class='product-item']//*[@title='Add to Wish List']"/>
        <element name="ruleAddToCompareButton" type="button"
                 selector="//li[@class='product-item']//*[@title='Add to Compare']"/>
    </section>
</sections>
