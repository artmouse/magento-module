<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/sectionSchema.xsd">
    <section name="AdminNewBundlePacksSection">
        <element name="fromDate" type="input" selector="//input[@name='date_from']"/>
        <element name="toDate" type="input" selector="//input[@name='date_to']"/>
        <element name="displayBundlePackProductsTab" type="button"
                 selector="//strong[@class='admin__collapsible-title']/span[contains(string(), 'Bundle Pack Products')]"/>
        <element name="addBundlePackProducts" type="button" selector="button[data-index='child_buttons']"/>
        <element name="bundlePackProductCheckBox" type="checkbox" parameterized="true"
                 selector="//tr[contains(string(), '{{var1}}')]//label[@class='data-grid-checkbox-cell-inner']"/>
        <element name="filterButton" type="button"
                 selector="(//div[contains(@data-bind, 'amasty_mostviewed_child_product_listing')]//button[@data-action='grid-filter-expand'])[1]"/>
        <element name="productNameField" type="input"
                 selector="//div[contains(@data-bind, 'amasty_mostviewed_child_product_listing')]//following::input[@name='name']"/>
        <element name="applyFilterButtonForBundleProduct" type="button"
                 selector="//div[contains(@data-bind, 'amasty_mostviewed_child_product_listing')]//button[@data-action='grid-filter-apply']"/>
        <element name="addSelectedBundleProductToBundlePack" type="button"
                 selector="//aside[contains(@class, 'amasty_mostviewed_pack_form_child_products')]//button[contains(string(), 'Add Selected Products')]"/>
        <element name="addSelectedMainProductsToBundlePack" type="button"
                 selector="//aside[contains(@class, 'amasty_mostviewed_pack_form_parent_products')]//button[contains(string(), 'Add Selected Products')]"/>
        <element name="displayMainProductsTab" type="button"
                 selector="(//span[contains(string(), 'Main Products')])[1]"/>
        <element name="addMainProduct" type="button" selector="//span[contains(string(), 'Add Main Products')]"/>
        <element name="filterButtonForMainProduct" type="button"
                 selector="(//div[contains(@data-bind, 'amasty_mostviewed_parent_product_listing')]//button[@data-action='grid-filter-expand'])[1]"/>
        <element name="productNameFieldForMainProduct" type="input"
                 selector="//div[@class='admin__form-field']//input[@name='name']"/>
        <element name="applyFilterButton" type="button" selector="//button[@data-action='grid-filter-apply']"/>
        <element name="customerGroup" type="button" parameterized="true"
                 selector="//div[@data-index='customer_group_ids']//option[@data-title='{{group}}']"/>
        <element name="bundleProductQtyField" type="input" parameterized="true"
                 selector="//div[@data-index='child_products_container']//tr[td[div[contains(string(), '{{product}}')]]]//td[@data-index='quantity']//input"/>
         <element name="bundleProductDiscountField" type="input" parameterized="true"
                 selector="//div[@data-index='child_products_container']//tr[td[div[contains(string(), '{{product}}')]]]//td[@data-index='discount_amount']//input"/>
        <element name="applyDiscountToMainProduct" type="button"
                 selector="//div[@data-index='apply_for_parent']//div[@data-role='switcher']//label"/>
        <element name="applyDiscountIf" type="button" selector="//div[@data-index='apply_condition']//select"/>
        <element name="recommendationButton" type="button" selector="//button[@class='amrelated-toggle']"/>
        <element name="recommendationBlock" type="block" selector="//div[@class='amrelated-inner']"/>
        <element name="tabConditionalDiscount" type="button" selector="//span[contains(text(), 'Conditional Discount')]"/>
        <element name="addNewCondition" type="button" selector="//button[@data-index='button_add']"/>
        <element name="discountType" type="select" selector="//select[@name='discount_type']"/>
        <element name="numberOfItems" type="input" parameterized="true"
                 selector="(//div[@data-index='number_items']//input)[{{number}}]"/>
        <element name="conditionalDiscountAmount" type="input" parameterized="true"
                 selector="(//table[@data-index='conditional']//div[@data-index='discount_amount']//input)[{{number}}]"/>
    </section>
</sections>
