<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminCheckBundlePackGridTest">
        <annotations>
            <stories value="Bundle Packs Grid"/>
            <title value="Сheck pagination and sorting of the grid"/>
            <description value="Сheck pagination and sorting of the grid"/>
            <testCaseId value="ARP-14"/>
            <severity value="CRITICAL"/>
            <group value="mostviewed"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminCreateBundlePackActionGroup" stepKey="goToBundlePacksGridForCreate"/>
            <actionGroup ref="AdminSaveBundlePackActionGroup" stepKey="saveBundlePack"/>
            <actionGroup ref="AdminCreateBundlePackActionGroup" stepKey="goToBundlePacksGridForCreateTwo">
                <argument name="am_test_bundle" value="amTestBundlePackTwo"/>
            </actionGroup>
            <actionGroup ref="AdminSaveBundlePackActionGroup" stepKey="saveSecondBundlePack"/>
            <actionGroup ref="AdminCreateBundlePackActionGroup" stepKey="goToBundlePacksGridForCreateThree">
                <argument name="am_test_bundle" value="amTestBundlePackThree"/>
            </actionGroup>
            <actionGroup ref="AdminSaveBundlePackActionGroup" stepKey="saveThirdBundlePack"/>
            <actionGroup ref="AdminCreateBundlePackActionGroup" stepKey="goToBundlePacksGridForCreateFour">
                <argument name="am_test_bundle" value="amTestBundlePackFour"/>
            </actionGroup>
            <actionGroup ref="AdminSaveBundlePackActionGroup" stepKey="saveFourthBundlePack"/>
            <actionGroup ref="AdminCreateBundlePackActionGroup" stepKey="goToBundlePacksGridForCreateFive">
                <argument name="am_test_bundle" value="amTestBundlePackFive"/>
            </actionGroup>
            <actionGroup ref="AdminSaveBundlePackActionGroup" stepKey="saveFifthBundlePack"/>
            <actionGroup ref="AdminCreateBundlePackActionGroup" stepKey="goToBundlePacksGridForCreateSix">
                <argument name="am_test_bundle" value="amTestBundlePackSix"/>
            </actionGroup>
            <actionGroup ref="AdminSaveBundlePackActionGroup" stepKey="saveSixthBundlePack"/>
        </before>
        <after>
            <actionGroup ref="AdminDeleteGridItemActionGroup" stepKey="goToBundlePacksGridForDelete"/>
            <actionGroup ref="AdminDeleteGridItemActionGroup" stepKey="goToBundlePacksGridForDeleteTwo">
                <argument name="item" value="amTestBundlePackTwo.bundle_name"/>
            </actionGroup>
            <actionGroup ref="AdminDeleteGridItemActionGroup" stepKey="goToBundlePacksGridForDeleteThree">
                <argument name="item" value="amTestBundlePackThree.bundle_name"/>
            </actionGroup>
            <actionGroup ref="AdminDeleteGridItemActionGroup" stepKey="goToBundlePacksGridForDeleteFour">
                <argument name="item" value="amTestBundlePackFour.bundle_name"/>
            </actionGroup>
            <actionGroup ref="AdminDeleteGridItemActionGroup" stepKey="goToBundlePacksGridForDeleteFive">
                <argument name="item" value="amTestBundlePackFive.bundle_name"/>
            </actionGroup>
            <actionGroup ref="AdminDeleteGridItemActionGroup" stepKey="goToBundlePacksGridForDeleteSix">
                <argument name="item" value="amTestBundlePackSix.bundle_name"/>
            </actionGroup>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>
        <actionGroup ref="ResetAdminDataGridToDefaultViewActionGroup" stepKey="resetAdminDataGridToDefaultView"/>
        <actionGroup ref="AdminCheckGridPaginationAndSortingActionGroup" stepKey="checkPagination">
            <argument name="urlGrid" value="AdminBundlePacksGridPage.url"/>
        </actionGroup>
        <actionGroup ref="ResetAdminDataGridToDefaultViewActionGroup"
                     stepKey="resetAdminDataGridToDefaultViewAfterCheckPagination"/>
        <actionGroup ref="AdminSelectCustomPerPageAndSortGridActionGroup" stepKey="checkSortingSecondColumn">
            <argument name="urlGrid" value="AdminBundlePacksGridPage.url"/>
        </actionGroup>
        <actionGroup ref="AdminSelectCustomPerPageAndSortGridActionGroup" stepKey="checkSortingThirdColumn">
            <argument name="urlGrid" value="AdminBundlePacksGridPage.url"/>
            <argument name="columnNumber" value="gridNumbers.gridThree"/>
        </actionGroup>
        <actionGroup ref="AdminSelectCustomPerPageAndSortGridActionGroup" stepKey="checkSortingFifthColumn">
            <argument name="urlGrid" value="AdminBundlePacksGridPage.url"/>
            <argument name="columnNumber" value="gridNumbers.gridFive"/>
        </actionGroup>
    </test>
</tests>
