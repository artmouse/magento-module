<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="StorefrontCheckSameBundlesDiscountActionGroup">
        <annotations>
            <stories value="Bundle Pack"/>
            <title value="Check bundle packs overlap"/>
            <description value="Create two identical bundle packs. Check correct discount on the storefront"/>
            <testCaseId value="ARP-28"/>
            <severity value="CRITICAL"/>
            <group value="mostviewed"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <!-- Create sample data -->
            <createData entity="Simple_US_Customer_NY" stepKey="createCustomer"/>
            <createData entity="ApiCategory" stepKey="createCategory"/>
            <createData entity="ApiSimpleProduct" stepKey="createSimpleProductOne">
                <requiredEntity createDataKey="createCategory"/>
                <field key="price">{{amTestBundlePack.product_price}}</field>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="createSimpleProductTwo">
                <requiredEntity createDataKey="createCategory"/>
                <field key="price">{{amTestBundlePack.product_price}}</field>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="createSimpleProductThree">
                <requiredEntity createDataKey="createCategory"/>
                <field key="price">{{amTestBundlePack.product_price}}</field>
            </createData>
            <createData entity="allBundlesCmsPageEnabled" stepKey="enableAllBundlesPage"/>
            <actionGroup ref="AdminSetAddingBundleConfigurationActionGroup"
                         stepKey="disableDiscountToAddedSeparately">
                <argument name="value" value="useBaseConfig.disable"/>
            </actionGroup>
        </before>
        <after>
            <!-- Delete sample data -->
            <deleteData createDataKey="createCustomer" stepKey="deleteCustomer"/>
            <deleteData createDataKey="createCategory" stepKey="deleteCategory"/>
            <deleteData createDataKey="createSimpleProductOne" stepKey="deleteSimpleProductOne"/>
            <deleteData createDataKey="createSimpleProductTwo" stepKey="deleteSimpleProductTwo"/>
            <deleteData createDataKey="createSimpleProductThree" stepKey="deleteSimpleProductThree"/>
            <!-- Delete Bundle Pack -->
            <actionGroup ref="AdminDeleteGridItemActionGroup" stepKey="goToBundlePacksGridForDelete"/>
            <actionGroup ref="AdminDeleteGridItemActionGroup" stepKey="goToBundlePacksGridForDeleteSecond">
                <argument name="item" value="amTestBundlePackTwo.bundle_name"/>
            </actionGroup>
            <actionGroup ref="AdminSetAddingBundleConfigurationActionGroup"
                         stepKey="enableDiscountToAddedSeparately"/>
            <createData entity="allBundlesCmsPageDisabled" stepKey="disableAllBundlesPage"/>
            <magentoCLI command="cache:clean" stepKey="cacheClean"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>
        <actionGroup ref="AdminBundlePackConfigurationActionGroup" stepKey="goToRelatedProductsConfigurePage"/>
        <magentoCLI command="cache:clean" stepKey="cacheCleanAfterSetConfig"/>
        <actionGroup ref="AdminCreateBundlePackActionGroup" stepKey="goToBundlePacksGridForCreate"/>
        <actionGroup ref="AdminAddMainProductForPackActionGroup" stepKey="addMainProductFirstBundle">
            <argument name="mainProduct" value="$$createSimpleProductOne.product[name]$$"/>
        </actionGroup>
        <actionGroup ref="AdminAddBundleProductForPackActionGroup" stepKey="addBundleProductFirstBundle">
            <argument name="bundleProduct" value="$$createSimpleProductTwo.product[name]$$"/>
        </actionGroup>
        <actionGroup ref="AdminAddBundleProductForPackActionGroup" stepKey="addSecondBundleProductFirstBundle">
            <argument name="bundleProduct" value="$$createSimpleProductThree.product[name]$$"/>
        </actionGroup>
        <actionGroup ref="AdminSaveBundlePackActionGroup" stepKey="saveFirstBundlePack"/>
        <actionGroup ref="AdminCreateBundlePackActionGroup" stepKey="goToBundlePacksGridForCreateTwo">
            <argument name="am_test_bundle" value="amTestBundlePackTwo"/>
        </actionGroup>
        <actionGroup ref="AdminSetApplyIfConditionActionGroup" stepKey="setConditionForBundle"/>
        <actionGroup ref="AdminAddMainProductForPackActionGroup" stepKey="addMainProductSecondBundle">
            <argument name="mainProduct" value="$$createSimpleProductTwo.product[name]$$"/>
        </actionGroup>
        <actionGroup ref="AdminAddBundleProductForPackActionGroup" stepKey="addBundleProductSecondBundle">
            <argument name="bundleProduct" value="$$createSimpleProductOne.product[name]$$"/>
        </actionGroup>
        <actionGroup ref="AdminSetDiscountForBundleProductActionGroup" stepKey="setDiscountForBundleProduct">
            <argument name="product" value="$$createSimpleProductOne.product[name]$$"/>
        </actionGroup>
        <actionGroup ref="AdminSaveBundlePackActionGroup" stepKey="saveSecondBundlePack"/>
        <actionGroup ref="LoginToStorefrontActionGroup" stepKey="loginAsCustomer">
            <argument name="Customer" value="$$createCustomer$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAddBundlePackToCartActionGroup" stepKey="addBundlePackToCart">
            <argument name="mainProduct" value="$$createSimpleProductOne.product[name]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontCheckDiscountOnCartActionGroup" stepKey="checkDiscountFirstBundle">
            <argument name="discount" value="amTestBundlePack.discount30"/>
        </actionGroup>
        <actionGroup ref="StorefrontDeleteProductFromTheCartActionGroup" stepKey="deleteOneBundleProduct">
            <argument name="product" value="$$createSimpleProductThree$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontCheckDiscountOnCartActionGroup" stepKey="checkDiscountAfterDeleteProduct">
            <argument name="discount" value="amTestBundlePack.discount20"/>
        </actionGroup>
    </test>
</tests>
