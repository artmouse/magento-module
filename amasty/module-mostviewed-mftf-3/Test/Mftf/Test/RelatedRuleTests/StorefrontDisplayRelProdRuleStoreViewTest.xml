<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="StorefrontDisplayRelProdRuleStoreViewTest">
        <annotations>
            <stories value="Related Product Rule"/>
            <title value="Check display Related Product Rule on different Store Views"/>
            <description value="Check display Related Product Rule on different Store Views"/>
            <testCaseId value="ARP-3"/>
            <severity value="CRITICAL"/>
            <group value="mostviewed"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <!-- Create sample data -->
            <actionGroup ref="AdminCreateStoreViewActionGroup" stepKey="createStoreView">
                <argument name="customStore" value="customStoreARP"/>
            </actionGroup>
            <actionGroup ref="AdminConfigurationUrlOptionsActionGroup" stepKey="enableStoreCodeInURL"/>
            <createData entity="ApiCategory" stepKey="createCategory"/>
            <createData entity="ApiSimpleProduct" stepKey="createSimpleProduct">
                <requiredEntity createDataKey="createCategory"/>
            </createData>
            <magentoCLI command="cache:clean" stepKey="cacheClean"/>
        </before>
        <!-- Delete sample data -->
        <after>
            <deleteData createDataKey="createCategory" stepKey="deleteCategory"/>
            <deleteData createDataKey="createSimpleProduct" stepKey="deleteSimpleProduct"/>
            <actionGroup ref="AdminConfigurationUrlOptionsActionGroup" stepKey="disableStoreCodeInURL">
                <argument name="configValue" value="StorefrontDisableAddStoreCodeToUrls.value"/>
            </actionGroup>
            <actionGroup ref="AdminDeleteStoreViewActionGroup" stepKey="deleteStoreView">
                <argument name="customStore" value="customStoreARP"/>
            </actionGroup>
            <!-- Delete Related Product Rule -->
            <actionGroup ref="AdminDeleteGridItemActionGroup" stepKey="goToRulesGridForDelete">
                <argument name="urlGrid" value="AdminRelatedProductRulesGridPage.url"/>
                <argument name="item" value="amTestRelatedProductRule.rule_name"/>
                <argument name="message" value="amastyARPMessage.rule_deleted"/>
            </actionGroup>
            <magentoCLI command="cache:clean" stepKey="cacheClean"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>
        <!-- Create Related Product Rule -->
        <actionGroup ref="AdminCreateRelProdRuleActionGroup" stepKey="goToRulesGrid"/>
        <!-- Check Related Product Rules Block On Different Store Views-->
        <actionGroup ref="StorefrontCheckRelProdRulesStoreViewActionGroup"
                     stepKey="goToProductPage">
            <argument name="product" value="$$createSimpleProduct.custom_attributes[url_key]$$"/>
            <argument name="category" value="$$createCategory$$"/>
        </actionGroup>
    </test>
</tests>
