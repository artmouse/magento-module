<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminCheckRelProdRuleGridTest">
        <annotations>
            <stories value="Related Product Rules Grid"/>
            <title value="Сheck pagination and sorting of the grid"/>
            <description value="Сheck pagination and sorting of the grid"/>
            <testCaseId value="ARP-13"/>
            <severity value="CRITICAL"/>
            <group value="mostviewed"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminCreateRelProdRuleActionGroup" stepKey="goToRulesGrid"/>
            <actionGroup ref="AdminCreateRelProdRuleActionGroup" stepKey="goToRulesGridTwo">
                <argument name="am_test_rule" value="amTestRelatedProductRuleTwo"/>
            </actionGroup>
            <actionGroup ref="AdminCreateRelProdRuleActionGroup" stepKey="goToRulesGridThree">
                <argument name="am_test_rule" value="amTestRelatedProductRuleThree"/>
            </actionGroup>
        </before>
        <after>
            <actionGroup ref="AdminDeleteGridItemActionGroup" stepKey="goToRulesGridForDelete">
                <argument name="urlGrid" value="AdminRelatedProductRulesGridPage.url"/>
                <argument name="item" value="amTestRelatedProductRule.rule_name"/>
                <argument name="message" value="amastyARPMessage.rule_deleted"/>
            </actionGroup>
            <actionGroup ref="AdminDeleteGridItemActionGroup" stepKey="goToRulesGridForDeleteTwo">
                <argument name="urlGrid" value="AdminRelatedProductRulesGridPage.url"/>
                <argument name="item" value="amTestRelatedProductRuleTwo.rule_name"/>
                <argument name="message" value="amastyARPMessage.rule_deleted"/>
            </actionGroup>
            <actionGroup ref="AdminDeleteGridItemActionGroup" stepKey="goToRulesGridForDeleteThree">
                <argument name="urlGrid" value="AdminRelatedProductRulesGridPage.url"/>
                <argument name="item" value="amTestRelatedProductRuleThree.rule_name"/>
                <argument name="message" value="amastyARPMessage.rule_deleted"/>
            </actionGroup>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>
        <actionGroup ref="ResetAdminDataGridToDefaultViewActionGroup" stepKey="resetAdminDataGridToDefaultView"/>
        <actionGroup ref="AdminCheckGridPaginationAndSortingActionGroup" stepKey="checkPagination">
            <argument name="urlGrid" value="AdminRelatedProductRulesGridPage.url"/>
        </actionGroup>
        <actionGroup ref="ResetAdminDataGridToDefaultViewActionGroup"
                     stepKey="resetAdminDataGridToDefaultViewAfterCheckPagination"/>
        <actionGroup ref="AdminSelectCustomPerPageAndSortGridActionGroup" stepKey="checkSortingSecondColumn">
            <argument name="urlGrid" value="AdminRelatedProductRulesGridPage.url"/>
        </actionGroup>
        <actionGroup ref="AdminSelectCustomPerPageAndSortGridActionGroup" stepKey="checkSortingThirdColumn">
            <argument name="urlGrid" value="AdminRelatedProductRulesGridPage.url"/>
            <argument name="columnNumber" value="gridNumbers.gridThree"/>
        </actionGroup>
        <actionGroup ref="AdminSelectCustomPerPageAndSortGridActionGroup" stepKey="checkSortingFourthColumn">
            <argument name="urlGrid" value="AdminRelatedProductRulesGridPage.url"/>
            <argument name="columnNumber" value="gridNumbers.gridFour"/>
        </actionGroup>
        <actionGroup ref="AdminSelectCustomPerPageAndSortGridActionGroup" stepKey="checkSortingEighthColumn">
            <argument name="urlGrid" value="AdminRelatedProductRulesGridPage.url"/>
            <argument name="columnNumber" value="gridNumbers.gridEight"/>
        </actionGroup>
    </test>
</tests>
