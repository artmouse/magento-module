<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="StorefrontRelProdRuleOutOfStockProductTest">
        <annotations>
            <stories value="Related Product Rule"/>
            <title value="Check display Related Product Rule on Out Of stock Product Page"/>
            <description value="Check display Related Product Rule on Out Of stock Product Page"/>
            <testCaseId value="ARP-5"/>
            <severity value="CRITICAL"/>
            <group value="mostviewed"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="DisplayOutOfStockProductActionGroup" stepKey="enableDisplayOutOfStockProducts"/>
            <!-- Create sample data -->
            <createData entity="SubCategory" stepKey="createCategory"/>
            <createData entity="SimpleProduct4" stepKey="createOutOfStockSimpleProduct">
                <requiredEntity createDataKey="createCategory"/>
            </createData>
            <createData entity="ApiSimpleProduct" stepKey="createSimpleProduct">
                <requiredEntity createDataKey="createCategory"/>
            </createData>
            <magentoCLI command="cache:clean" stepKey="cacheClean"/>
        </before>
        <!-- Delete sample data -->
        <after>
            <deleteData createDataKey="createCategory" stepKey="deleteCategory"/>
            <deleteData createDataKey="createOutOfStockSimpleProduct" stepKey="deleteOutOfStockSimpleProduct"/>
            <deleteData createDataKey="createSimpleProduct" stepKey="deleteSimpleProduct"/>
            <!-- Delete Related Product Rule -->
            <actionGroup ref="AdminDeleteGridItemActionGroup" stepKey="goToRulesGridForDelete">
                <argument name="urlGrid" value="AdminRelatedProductRulesGridPage.url"/>
                <argument name="item" value="amTestRelatedProductRule.rule_name"/>
                <argument name="message" value="amastyARPMessage.rule_deleted"/>
            </actionGroup>
            <magentoCLI command="cache:clean" stepKey="cacheClean"/>
            <actionGroup ref="NoDisplayOutOfStockProductActionGroup" stepKey="enableDisplayOutOfStockProducts"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>
        <!-- Create Related Product Rule For Out Of Stock Products Only -->
        <actionGroup ref="AdminCreateRelProdRuleOutOfStockProdActionGroup"
                     stepKey="goToRulesGrid"/>
        <!-- Check Related Product Rule On Out Of Stock Products Page -->
        <actionGroup ref="StorefrontCheckRelProdRuleBlockActionGroup" stepKey="goToOutOfStockProductPage">
            <argument name="product" value="$$createOutOfStockSimpleProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontCheckNoRelProdRuleBlockActionGroup" stepKey="goToProductPage">
            <argument name="product" value="$$createSimpleProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
    </test>
</tests>
