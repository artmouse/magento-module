<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="StorefrontRelProdRuleWithoutTitleTest">
        <annotations>
            <stories value="Related Product Rule"/>
            <title value="Check display Related Product Rule Block Without Title"/>
            <description value="Check display Related Product Rule Block Without Title"/>
            <testCaseId value="ARP-9"/>
            <severity value="CRITICAL"/>
            <group value="mostviewed"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <!-- Create sample data -->
            <createData entity="SubCategory" stepKey="createCategory"/>
            <createData entity="ApiSimpleProduct" stepKey="createSimpleProduct">
                <requiredEntity createDataKey="createCategory"/>
            </createData>
            <magentoCLI command="cache:clean" stepKey="cacheClean"/>
        </before>
        <!-- Delete sample data -->
        <after>
            <deleteData createDataKey="createCategory" stepKey="deleteCategory"/>
            <deleteData createDataKey="createSimpleProduct" stepKey="deleteSimpleProduct"/>
            <actionGroup ref="AdminDeleteGridItemActionGroup" stepKey="goToRulesGridForDelete">
                <argument name="urlGrid" value="AdminRelatedProductRulesGridPage.url"/>
                <argument name="item" value="amTestRelatedProductRule.rule_name"/>
                <argument name="message" value="amastyARPMessage.rule_deleted"/>
            </actionGroup>
            <magentoCLI command="cache:clean" stepKey="cacheClean" />
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>
        <!-- Create Related Product Rule Without Title-->
        <actionGroup ref="AdminCreateRelProdRuleWithoutTitleActionGroup"
                     stepKey="goToRulesGrid"/>
        <!-- Check Related Product Rule Block Without Title On Store Front-->
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openProductPage">
            <argument name="productUrl" value="$$createSimpleProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <seeElement selector="{{StorefrontRelatedProductRulesSection.ruleAddToCartButton}}"
                        stepKey="seeAddToCartButtons"/>
        <seeElement selector="{{StorefrontRelatedProductRulesSection.ruleAddToWishlistButton}}"
                        stepKey="seeAddToWishlistButtons"/>
        <seeElement selector="{{StorefrontRelatedProductRulesSection.ruleAddToCompareButton}}"
                        stepKey="seeAddToCompareButtons"/>
    </test>
</tests>
