<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="StorefrontDisplayRelProdRuleCustomerGroupTest">
        <annotations>
            <stories value="Related Product Rule"/>
            <title value="Check display Related Product Rule based on different Customer Groups"/>
            <description value="Check display Related Product Rule based on different Customer Groups"/>
            <testCaseId value="ARP-33"/>
            <severity value="CRITICAL"/>
            <group value="mostviewed"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <!-- Create sample data -->
            <createData entity="Simple_US_Customer_NY" stepKey="createCustomer"/>
            <createData entity="ApiCategory" stepKey="createCategory"/>
            <createData entity="ApiSimpleProduct" stepKey="createSimpleProduct">
                <requiredEntity createDataKey="createCategory"/>
            </createData>
            <magentoCLI command="cache:clean" stepKey="cacheClean"/>
        </before>
        <!-- Delete sample data -->
        <after>
            <deleteData createDataKey="createCustomer" stepKey="deleteCustomer"/>
            <deleteData createDataKey="createCategory" stepKey="deleteCategory"/>
            <deleteData createDataKey="createSimpleProduct" stepKey="deleteSimpleProduct"/>
            <!-- Delete Related Product Rule -->
            <actionGroup ref="AdminDeleteGridItemActionGroup" stepKey="goToRulesGridForDelete">
                <argument name="urlGrid" value="AdminRelatedProductRulesGridPage.url"/>
                <argument name="item" value="amTestRelatedProductRule.rule_name"/>
                <argument name="message" value="amastyARPMessage.rule_deleted"/>
            </actionGroup>
            <magentoCLI command="cache:clean" stepKey="cacheClean"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>
        <!-- Create Related Product Rule -->
        <actionGroup ref="AdminCreateRelProdRuleActionGroup" stepKey="goToRulesGrid">
            <argument name="customerGroup" value="General"/>
        </actionGroup>
        <actionGroup ref="StorefrontCheckNoRelProdRuleBlockActionGroup" stepKey="goToProductPage">
            <argument name="product" value="$$createSimpleProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="LoginToStorefrontActionGroup" stepKey="loginAsCustomer">
            <argument name="Customer" value="$$createCustomer$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontCheckRelProdRuleBlockActionGroup" stepKey="goToProductPageAfterLogin">
            <argument name="product" value="$$createSimpleProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
    </test>
</tests>
