<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminRelProdRuleCreationAndDeletionTest">
        <annotations>
            <stories value="Related Product Rule"/>
            <title value="Check creation and deletion of a new Related Product Rule"/>
            <description value="Create and delete a new Related Product Rule in the admin panel"/>
            <testCaseId value="ARP-4"/>
            <severity value="CRITICAL"/>
            <group value="mostviewed"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
        </before>
        <after>
            <!-- Delete Related Product Rule -->
            <actionGroup ref="AdminDeleteGridItemActionGroup" stepKey="goToRulesGridForDelete">
                <argument name="urlGrid" value="AdminRelatedProductRulesGridPage.url"/>
                <argument name="item" value="amTestRelatedProductRule.rule_name"/>
                <argument name="message" value="amastyARPMessage.rule_deleted"/>
            </actionGroup>
            <actionGroup ref="AdminDeleteGridItemUsingMassActionActionGroup"
                         stepKey="goToBundlePacksGridForDeleteSecond">
                <argument name="urlGrid" value="AdminRelatedProductRulesGridPage.url"/>
                <argument name="item" value="amTestRelatedProductRuleTwo.rule_name"/>
            </actionGroup>
            <actionGroup ref="AdminDeleteRelProdRuleActionGroup" stepKey="goToDeleteThird"/>
            <!-- Sign out as admin -->
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>
        <!-- Create Related Product Rule -->
        <actionGroup ref="AdminCreateRelProdRuleActionGroup" stepKey="goToRulesGrid"/>
        <actionGroup ref="AdminCreateRelProdRuleActionGroup" stepKey="goToRulesGridTwo">
            <argument name="am_test_rule" value="amTestRelatedProductRuleTwo"/>
        </actionGroup>
        <actionGroup ref="AdminCreateRelProdRuleActionGroup" stepKey="goToRulesGridThree">
            <argument name="am_test_rule" value="amTestRelatedProductRuleThree"/>
        </actionGroup>
        <grabFromCurrentUrl regex="~/id/(\d+)/~" stepKey="grabFromCurrentUrl"/>
        <setCookie userInput="setRuleIDInCookie" value="{$grabFromCurrentUrl}" stepKey="setRuleIDInCookie"/>
    </test>
</tests>
