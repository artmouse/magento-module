<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCreateRelProdRuleOutOfStockProdActionGroup"
                 extends="AdminCreateRelProdRuleActionGroup">
        <click selector="{{AdminNewRelatedProductRulesSection.whereToDisplayConditionTab}}"
               stepKey="pressToExpandWhereToDisplayConditionTab" after="pressAllStoreViewSelect"/>
        <waitForElementVisible selector="{{AdminNewRelatedProductRulesSection.outOfStockProductToggle}}"
                               stepKey="waitForOutOfStockProductToggle" after="pressToExpandWhereToDisplayConditionTab"/>
        <click selector="{{AdminNewRelatedProductRulesSection.outOfStockProductToggle}}"
               stepKey="pressToEnableDisplayForOutOfStockProduct" after="pressToExpandWhereToDisplayConditionTab"/>
    </actionGroup>
</actionGroups>
