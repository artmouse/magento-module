<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCreateRelProdRuleSliderActionGroup"
                 extends="AdminCreateRelProdRuleActionGroup">
        <click selector="{{AdminNewRelatedProductRulesSection.blockLayoutDropDown}}"
               stepKey="expandBlockLayoutDropDown" after="fillFieldRelatedProductBlockTitle" />
        <click selector="{{AdminNewRelatedProductRulesSection.selectSliderButton}}"
               stepKey="selectSliderButton" after="expandBlockLayoutDropDown" />
        <fillField selector="{{AdminNewRelatedProductRulesSection.maxProductsToDisplayField}}"
                   userInput="{{am_test_rule.max_products_slider}}" stepKey="fillFieldMaxProductsToDisplay" />
    </actionGroup>
</actionGroups>
