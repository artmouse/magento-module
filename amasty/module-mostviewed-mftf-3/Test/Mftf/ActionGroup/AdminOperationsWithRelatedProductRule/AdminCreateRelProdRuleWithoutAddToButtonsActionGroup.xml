<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCreateRelProdRuleWithoutAddToButtonsActionGroup"
                 extends="AdminCreateRelProdRuleActionGroup">
        <click selector="{{AdminNewRelatedProductRulesSection.displayAddToCartButtonToggle}}"
               stepKey="disableAddToCartButton" after="fillFieldRelatedProductBlockTitle"/>
        <click selector="{{AdminNewRelatedProductRulesSection.displayAddToWishlistButtonToggle}}"
               stepKey="disableAddToWishlistButton" after="disableAddToCartButton"/>
        <click selector="{{AdminNewRelatedProductRulesSection.displayAddToCompareButtonToggle}}"
               stepKey="disableAddToCompareButton" after="disableAddToWishlistButton"/>
    </actionGroup>
</actionGroups>
