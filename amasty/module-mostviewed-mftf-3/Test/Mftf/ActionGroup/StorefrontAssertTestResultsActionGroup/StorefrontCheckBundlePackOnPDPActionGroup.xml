<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontCheckBundlePackOnPDPActionGroup">
        <arguments>
            <argument name="mainProduct"/>
            <argument name="bundleProduct"/>
            <argument name="discount" defaultValue="number.twenty"/>
            <argument name="finalPrice" defaultValue="SimpleProductUpdatePrice80.price"/>
        </arguments>
        <waitForElementVisible selector="{{StorefrontBundlePacksSection.bundlePackBlock}}"
                               stepKey="waitForRBundlePackBlockVisible"/>
        <seeElement selector="{{StorefrontBundlePacksSection.bundlePackBlock}}"
                    stepKey="seeBlockWithBundlePack"/>
        <seeElement selector="{{StorefrontBundlePacksSection.bundlePackMainProductPDP(mainProduct)}}"
                    stepKey="checkMainProduct"/>
        <seeElement selector="{{StorefrontBundlePacksSection.bundlePackBundleProductPDP(bundleProduct)}}"
                    stepKey="checkBundleProduct"/>
        <seeElement selector="{{StorefrontBundlePacksSection.bundlePackDiscountPDP(discount)}}"
                    stepKey="checkDiscount"/>
        <seeElement selector="{{StorefrontBundlePacksSection.bundlePackFinalPricePDP(finalPrice)}}"
                    stepKey="checkFinalPrice"/>
    </actionGroup>
</actionGroups>
