<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontCheckRelProdRulesSliderActionGroup">
        <arguments>
            <argument name="numberOfProducts" defaultValue="amTestRelatedProductRule.max_products_slider"/>
            <argument name="product"/>
        </arguments>
        <amOnPage url="{{StorefrontProductPage.url(product)}}" stepKey="goToSimpleProductPageDefaultStore"/>
        <waitForPageLoad stepKey="waitForProductPageLoadDefaultStoreView"/>
        <scrollTo selector="{{AdminNewRelatedProductRulesSection.sliderProductBlock2}}" stepKey="scrollToAnchor"/>
        <seeNumberOfElements selector="{{AdminNewRelatedProductRulesSection.sliderProductBlock1}}"
                             parameterArray="[1,{{numberOfProducts}}]" stepKey="checkNumberOfProductsInSlider"/>
    </actionGroup>
</actionGroups>
