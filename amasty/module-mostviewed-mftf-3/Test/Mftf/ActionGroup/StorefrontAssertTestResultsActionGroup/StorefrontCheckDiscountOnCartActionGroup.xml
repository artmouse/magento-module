<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontCheckDiscountOnCartActionGroup">
        <arguments>
            <argument name="discount" defaultValue="amTestBundlePack.discount40"/>
        </arguments>
        <amOnPage url="{{CheckoutCartPage.url}}" stepKey="openCartPage"/>
        <seeElement selector="{{StorefrontBundlePacksSection.cartDiscount(discount)}}"
                    stepKey="seeDiscountBlockOnCart"/>
    </actionGroup>
</actionGroups>
