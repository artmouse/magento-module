<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontCheckRelProdRulesWhereToDisplayActionGroup">
        <arguments>
            <argument name="productOne"/>
            <argument name="productTwo"/>
        </arguments>
        <amOnPage url="{{StorefrontProductPage.url(productOne)}}" stepKey="goToFirstSimpleProductPageDefaultStore"/>
        <waitForElementVisible selector="{{StorefrontRelatedProductRulesSection.relatedProductRuleBlock}}"
                               stepKey="waitForRelatedProductBlockVisibleOnDefaultStoreView"/>
        <seeElement selector="{{StorefrontRelatedProductRulesSection.relatedProductRuleBlock}}"
                    stepKey="seeBlockWithRelatedProductRuleOnDefaultStoreView"/>
        <waitForElementVisible selector="{{StorefrontRelatedProductRulesSection.relatedProductRuleBlock}}"
                               stepKey="waitForRelatedProductBlockVisibleOnDifferentStoreView"/>
        <seeElement selector="{{StorefrontRelatedProductRulesSection.relatedProductRuleBlock}}"
                    stepKey="seeBlockWithRelatedProductRule"/>
        <amOnPage url="{{StorefrontProductPage.url(productTwo)}}" stepKey="goToSecondSimpleProductPageDefaultStore"/>
        <waitForPageLoad stepKey="waitForProductPageLoad"/>
        <dontSeeElement selector="StorefrontRelatedProductRulesSection.relatedProductRuleBlock"
                        stepKey="dontSeeBlockWithRelatedProductRule"/>
    </actionGroup>
</actionGroups>
