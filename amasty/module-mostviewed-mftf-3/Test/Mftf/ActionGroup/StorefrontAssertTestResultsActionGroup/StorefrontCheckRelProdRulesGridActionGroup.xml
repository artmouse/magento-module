<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontCheckRelProdRulesGridActionGroup">
        <arguments>
            <argument name="numberOfProducts" defaultValue="amTestRelatedProductRule.max_products"/>
            <argument name="product"/>
        </arguments>
        <amOnPage url="{{StorefrontProductPage.url(product)}}" stepKey="goToSimpleProductPageDefaultStore"/>
        <waitForPageLoad stepKey="waitForProductPageLoadDefaultStoreView"/>
        <seeNumberOfElements selector="{{AdminNewRelatedProductRulesSection.gridProductBlock}}"
                             userInput="{{numberOfProducts}}" stepKey="checkNumberOfProductsInGrid"/>
    </actionGroup>
</actionGroups>
