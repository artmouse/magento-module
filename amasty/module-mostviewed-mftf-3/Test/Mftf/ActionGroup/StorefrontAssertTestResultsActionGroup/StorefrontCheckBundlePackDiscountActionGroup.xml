<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontCheckBundlePackDiscountActionGroup"
                 extends="StorefrontCheckBundlePackDiscountAndTaxActionGroup">
        <arguments>
            <argument name="discount" defaultValue="amTestBundlePack.discount40"/>
        </arguments>
        <remove keyForRemoval="pressToExpandTaxBlock"/>
        <remove keyForRemoval="seeTaxBlock"/>
        <remove keyForRemoval="seeTaxBlockOnStoreFrontOrderGrid"/>
    </actionGroup>
</actionGroups>
