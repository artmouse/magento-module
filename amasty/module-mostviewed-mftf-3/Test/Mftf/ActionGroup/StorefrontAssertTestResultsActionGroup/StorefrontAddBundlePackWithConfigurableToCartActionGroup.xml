<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontAddBundlePackWithConfigurableToCartActionGroup"
                 extends="StorefrontAddBundlePackToCartActionGroup">
        <arguments>
            <argument name="optionValue" defaultValue="configurableProductOptions.optionOne"/>
        </arguments>
        <selectOption selector="{{StorefrontProductPageSection.SelectAttributeOption}}" userInput="{{optionValue}}"
                      after="waitForAjaxLoadAfterAddBundlePackToCart" stepKey="selectOption"/>
        <click selector="{{StorefrontBundlePacksSection.addToCartInPopup}}" after="selectOption"
               stepKey="clickToAddToCart"/>
        <waitForAjaxLoad stepKey="waitForAjaxLoad"/>
    </actionGroup>
</actionGroups>
