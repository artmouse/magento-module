<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontCheckRelProdRulesStoreViewActionGroup">
        <arguments>
            <argument name="storeView" defaultValue="customStoreARP.name"/>
            <argument name="product"/>
        </arguments>
        <amOnPage url="{{StorefrontProductPage.url(product)}}" stepKey="goToSimpleProductPageDefaultStore"/>
        <seeElement selector="{{StorefrontRelatedProductRulesSection.relatedProductRuleBlock}}"
                    stepKey="seeBlockWithRelatedProductRuleOnDefaultStoreView"/>
        <click selector="{{StorefrontHeaderSection.storeViewSwitcher}}" stepKey="selectStoreSwitcher"/>
        <click selector="{{StorefrontHeaderSection.storeViewList(storeView)}}" stepKey="selectForstStoreView" />
        <waitForPageLoad stepKey="waitForFirstStoreView"/>
        <amOnPage url="{{StorefrontProductPage.url(product)}}" stepKey="goToSimpleProductPage"/>
        <seeElement selector="{{StorefrontRelatedProductRulesSection.relatedProductRuleBlock}}"
                    stepKey="seeBlockWithRelatedProductRuleOnDifferentStoreView"/>
    </actionGroup>
</actionGroups>
