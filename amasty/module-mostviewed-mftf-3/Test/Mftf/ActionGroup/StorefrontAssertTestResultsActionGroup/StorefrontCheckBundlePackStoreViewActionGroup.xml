<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontCheckBundlePackStoreViewActionGroup">
        <arguments>
            <argument name="storeView" defaultValue="customStoreARP.code"/>
        </arguments>
        <amOnPage url="{{StorefrontBundlePackWithStoreCodePage.url(storeView)}}"
                  stepKey="amOnAllBundlePacksPageCustomStoreView"/>
        <waitForElementVisible selector="{{StorefrontBundlePacksSection.bundlePackBlock}}"
                               stepKey="waitForRBundlePackBlockVisibleOnDefaultStoreView"/>
        <seeElement selector="{{StorefrontBundlePacksSection.bundlePackBlock}}"
                    stepKey="seeBlockWithBundlePackOnCustomStoreView"/>
        <waitForPageLoad stepKey="waitForAllBundlePacksPageLoad"/>
        <amOnPage url="{{StorefrontBundlePackWithStoreCodePage.url(_defaultStore.code)}}"
                  stepKey="amOnAllBundlePacksPage"/>
        <seeElement selector="{{StorefrontBundlePacksSection.bundlePackBlock}}"
                    stepKey="seeBlockWithBundlePackOnDefaultStoreView"/>
    </actionGroup>
</actionGroups>
