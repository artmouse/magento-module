<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminConfigurationUrlOptionsActionGroup">
        <arguments>
            <argument name="configValue" defaultValue="StorefrontEnableAddStoreCodeToUrls.value"/>
        </arguments>
        <magentoCLI command="config:set {{StorefrontEnableAddStoreCodeToUrls.path}} {{configValue}}"
                    stepKey="setUrlConfig"/>
    </actionGroup>
</actionGroups>
