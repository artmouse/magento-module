<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminBundlePackConfigurationActionGroup">
        <arguments>
            <argument name="value" defaultValue="useBaseConfig.disable"/>
        </arguments>
        <magentoCLI command="config:set {{relatedProductsConfigCLISettingsPaths.cms_page}} bundles"
                    stepKey="setBundlesCMSPage"/>
        <magentoCLI command="config:set {{relatedProductsConfigCLISettingsPaths.apply_cart_rule}} {{value}}"
                    stepKey="setCartPriceRuleConfig"/>
        <magentoCLI command="cache:clean" stepKey="cleanClean"/>
    </actionGroup>
</actionGroups>
