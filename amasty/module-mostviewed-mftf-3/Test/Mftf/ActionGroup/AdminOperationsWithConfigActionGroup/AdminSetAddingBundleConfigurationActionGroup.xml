<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSetAddingBundleConfigurationActionGroup">
        <arguments>
            <argument name="value" defaultValue="useBaseConfig.enable"/>
        </arguments>
        <magentoCLI command="config:set {{relatedProductsConfigCLISettingsPaths.apply_for_separately}} {{value}}"
                    stepKey="applyBundleDiscountIf"/>
        <magentoCLI command="cache:clean" stepKey="cleanClean"/>
    </actionGroup>
</actionGroups>
