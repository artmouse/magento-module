<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSetDiscountForBundleProductActionGroup">
        <arguments>
            <argument name="productDiscount" defaultValue="amTestBundlePack.bundle_discount"/>
            <argument name="product"/>
        </arguments>
        <fillField selector="{{AdminNewBundlePacksSection.bundleProductDiscountField(product)}}"
                   userInput="{{productDiscount}}" stepKey="fillFieldBundleProductDiscount"/>
    </actionGroup>
</actionGroups>
