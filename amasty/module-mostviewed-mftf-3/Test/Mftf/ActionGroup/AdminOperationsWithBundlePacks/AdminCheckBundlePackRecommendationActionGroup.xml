<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCheckBundlePackRecommendationActionGroup">
        <arguments>
            <argument name="product"/>
        </arguments>
        <waitForPageLoad stepKey="waitForBundlePageLoad"/>
        <conditionalClick selector="{{AdminNewBundlePacksSection.recommendationButton}}"
                          dependentSelector="{{AdminNewBundlePacksSection.recommendationBlock}}" visible="false"
                          stepKey="expandRecommendationsBlock"/>
        <see selector="{{AdminNewBundlePacksSection.recommendationBlock}}" userInput="{{product}}"
             stepKey="checkRecommendation"/>
    </actionGroup>
</actionGroups>
