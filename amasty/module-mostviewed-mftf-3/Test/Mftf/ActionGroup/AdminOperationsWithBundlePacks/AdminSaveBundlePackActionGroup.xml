<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSaveBundlePackActionGroup">
        <scrollToTopOfPage stepKey="scrollToTopOfPage"/>
        <click selector="{{AdminMainActionsSection.save}}" stepKey="pressToSaveNewBundlePack"/>
        <waitForAjaxLoad stepKey="waitForAjaxLoadAfterSave"/>
        <waitForPageLoad stepKey="waitForGridLoad"/>
        <see selector="{{AdminStoresGridSection.successMessage}}" userInput="{{amastyARPMessage.bundle_saved}}"
             stepKey="checkSaveRuleMessage"/>
    </actionGroup>
</actionGroups>
