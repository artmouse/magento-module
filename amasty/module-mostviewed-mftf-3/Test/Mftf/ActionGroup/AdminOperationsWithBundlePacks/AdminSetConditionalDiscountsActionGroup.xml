<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSetConditionalDiscountsActionGroup"
                 extends="AdminSetPercentageDiscountActionGroup">
        <conditionalClick selector="{{AdminNewBundlePacksSection.tabConditionalDiscount}}"
                          dependentSelector="{{AdminNewBundlePacksSection.addNewCondition}}" visible="false"
                          stepKey="expandConditionDiscountType"/>
        <waitForPageLoad stepKey="waitForCLS"/>
        <click selector="{{AdminNewBundlePacksSection.addNewCondition}}" stepKey="addFirstCondition"/>
        <waitForElementVisible selector="{{AdminNewBundlePacksSection.numberOfItems('1')}}" stepKey="waitForMagic"/>
        <fillField selector="{{AdminNewBundlePacksSection.numberOfItems('1')}}" userInput="2"
                   stepKey="addFirstItemsCondition"/>
        <fillField selector="{{AdminNewBundlePacksSection.conditionalDiscountAmount('1')}}" userInput="5"
                   stepKey="addFirstDiscount"/>
        <click selector="{{AdminNewBundlePacksSection.addNewCondition}}" stepKey="addSecondCondition"/>
        <fillField selector="{{AdminNewBundlePacksSection.numberOfItems('2')}}" userInput="3"
                   stepKey="addSecondItemsCondition"/>
        <fillField selector="{{AdminNewBundlePacksSection.conditionalDiscountAmount('2')}}" userInput="10"
                   stepKey="addSecondDiscount"/>
    </actionGroup>
</actionGroups>
