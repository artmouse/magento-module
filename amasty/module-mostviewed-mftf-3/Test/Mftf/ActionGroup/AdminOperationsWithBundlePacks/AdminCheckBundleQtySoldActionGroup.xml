<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCheckBundleQtySoldActionGroup">
        <arguments>
            <argument name="qtySold" defaultValue="_enterQty1.qty"/>
            <argument name="columnNumber" defaultValue="number.eleven"/>
        </arguments>
        <see selector="{{AdminGridsSection.FirstRowSortedColumn(columnNumber)}}" userInput="{{qtySold}}"
             stepKey="checkFirstRow"/>
    </actionGroup>
</actionGroups>
