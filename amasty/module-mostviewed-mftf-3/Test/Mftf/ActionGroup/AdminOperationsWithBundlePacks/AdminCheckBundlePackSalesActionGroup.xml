<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCheckBundlePackSalesActionGroup">
        <arguments>
            <argument name="bundle" defaultValue="amTestBundlePack.bundle_name"/>
            <argument name="order" type="string"/>
            <argument name="price" type="string"/>
            <argument name="total" type="string"/>
            <argument name="items" type="string"/>
        </arguments>
        <see selector="{{AdminBundlePacksSalesGridSection.orderId(bundle)}}" userInput="{{order}}"
             stepKey="checkOrderId"/>
        <see selector="{{AdminBundlePacksSalesGridSection.bundlePrice(bundle)}}" userInput="{{price}}"
             stepKey="checkBundlePrice"/>
        <see selector="{{AdminBundlePacksSalesGridSection.grandTotalPurchased(bundle)}}" userInput="{{total}}"
             stepKey="checkTotal"/>
        <see selector="{{AdminBundlePacksSalesGridSection.bundleItems(bundle)}}" userInput="{{items}}"
             stepKey="checkBundleItems"/>
    </actionGroup>
</actionGroups>
