<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertNoReadQuestionButtonOnProductPageActionGroup">
        <arguments>
            <argument name="questionName" defaultValue="defaultQuestion.title"/>
            <argument name="questionAnswer" defaultValue="defaultQuestion.fullAnswer"/>
        </arguments>
        <click selector="{{StorefrontProductSection.ProductQuestionsTab}}" stepKey="openProductQuestionsTab"/>
        <conditionalClick selector="{{StorefrontCategorySection.QuestionTab(questionName)}}"
                          dependentSelector="{{StorefrontCategorySection.QuestionAnswer(questionName, questionAnswer)}}"
                          visible="false" stepKey="openQuestionTab"/>
        <waitForPageLoad stepKey="waitForQuestionTabLoad"/>
        <dontSeeElement selector="{{StorefrontProductSection.QuestionRead(questionName)}}" stepKey="assertQuestionReadButton"/>
    </actionGroup>
</actionGroups>
