<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertVoteTypeVotingOnProductPageActionGroup">
        <arguments>
            <argument name="questionName" defaultValue="ratedQuestion.title"/>
            <argument name="vote" defaultValue="positiveVoteTypeVoting"/>
        </arguments>
        <click selector="{{StorefrontProductSection.ProductQuestionsTab}}" stepKey="openProductQuestionsTab"/>
        <conditionalClick selector="{{StorefrontProductSection.QuestionTab(questionName)}}"
                          dependentSelector="{{StorefrontProductSection.RatingResult}}"
                          visible="false" stepKey="openQuestionTab"/>
        <waitForPageLoad stepKey="waitForQuestionTabLoad"/>
        <seeElement selector="{{StorefrontProductSection.UpDownVoted(vote.upDownVoted)}}" stepKey="assertUpOrDownVoted"/>
        <seeElement selector="{{StorefrontProductSection.PositiveRatingUpDown(vote.positiveRating)}}" stepKey="assertPositiveRating"/>
        <seeElement selector="{{StorefrontProductSection.PositiveRatingUpDown(vote.negativeRating)}}" stepKey="assertNegativeRating"/>
    </actionGroup>
</actionGroups>
