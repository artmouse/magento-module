<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertNoQuestionTitleOnProductPageActionGroup">
        <arguments>
            <argument name="questionTitle" defaultValue="defaultQuestion.title"/>
        </arguments>
        <click selector="{{StorefrontProductSection.ProductQuestionsTab}}" stepKey="openProductQuestionsTab"/>
        <dontSeeElement selector="{{StorefrontProductSection.QuestionTitle(questionTitle)}}" stepKey="assertQuestionTitle"/>
    </actionGroup>
</actionGroups>
