<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertQuestionTabOptionsActionGroup">
        <arguments>
            <argument name="tab" defaultValue="defQuestionTab"/>
            <argument name="questionQty"/>
        </arguments>
        <seeElement selector="{{StorefrontProductSection.ProductQuestionsTab}}" stepKey="assertTab"/>
        <see selector="{{StorefrontProductSection.ProductQuestionsTab}}" userInput="{{tab.name}}" stepKey="assertTabName"/>
        <see selector="{{StorefrontProductSection.TabPosition(tab.position)}}" userInput="{{tab.name}}" stepKey="assertTabPosition"/>
        <see selector="{{StorefrontProductSection.ProductQuestionsTab}}" userInput="{{questionQty}}" stepKey="assertQuestionQty"/>
    </actionGroup>
</actionGroups>
