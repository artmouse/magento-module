<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontOpenQuestionFromProductPageActionGroup">
        <arguments>
            <argument name="question" defaultValue="defaultQuestion.title"/>
        </arguments>
        <conditionalClick selector="{{StorefrontProductSection.QuestionTab(question)}}"
                          dependentSelector="{{StorefrontProductSection.QuestionRead(question)}}"
                          visible="false" stepKey="openQuestionTab"/>
        <waitForPageLoad stepKey="waitForQuestionTabLoad"/>
        <click selector="{{StorefrontProductSection.QuestionRead(question)}}" stepKey="openQuestion"/>
        <waitForPageLoad stepKey="waitForQuestionPageLoad"/>
    </actionGroup>
</actionGroups>
