<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertQuestionPositionOnProductByNameActionGroup">
        <arguments>
            <argument name="firstQuestion" defaultValue="firstNamePositionQuestion.title"/>
            <argument name="secondQuestion" defaultValue="secondNamePositionQuestion.title"/>
        </arguments>
        <click selector="{{StorefrontProductSection.ProductQuestionsTab}}" stepKey="openProductQuestionsTab"/>
        <seeElement selector="{{StorefrontProductSection.QuestionFirstPosition(firstQuestion)}}" stepKey="assertFirstQuestion"/>
        <seeElement selector="{{StorefrontProductSection.QuestionSecondPosition(secondQuestion)}}" stepKey="assertSecondQuestion"/>
    </actionGroup>
</actionGroups>
