<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertVoteTypeYesNoOnProductPageActionGroup">
        <arguments>
            <argument name="questionName" defaultValue="ratedQuestion.title"/>
            <argument name="vote" defaultValue="positiveVoteYesNo"/>
        </arguments>
        <click selector="{{StorefrontProductSection.ProductQuestionsTab}}" stepKey="openProductQuestionsTab"/>
        <conditionalClick selector="{{StorefrontProductSection.QuestionTab(questionName)}}"
                          dependentSelector="{{StorefrontProductSection.RatingResult}}"
                          visible="false" stepKey="openQuestionTab"/>
        <waitForPageLoad stepKey="waitForQuestionTabLoad"/>
        <seeElement selector="{{StorefrontProductSection.YesNoVoted(vote.yesNoVoted)}}" stepKey="assertYesOrNoVoted"/>
        <seeElement selector="{{StorefrontProductSection.PositiveRatingYesNo(vote.positiveRatingYesNo)}}" stepKey="assertPositiveRatingYesNo"/>
        <seeElement selector="{{StorefrontProductSection.TotalRatingYesNo(vote.totalRatingYesNo)}}" stepKey="assertTotalRatingYesNo"/>
    </actionGroup>
</actionGroups>
