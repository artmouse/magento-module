<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertQuestionPositionOnProductPageActionGroup">
        <arguments>
            <argument name="question" defaultValue="defaultQuestion"/>
        </arguments>
        <click selector="{{StorefrontProductSection.ProductQuestionsTab}}" stepKey="openProductQuestionsTab"/>
        <seeElement selector="{{StorefrontProductSection.QuestionTitlePosition(question.position, question.title)}}" stepKey="assertQuestionPosition"/>
    </actionGroup>
</actionGroups>
