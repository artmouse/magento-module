<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAttemptRateYesNoVoteAsGuestOnProductPageActionGroup">
        <arguments>
            <argument name="questionName" defaultValue="ratedQuestion.title"/>
            <argument name="vote" defaultValue="positiveVoteYesNo.voteAction"/>
        </arguments>
        <click selector="{{StorefrontProductSection.ProductQuestionsTab}}" stepKey="openProductQuestionsTab"/>
        <conditionalClick selector="{{StorefrontProductSection.QuestionTab(questionName)}}"
                          dependentSelector="{{StorefrontProductSection.RatingResult}}"
                          visible="false" stepKey="openQuestionTab"/>
        <waitForPageLoad stepKey="waitForQuestionTabLoad"/>
        <dontSeeElement selector="{{StorefrontProductSection.LoginToRateMsg(errorMessage.loginToRate)}}" stepKey="assertNoLoginToRateMsg"/>
        <click selector="{{StorefrontProductSection.VoteAction(vote)}}" stepKey="voteQuestion"/>
        <waitForElementVisible selector="{{StorefrontProductSection.LoginToRateMsg(errorMessage.loginToRate)}}" stepKey="waitForLoginToRateMsg"/>
        <seeElement selector="{{StorefrontProductSection.LoginToRateMsg(errorMessage.loginToRate)}}" stepKey="assertLoginToRateMsg"/>
    </actionGroup>
</actionGroups>
