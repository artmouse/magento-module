<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertFaqLinksActionGroup">
        <annotations>
            <description>Assert FAQ title and URL prefix in toolbar, category menu, footer</description>
        </annotations>
        <arguments>
            <argument name="setting" defaultValue="addCustomFaqLink"/>
        </arguments>
        <amOnPage url="{{StorefrontHomePage.url}}" stepKey="goToStorefrontPage"/>
        <waitForPageLoad stepKey="waitForStorefrontHomePageLoad"/>
        <seeElement selector="{{StorefrontFaqSection.FaqToolbar(setting.urlPrefix, setting.title)}}" stepKey="assertFaqInToolbar"/>
        <seeElement selector="{{StorefrontFaqSection.FaqCategoryMenu(setting.urlPrefix, setting.title)}}" stepKey="assertFaqInCategoryMenu"/>
        <seeElement selector="{{StorefrontFaqSection.FaqFooter(setting.urlPrefix, setting.title)}}" stepKey="assertFaqInFooter"/>
    </actionGroup>
</actionGroups>
