<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontVoteTypeAverageOnQuestionPageActionGroup">
        <arguments>
            <argument name="rate" defaultValue="star.four"/>
        </arguments>
        <click selector="{{StorefrontQuestionSection.AverageStar(rate)}}" stepKey="voteQuestion"/>
        <waitForPageLoad stepKey="waitForQuestionIsRated"/>
        <seeElement selector="{{StorefrontQuestionSection.RatingAverageTypeIsVoted}}" stepKey="assertQuestionIsVoted"/>
    </actionGroup>
</actionGroups>
