<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertBreadcrumbsOnQuestionPageActionGroup">
        <arguments>
            <argument name="category" defaultValue="defaultCategory.title"/>
            <argument name="question" defaultValue="defaultQuestion.title"/>
        </arguments>
        <seeElement selector="{{StorefrontQuestionSection.Breadcrumbs}}" stepKey="assertBreadcrumbs"/>
        <seeElement selector="{{StorefrontQuestionSection.CategoryInBreadcrumbs(category)}}" stepKey="assertCategoryInBreadcrumbs"/>
        <seeElement selector="{{StorefrontQuestionSection.QuestionInBreadcrumbs(question)}}" stepKey="assertQuestionInBreadcrumbs"/>
    </actionGroup>
</actionGroups>
