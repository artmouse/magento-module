<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAttemptRateYesNoVoteAsGuestOnQuestionPageActionGroup">
        <arguments>
            <argument name="vote" defaultValue="positiveVoteYesNo.voteAction"/>
        </arguments>
        <dontSeeElement selector="{{StorefrontQuestionSection.LoginToRateMsg(errorMessage.loginToRate)}}" stepKey="assertNoLoginToRateMsg"/>
        <click selector="{{StorefrontQuestionSection.VoteAction(vote)}}" stepKey="voteQuestion"/>
        <waitForElementVisible selector="{{StorefrontQuestionSection.LoginToRateMsg(errorMessage.loginToRate)}}" stepKey="waitForLoginToRateMsg"/>
        <seeElement selector="{{StorefrontQuestionSection.LoginToRateMsg(errorMessage.loginToRate)}}" stepKey="assertLoginToRateMsg"/>
    </actionGroup>
</actionGroups>
