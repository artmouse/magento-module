<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontOpenNotAvailableDirectUrlQuestionActionGroup" extends="StorefrontOpenFaqQuestionPageActionGroup">
        <arguments>
            <argument name="errorMessage" defaultValue="errorMessage.pageNotFound"/>
        </arguments>
        <dontSeeElement selector="{{StorefrontQuestionSection.QuestionTitle(question.title)}}" stepKey="assertQuestionTitle"/>
        <seeElement selector="{{StorefrontQuestionSection.QuestionTitle(errorMessage)}}" stepKey="assertErrorMsg"/>
    </actionGroup>
</actionGroups>
