<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertVoteTypeVotingOnQuestionPageActionGroup">
        <arguments>
            <argument name="vote" defaultValue="positiveVoteTypeVoting"/>
        </arguments>
        <seeElement selector="{{StorefrontQuestionSection.UpDownVoted(vote.upDownVoted)}}" stepKey="assertUpOrDownVoted"/>
        <seeElement selector="{{StorefrontQuestionSection.PositiveRatingUpDown(vote.positiveRating)}}" stepKey="assertPositiveRating"/>
        <seeElement selector="{{StorefrontQuestionSection.PositiveRatingUpDown(vote.negativeRating)}}" stepKey="assertNegativeRating"/>
    </actionGroup>
</actionGroups>
