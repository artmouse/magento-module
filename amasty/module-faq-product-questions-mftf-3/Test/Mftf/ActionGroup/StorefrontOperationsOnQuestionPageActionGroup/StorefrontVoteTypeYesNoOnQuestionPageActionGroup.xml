<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontVoteTypeYesNoOnQuestionPageActionGroup">
        <arguments>
            <argument name="vote" defaultValue="positiveVoteYesNo.voteAction"/>
        </arguments>
        <click selector="{{StorefrontQuestionSection.VoteAction(vote)}}" stepKey="voteQuestion"/>
        <waitForElement selector="{{StorefrontQuestionSection.RatingResultYesNo}}" stepKey="waitForRatingResultBlock"/>
        <seeElement selector="{{StorefrontQuestionSection.RatingResultYesNo}}" stepKey="assertRatingResultBlock"/>
    </actionGroup>
</actionGroups>
