<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontOpenFaqQuestionPageActionGroup">
        <arguments>
            <argument name="question" defaultValue="defaultQuestion"/>
        </arguments>
        <amOnPage url="{{StorefrontQuestionPage.url(question.url_key)}}" stepKey="openStorefrontQuestionPage"/>
        <waitForPageLoad stepKey="waitForStorefrontQuestionPageLoad"/>
        <seeElement selector="{{StorefrontQuestionSection.QuestionTitle(question.title)}}" stepKey="assertQuestionTitle"/>
    </actionGroup>
</actionGroups>
