<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertCategorySeoMetaInformActionGroup">
        <arguments>
            <argument name="category" defaultValue="seoCategory"/>
        </arguments>
        <seeInPageSource html="meta name=&quot;title&quot; content=&quot;{{category.metaTitle}}&quot;" stepKey="assertMetaTitleInPageSource"/>
        <seeInPageSource html="meta name=&quot;description&quot; content=&quot;{{category.metaDescription}}&quot;" stepKey="assertMetaDescriptionInPageSource"/>
        <seeInPageSource html="meta name=&quot;robots&quot; content=&quot;{{category.robots}}&quot;" stepKey="assertRobotsInPageSource"/>
    </actionGroup>
</actionGroups>
