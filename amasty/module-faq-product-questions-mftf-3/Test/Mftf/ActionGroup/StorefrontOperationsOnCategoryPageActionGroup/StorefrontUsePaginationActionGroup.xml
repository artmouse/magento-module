<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontUsePaginationActionGroup">
        <arguments>
            <argument name="pagination" defaultValue="paginationAction.next"/>
        </arguments>
        <click selector="{{StorefrontCategorySection.PageAction(pagination)}}" stepKey="openNextPaginationPage"/>
        <waitForPageLoad stepKey="waitForNextPageLoad"/>
    </actionGroup>
</actionGroups>
