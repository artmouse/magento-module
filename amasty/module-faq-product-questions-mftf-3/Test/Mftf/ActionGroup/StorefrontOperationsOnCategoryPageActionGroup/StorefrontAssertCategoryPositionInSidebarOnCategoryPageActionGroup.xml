<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertCategoryPositionInSidebarOnCategoryPageActionGroup">
        <arguments>
            <argument name="firstCategory"/>
            <argument name="secondCategory"/>
        </arguments>
        <seeElement selector="{{StorefrontCategorySection.FirstCategoryInSidebar(firstCategory)}}" stepKey="seeFirstCategoryInSidebar"/>
        <seeElement selector="{{StorefrontCategorySection.SecondCategoryInSidebar(secondCategory)}}" stepKey="seeSecondCategoryInSidebar"/>
    </actionGroup>
</actionGroups>
