<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontOpenFaqCategoryPageActionGroup">
        <arguments>
            <argument name="category" defaultValue="defaultCategory"/>
        </arguments>
        <amOnPage url="{{StorefrontCategoryPage.url(category.url_key)}}" stepKey="openStorefrontCategoryPage"/>
        <waitForPageLoad stepKey="waitForStorefrontCategoryPageLoad"/>
        <seeElement selector="{{StorefrontCategorySection.CategoryTitle(category.title)}}" stepKey="assertCategoryTitle"/>
    </actionGroup>
</actionGroups>
