<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertCategoryTitleAndDescOnCategoryPageActionGroup">
        <annotations>
            <description>Action Group Asserts Category Description, FAQ Category Title in Page Title, Sidebar, Breadcrumbs, URL</description>
        </annotations>
        <arguments>
            <argument name="category" defaultValue="defaultCategory"/>
        </arguments>
        <seeElement selector="{{StorefrontCategorySection.CategoryTitle(category.title)}}" stepKey="seeCategoryTitleInPageTitle"/>
        <seeElement selector="{{StorefrontCategorySection.OpenedCategoryInSidebar(category.title)}}" stepKey="seeCategoryTitleInSidebar"/>
        <seeElement selector="{{StorefrontCategorySection.CategoryDescription(category.description)}}" stepKey="seeCategoryDescription"/>
        <seeElement selector="{{StorefrontCategorySection.CategoryInBreadcrumbs(category.title)}}" stepKey="seeCategoryInBreadcrumbs"/>
        <seeInCurrentUrl url="{{category.url_key}}" stepKey="seeCategoryTitleInUrl"/>
    </actionGroup>
</actionGroups>
