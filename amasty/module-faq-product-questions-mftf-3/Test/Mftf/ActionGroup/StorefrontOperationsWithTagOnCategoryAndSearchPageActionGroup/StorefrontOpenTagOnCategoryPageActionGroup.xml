<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontOpenTagOnCategoryPageActionGroup">
        <arguments>
            <argument name="tag" defaultValue="defaultQuestion.defaultTag"/>
            <argument name="qty" defaultValue="tagQty.two"/>
        </arguments>
        <click selector="{{StorefrontCategorySection.Tag(tag, qty)}}" stepKey="clickTag"/>
        <waitForPageLoad stepKey="waitForSearchByTagLoad"/>
        <seeElement selector="{{StorefrontCategorySection.CurrentTag(tag, qty)}}" stepKey="seeCurrentTag"/>
    </actionGroup>
</actionGroups>
