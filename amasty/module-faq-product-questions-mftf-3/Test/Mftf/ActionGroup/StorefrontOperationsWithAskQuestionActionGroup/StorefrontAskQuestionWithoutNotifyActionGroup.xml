<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAskQuestionWithoutNotifyActionGroup">
        <arguments>
            <argument name="question" defaultValue="defaultQuestion"/>
        </arguments>
        <conditionalClick selector="{{StorefrontAskQuestionSection.AskQuestion}}" dependentSelector="{{StorefrontAskQuestionSection.Question}}"
                          visible="false" stepKey="clickAskQuestion"/>
        <fillField selector="{{StorefrontAskQuestionSection.Question}}" userInput="{{question.title}}" stepKey="fillQuestion"/>
        <fillField selector="{{StorefrontAskQuestionSection.Name}}" userInput="{{question.name}}" stepKey="fillSenderName"/>
        <click selector="{{StorefrontAskQuestionSection.SendQuestion}}" stepKey="sendQuestion"/>
        <waitForPageLoad stepKey="waitForSendQuestion"/>
        <seeElement selector="{{StorefrontAskQuestionSection.SuccessMessage(successMessage.sentQuestion)}}" stepKey="seeQuestionIsSent"/>
    </actionGroup>
</actionGroups>
