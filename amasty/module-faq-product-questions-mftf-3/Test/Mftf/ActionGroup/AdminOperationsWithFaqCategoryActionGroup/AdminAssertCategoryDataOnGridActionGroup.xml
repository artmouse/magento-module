<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminAssertCategoryDataOnGridActionGroup">
        <arguments>
            <argument name="cell" defaultValue="categoryGrid"/>
            <argument name="cellData" defaultValue="editedCategory"/>
        </arguments>
        <see selector="{{AdminCategoryGridSection.Cell(cell.title)}}" userInput="{{cellData.title}}" stepKey="assertCategoryTitle"/>
        <see selector="{{AdminCategoryGridSection.Cell(cell.urlKey)}}" userInput="{{cellData.url_key}}" stepKey="assertCategoryUrlKey"/>
        <see selector="{{AdminCategoryGridSection.Cell(cell.status)}}" userInput="{{cellData.status}}" stepKey="assertCategoryStatus"/>
        <see selector="{{AdminCategoryGridSection.Cell(cell.position)}}" userInput="{{cellData.position}}" stepKey="assertCategoryPosition"/>
    </actionGroup>
</actionGroups>
