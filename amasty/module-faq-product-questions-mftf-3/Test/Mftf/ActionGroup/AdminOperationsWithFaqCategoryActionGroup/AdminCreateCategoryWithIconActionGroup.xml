<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminCreateCategoryWithIconActionGroup" extends="AdminCreateCategoryActionGroup">
        <attachFile selector="{{AdminCategorySection.Icon}}" userInput="{{category.icon}}" after="fillPosition" stepKey="uploadIcon"/>
        <waitForPageLoad after="uploadIcon" stepKey="waitForImageLoad"/>
        <waitForElementVisible selector="{{AdminCategorySection.FileName(category.iconFileName)}}" after="waitForImageLoad" stepKey="waitForFileName"/>
    </actionGroup>
</actionGroups>
