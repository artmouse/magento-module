<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminFindCategoryOnGridActionGroup">
        <arguments>
            <argument name="categoryTitle" defaultValue="defaultCategory.title"/>
            <argument name="qtyRecordsFound" defaultValue="qtyRecordFound.1_record"/>
        </arguments>
        <amOnPage url="{{AdminCategoryGridPage.url}}" stepKey="openFaqCategoryGrid"/>
        <waitForPageLoad stepKey="waitForFaqCategoryGridLoad"/>
        <conditionalClick selector="{{AdminCategoryGridSection.ClearAllFilters}}" dependentSelector="{{AdminCategoryGridSection.ActiveFilters}}"
                          visible="true" stepKey="clearAllFilters"/>
        <waitForPageLoad stepKey="waitForCLearFilterDataLoad"/>
        <conditionalClick selector="{{AdminCategoryGridSection.FiltersButton}}" dependentSelector="{{AdminCategoryGridSection.ApplyFilter}}"
                          visible="false" stepKey="openFilter"/>
        <fillField selector="{{AdminCategoryGridSection.CategoryTitle}}" userInput="{{categoryTitle}}" stepKey="fillCategoryTitle"/>
        <click selector="{{AdminCategoryGridSection.ApplyFilter}}" stepKey="applyFilter"/>
        <waitForPageLoad stepKey="waitForFilteredDataLoad"/>
        <seeElement selector="{{AdminCategoryGridSection.RecordsFoundMessage(qtyRecordsFound)}}" stepKey="seeCorrectQtyRecordsFound"/>
    </actionGroup>
</actionGroups>
