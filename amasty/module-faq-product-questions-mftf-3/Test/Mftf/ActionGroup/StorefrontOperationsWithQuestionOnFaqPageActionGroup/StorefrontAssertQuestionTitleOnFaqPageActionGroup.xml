<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertQuestionTitleOnFaqPageActionGroup">
        <arguments>
            <argument name="categoryTitle" defaultValue="defaultCategory.title"/>
            <argument name="questionTitle" defaultValue="defaultQuestion.title"/>
        </arguments>
        <seeElement selector="{{StorefrontFaqSection.QuestionTitle(categoryTitle,questionTitle)}}" stepKey="assertQuestionTitle"/>
    </actionGroup>
</actionGroups>
