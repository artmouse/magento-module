<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontOpenQuestionFromFaqPageActionGroup">
        <arguments>
            <argument name="categoryName" defaultValue="defaultCategory.title"/>
            <argument name="questionName" defaultValue="defaultQuestion.title"/>
            <argument name="questionAnswer" defaultValue="defaultQuestion.shortAnswer"/>
        </arguments>
        <conditionalClick selector="{{StorefrontFaqSection.QuestionTab(categoryName, questionName)}}"
                          dependentSelector="{{StorefrontFaqSection.QuestionAnswer(questionName, questionAnswer)}}"
                          visible="false" stepKey="openQuestionTab"/>
        <waitForPageLoad stepKey="waitForQuestionTabLoad"/>
        <click selector="{{StorefrontFaqSection.QuestionRead(questionName)}}" stepKey="openQuestion"/>
        <waitForPageLoad stepKey="waitForQuestionPageLoad"/>
    </actionGroup>
</actionGroups>
