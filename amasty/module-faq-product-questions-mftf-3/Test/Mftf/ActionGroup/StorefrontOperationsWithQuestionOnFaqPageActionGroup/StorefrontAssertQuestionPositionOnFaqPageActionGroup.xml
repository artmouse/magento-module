<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertQuestionPositionOnFaqPageActionGroup">
        <arguments>
            <argument name="category" defaultValue="defaultCategory.title"/>
            <argument name="question" defaultValue="defaultQuestion"/>
        </arguments>
        <seeElement selector="{{StorefrontFaqSection.QuestionTitlePosition(category, question.position, question.title)}}" stepKey="assertCategoryPosition"/>
    </actionGroup>
</actionGroups>
