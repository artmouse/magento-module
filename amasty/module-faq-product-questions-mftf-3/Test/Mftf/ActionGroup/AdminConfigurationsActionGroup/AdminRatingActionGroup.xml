<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminRatingActionGroup" extends="AdminDisableRatingActionGroup">
        <arguments>
            <argument name="setting" defaultValue="defRating"/>
        </arguments>
        <selectOption selector="{{AdminFaqConfigurationSection.RatingType}}" userInput="{{setting.type}}"
                      after="setRating" stepKey="setRatingType"/>
        <selectOption selector="{{AdminFaqConfigurationSection.AllowRatingForGuests}}" userInput="{{setting.allowForGuest}}"
                      after="setRatingType" stepKey="setAllowRatingForGuests"/>
    </actionGroup>
</actionGroups>
