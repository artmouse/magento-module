<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminFaqProductPageActionGroup">
        <arguments>
            <argument name="setting" defaultValue="defQuestionTab"/>
        </arguments>
        <amOnPage url="{{AdminFaqConfigurationPage.url}}" stepKey="openConfigurationPage"/>
        <waitForPageLoad stepKey="waitForConfigurationPageLoad"/>
        <conditionalClick selector="{{AdminFaqConfigurationSection.ProductPageTab}}" dependentSelector="{{AdminFaqConfigurationSection.ShowProductQuestionsTab}}"
                          visible="false" stepKey="openProductPageTab"/>
        <selectOption selector="{{AdminFaqConfigurationSection.ShowProductQuestionsTab}}" userInput="{{setting.showTab}}"
                      stepKey="setShowProductQuestionsTab"/>
        <fillField selector="{{AdminFaqConfigurationSection.ProductQuestionsTabName}}" userInput="{{setting.nameConfig}}"
                   stepKey="fillProductQuestionsTabName"/>
        <fillField selector="{{AdminFaqConfigurationSection.ProductQuestionsTabPosition}}" userInput="{{setting.positionConfig}}"
                   stepKey="fillProductQuestionsTabPosition"/>
        <selectOption selector="{{AdminFaqConfigurationSection.ShowAskQuestionButtonProdPage}}" userInput="{{setting.showAskQuestionButton}}"
                      stepKey="setShowAskQuestionButton"/>
        <fillField selector="{{AdminFaqConfigurationSection.LimitQuestionsNumber}}" userInput="{{setting.limitQuestions}}"
                   stepKey="fillLimitQuestionsNumber"/>
        <selectOption selector="{{AdminFaqConfigurationSection.ShortAnswerBehaviorProdPage}}" userInput="{{setting.shortAnswer}}"
                      stepKey="setShortAnswerBehavior"/>
        <click selector="{{AdminFaqConfigurationSection.SaveConfig}}" stepKey="saveConfig"/>
        <waitForPageLoad stepKey="waitForConfigSave"/>
        <conditionalClick selector="{{AdminFaqConfigurationSection.ProductPageTab}}" dependentSelector="{{AdminFaqConfigurationSection.ShowProductQuestionsTab}}"
                          visible="true" stepKey="closeProductPageTab"/>
        <magentoCLI command="cache:flush" arguments="config" stepKey="flushCache"/>
    </actionGroup>
</actionGroups>
