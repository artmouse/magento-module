<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminAverageRatingActionGroup" extends="AdminDisableRatingActionGroup">
        <arguments>
            <argument name="setting" defaultValue="averageNotHideZero"/>
        </arguments>
        <selectOption selector="{{AdminFaqConfigurationSection.RatingType}}" userInput="{{setting.type}}"
                      after="setRating" stepKey="setRatingType"/>
        <selectOption selector="{{AdminFaqConfigurationSection.HideZeroTotalRating}}" userInput="{{setting.hideZeroTotal}}"
                      after="setRatingType" stepKey="setHideZeroTotalRating"/>
        <selectOption selector="{{AdminFaqConfigurationSection.AllowRatingForGuests}}" userInput="{{setting.allowForGuest}}"
                      after="setHideZeroTotalRating" stepKey="setAllowRatingForGuests"/>
    </actionGroup>
</actionGroups>
