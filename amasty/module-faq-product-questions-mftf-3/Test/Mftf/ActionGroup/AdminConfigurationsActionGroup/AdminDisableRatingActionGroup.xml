<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminDisableRatingActionGroup">
        <arguments>
            <argument name="setting" defaultValue="disableRating"/>
        </arguments>
        <amOnPage url="{{AdminFaqConfigurationPage.url}}" stepKey="openConfigurationPage"/>
        <waitForPageLoad stepKey="waitForConfigurationPageLoad"/>
        <conditionalClick selector="{{AdminFaqConfigurationSection.RatingTab}}" dependentSelector="{{AdminFaqConfigurationSection.EnableRating}}"
                          visible="false" stepKey="openRatingTab"/>
        <selectOption selector="{{AdminFaqConfigurationSection.EnableRating}}" userInput="{{setting.isEnabled}}"
                      stepKey="setRating"/>
        <click selector="{{AdminFaqConfigurationSection.SaveConfig}}" stepKey="saveConfig"/>
        <waitForPageLoad stepKey="waitForConfigSave"/>
        <conditionalClick selector="{{AdminFaqConfigurationSection.RatingTab}}" dependentSelector="{{AdminFaqConfigurationSection.EnableRating}}"
                          visible="true" stepKey="closeRatingTab"/>
        <magentoCLI command="cache:flush" arguments="config" stepKey="flushCache"/>
    </actionGroup>
</actionGroups>
