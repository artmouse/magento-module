<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertErrorOnFaqPageActionGroup">
        <arguments>
            <argument name="error" defaultValue="errorMessage.isNotAvailableForStoreView"/>
        </arguments>
        <waitForElementVisible selector="{{StorefrontFaqSection.ErrorMessage(error)}}" stepKey="assertErrorMessage"/>
    </actionGroup>
</actionGroups>
