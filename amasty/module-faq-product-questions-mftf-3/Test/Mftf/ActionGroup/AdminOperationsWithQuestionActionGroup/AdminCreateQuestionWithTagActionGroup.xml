<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminCreateQuestionWithTagActionGroup" extends="AdminCreateQuestionActionGroup">
        <fillField selector="{{AdminQuestionSection.Tags}}" userInput="{{question.defaultTag}}"
                   after="selectVisibility" stepKey="fillDefaultTag"/>
        <pressKey selector="{{AdminQuestionSection.Tags}}" parameterArray="[\Facebook\WebDriver\WebDriverKeys::ENTER]"
                  after="fillDefaultTag" stepKey="addFirstTag"/>
        <fillField selector="{{AdminQuestionSection.Tags}}" userInput="{{question.customTag}}"
                   after="addFirstTag" stepKey="fillCustomTag"/>
        <pressKey selector="{{AdminQuestionSection.Tags}}" parameterArray="[\Facebook\WebDriver\WebDriverKeys::ENTER]"
                  after="fillCustomTag" stepKey="addSecondTag"/>
    </actionGroup>
</actionGroups>
