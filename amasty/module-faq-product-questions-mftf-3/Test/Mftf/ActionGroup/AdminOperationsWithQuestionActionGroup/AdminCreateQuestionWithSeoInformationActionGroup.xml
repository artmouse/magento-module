<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminCreateQuestionWithSeoInformationActionGroup" extends="AdminCreateQuestionActionGroup">
        <arguments>
            <argument name="question" defaultValue="seoQuestion"/>
            <argument name="storeView" defaultValue="defaultQuestion.storeView"/>
        </arguments>
        <conditionalClick selector="{{AdminQuestionSection.SeoTab}}"
                          dependentSelector="{{AdminQuestionSection.MetaTitle}}"
                          after="selectVisibility" visible="false" stepKey="openSeoTab"/>
        <fillField selector="{{AdminQuestionSection.MetaTitle}}" userInput="{{question.metaTitle}}" after="openSeoTab" stepKey="fillMetaTitle"/>
        <fillField selector="{{AdminQuestionSection.MetaDescription}}" userInput="{{question.metaDescription}}" after="fillMetaTitle" stepKey="fillMetaDescription"/>
        <conditionalClick selector="{{AdminQuestionSection.Noindex}}"
                          dependentSelector="{{AdminQuestionSection.NoindexEnabled(question.noindex)}}"
                          visible="false" after="fillMetaDescription" stepKey="setIndex"/>
        <conditionalClick selector="{{AdminQuestionSection.Nofollow}}"
                          dependentSelector="{{AdminQuestionSection.NofollowEnabled(question.noFollow)}}"
                          visible="false" after="setIndex" stepKey="setFollow"/>
    </actionGroup>
</actionGroups>
