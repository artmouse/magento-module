<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminAssertProductInQuestionAskedOnFrontActionGroup">
        <annotations>
            <description>Assert FAQ Question created on Storefront</description>
        </annotations>
        <arguments>
            <argument name="productName"/>
        </arguments>
        <conditionalClick selector="{{AdminQuestionSection.ProductsTab}}" dependentSelector="{{AdminQuestionSection.AddProducts}}"
                          visible="false" stepKey="openProductsTab"/>
        <see selector="{{AdminQuestionSection.ProductCell(productGridOnQuestion.name)}}" userInput="{{productName}}" stepKey="assertProductName"/>
    </actionGroup>
</actionGroups>
