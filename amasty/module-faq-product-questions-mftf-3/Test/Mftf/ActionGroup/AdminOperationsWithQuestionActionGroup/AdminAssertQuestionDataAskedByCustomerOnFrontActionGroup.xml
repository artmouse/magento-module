<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminAssertQuestionDataAskedByCustomerOnFrontActionGroup" extends="AdminAssertQuestionDataAskedByGuestOnFrontActionGroup">
        <annotations>
            <description>Assert FAQ Question created by Logged In customer on Storefront</description>
        </annotations>
        <arguments>
            <argument name="question"/>
            <argument name="customer"/>
        </arguments>
        <seeInField selector="{{AdminQuestionSection.SenderName}}" userInput="{{customer.firstName}}" stepKey="seeSenderName"/>
        <seeInField selector="{{AdminQuestionSection.SenderEmail}}" userInput="{{customer.email}}" stepKey="seeSenderEmail"/>
    </actionGroup>
</actionGroups>
