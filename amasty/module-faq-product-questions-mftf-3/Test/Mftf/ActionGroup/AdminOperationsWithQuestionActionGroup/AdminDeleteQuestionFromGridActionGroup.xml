<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminDeleteQuestionFromGridActionGroup" extends="AdminFindQuestionOnGridActionGroup">
        <checkOption selector="{{AdminCategoryGridSection.FirstRowCheckbox}}" stepKey="checkQuestion"/>
        <click selector="{{AdminCategoryGridSection.MassActions}}" stepKey="clickMassActionsButton"/>
        <click selector="{{AdminCategoryGridSection.DeleteMassAction}}" stepKey="clickDeleteMassActionButton"/>
        <waitForPageLoad stepKey="waitForAcceptDeleteQuestionButton"/>
        <click selector="{{AdminCategoryGridSection.AcceptDeleteButton}}" stepKey="acceptDeleteQuestionButton"/>
        <waitForPageLoad stepKey="waitForDeleteQuestion"/>
        <seeElement selector="{{AdminCategoryGridSection.SuccessfullyRemovedMsg(qtyRecordsFound)}}" stepKey="seeQuestionRemovedMessage"/>
    </actionGroup>
</actionGroups>
