<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminInlineEditQuestionOnGridActionGroup">
        <arguments>
            <argument name="cell" defaultValue="questionGrid"/>
            <argument name="cellData" defaultValue="editedQuestion"/>
        </arguments>
        <click selector="{{AdminQuestionGridSection.FirstRow}}" stepKey="activateInlineEdit"/>
        <waitForElementVisible selector="{{AdminQuestionGridSection.SaveCell}}" stepKey="waitForSaveCell"/>
        <fillField selector="{{AdminQuestionGridSection.CellInput(cell.question)}}" userInput="{{cellData.title}}" stepKey="fillTitle"/>
        <waitForAjaxLoad stepKey="waitForFilledTitle"/>
        <fillField selector="{{AdminQuestionGridSection.CellInput(cell.urlKey)}}" userInput="{{cellData.url_key}}" stepKey="fillUrlKey"/>
        <waitForAjaxLoad stepKey="waitForFilledUrlKey"/>
        <fillField selector="{{AdminQuestionGridSection.CellInput(cell.senderEmail)}}" userInput="{{cellData.email}}" stepKey="fillSenderEmail"/>
        <waitForAjaxLoad stepKey="waitForFilledSenderEmail"/>
        <selectOption selector="{{AdminQuestionGridSection.CellSelect(cell.status)}}" userInput="{{cellData.isEnabled}}" stepKey="selectStatus"/>
        <waitForAjaxLoad stepKey="waitForFilledStatus"/>
        <selectOption selector="{{AdminQuestionGridSection.CellSelect(cell.visibility)}}" userInput="{{cellData.isPublic}}" stepKey="selectVisibility"/>
        <waitForAjaxLoad stepKey="waitForFilledVisibility"/>
        <fillField selector="{{AdminQuestionGridSection.CellInput(cell.position)}}" userInput="{{cellData.position}}" stepKey="fillPosition"/>
        <waitForAjaxLoad stepKey="waitForFilledPosition"/>
        <!--problem with load page after save question-->
        <click selector="{{AdminQuestionGridSection.SaveCell}}" stepKey="saveQuestion"/>
        <reloadPage stepKey="reloadPage"/>
        <waitForPageLoad stepKey="waitForReload"/>
    </actionGroup>
</actionGroups>
