<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminFindQuestionOnGridActionGroup">
        <arguments>
            <argument name="questionTitle" defaultValue="defaultQuestion.title"/>
            <argument name="qtyRecordsFound" defaultValue="qtyRecordFound.1_record"/>
        </arguments>
        <amOnPage url="{{AdminQuestionGridPage.url}}" stepKey="openFaqQuestionGrid"/>
        <waitForPageLoad stepKey="waitForFaqQuestionGridLoad"/>
        <conditionalClick selector="{{AdminQuestionGridSection.ClearAllFilters}}" dependentSelector="{{AdminQuestionGridSection.ActiveFilters}}"
                          visible="true" stepKey="clearAllFilters"/>
        <waitForPageLoad stepKey="waitForCLearFilterDataLoad"/>
        <conditionalClick selector="{{AdminQuestionGridSection.FiltersButton}}" dependentSelector="{{AdminQuestionGridSection.ApplyFilter}}"
                          visible="false" stepKey="openFilter"/>
        <fillField selector="{{AdminQuestionGridSection.QuestionTitle}}" userInput="{{questionTitle}}" stepKey="fillQuestionTitle"/>
        <click selector="{{AdminQuestionGridSection.ApplyFilter}}" stepKey="applyFilter"/>
        <waitForPageLoad stepKey="waitForFilteredDataLoad"/>
        <seeElement selector="{{AdminQuestionGridSection.RecordsFoundMessage(qtyRecordsFound)}}" stepKey="seeCorrectQtyRecordsFound"/>
    </actionGroup>
</actionGroups>
