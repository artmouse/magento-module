<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminAssertQuestionDataActionGroup">
        <annotations>
            <description>Assert FAQ Question created using API</description>
        </annotations>
        <arguments>
            <argument name="question"/>
            <argument name="questionData" defaultValue="apiFaqQuestionData"/>
            <argument name="categoryTitle"/>
            <argument name="productName"/>
        </arguments>
        <seeInField selector="{{AdminQuestionSection.Question}}" userInput="{{question.title}}" stepKey="seeQuestionName"/>
        <seeOptionIsSelected selector="{{AdminQuestionSection.DontShowDirectUrl}}" userInput="{{questionData.show_full_answer}}" stepKey="seeDontShowDirectUrl"/>
        <seeInField selector="{{AdminQuestionSection.UrlKey}}" userInput="{{question.url_key}}" stepKey="seeUrlKey"/>
        <seeOptionIsSelected selector="{{AdminQuestionSection.StoreViews}}" userInput="{{questionData.store}}" stepKey="seeStore"/>
        <seeOptionIsSelected selector="{{AdminQuestionSection.CustomerGroups}}" userInput="{{questionData.customerGroup}}" stepKey="seeCustomerGroup"/>
        <seeInField selector="{{AdminQuestionSection.ShortAnswer}}" userInput="{{question.short_answer}}" stepKey="seeShortAnswer"/>
        <seeInField selector="{{AdminQuestionSection.FullAnswer}}" userInput="{{question.answer}}" stepKey="seeFullAnswer"/>
        <seeOptionIsSelected selector="{{AdminQuestionSection.Status}}" userInput="{{questionData.status}}" stepKey="seeStatus"/>
        <seeOptionIsSelected selector="{{AdminQuestionSection.Visibility}}" userInput="{{questionData.visibility}}" stepKey="seeVisibility"/>
        <seeInField selector="{{AdminQuestionSection.PositiveRating}}" userInput="{{question.positive_rating}}" stepKey="seePositiveRating"/>
        <seeInField selector="{{AdminQuestionSection.NegativeRating}}" userInput="{{question.negative_rating}}" stepKey="seeNegativeRating"/>
        <seeInField selector="{{AdminQuestionSection.Position}}" userInput="{{question.position}}" stepKey="seePosition"/>
        <conditionalClick selector="{{AdminQuestionSection.SeoTab}}" dependentSelector="{{AdminQuestionSection.MetaTitle}}"
                          visible="false" stepKey="openSeoTab"/>
        <seeInField selector="{{AdminQuestionSection.MetaTitle}}" userInput="{{question.meta_title}}" stepKey="seeMetaTitle"/>
        <seeInField selector="{{AdminQuestionSection.MetaDescription}}" userInput="{{question.meta_description}}" stepKey="seeMetaDescription"/>
        <conditionalClick selector="{{AdminQuestionSection.CustomerInfoTab}}" dependentSelector="{{AdminQuestionSection.SenderName}}"
                          visible="false" stepKey="openCustomerInfoTab"/>
        <seeInField selector="{{AdminQuestionSection.SenderName}}" userInput="{{question.name}}" stepKey="seeSenderName"/>
        <seeInField selector="{{AdminQuestionSection.SenderEmail}}" userInput="{{question.email}}" stepKey="seeSenderEmail"/>
        <conditionalClick selector="{{AdminQuestionSection.CategoriesTab}}" dependentSelector="{{AdminQuestionSection.AskedIn}}"
                          visible="false" stepKey="openCategoriesTab"/>
        <seeOptionIsSelected selector="{{AdminQuestionSection.AskedIn}}" userInput="{{categoryTitle}}" stepKey="seeCategory"/>
        <conditionalClick selector="{{AdminQuestionSection.ProductsTab}}" dependentSelector="{{AdminQuestionSection.AddProducts}}"
                          visible="false" stepKey="openProductsTab"/>
        <see selector="{{AdminQuestionSection.ProductCell(productGridOnQuestion.name)}}" userInput="{{productName}}" stepKey="seeProductName"/>
    </actionGroup>
</actionGroups>
