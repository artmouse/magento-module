<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminAssertImportedQuestionDataActionGroup">
        <annotations>
            <description>Assert FAQ imported Question</description>
        </annotations>
        <arguments>
            <argument name="question" defaultValue="importQuestion"/>
        </arguments>
        <seeInField selector="{{AdminQuestionSection.Question}}" userInput="{{question.title}}" stepKey="seeQuestionName"/>
        <seeInField selector="{{AdminQuestionSection.UrlKey}}" userInput="{{question.url_key}}" stepKey="seeUrlKey"/>
        <seeOptionIsSelected selector="{{AdminQuestionSection.StoreViews}}" userInput="{{question.stores}}" stepKey="seeStore"/>
        <seeInField selector="{{AdminQuestionSection.ShortAnswer}}" userInput="{{question.short_answer}}" stepKey="seeShortAnswer"/>
        <seeInField selector="{{AdminQuestionSection.FullAnswer}}" userInput="{{question.answer}}" stepKey="seeFullAnswer"/>
        <seeOptionIsSelected selector="{{AdminQuestionSection.Status}}" userInput="{{question.status}}" stepKey="seeStatus"/>
        <seeOptionIsSelected selector="{{AdminQuestionSection.Visibility}}" userInput="{{question.visibility}}" stepKey="seeVisibility"/>
        <seeInField selector="{{AdminQuestionSection.Position}}" userInput="{{question.position}}" stepKey="seePosition"/>
        <conditionalClick selector="{{AdminQuestionSection.SeoTab}}" dependentSelector="{{AdminQuestionSection.MetaTitle}}"
                          visible="false" stepKey="openSeoTab"/>
        <seeInField selector="{{AdminQuestionSection.MetaTitle}}" userInput="{{question.meta_title}}" stepKey="seeMetaTitle"/>
        <seeInField selector="{{AdminQuestionSection.MetaDescription}}" userInput="{{question.meta_description}}" stepKey="seeMetaDescription"/>
        <conditionalClick selector="{{AdminQuestionSection.CustomerInfoTab}}" dependentSelector="{{AdminQuestionSection.SenderName}}"
                          visible="false" stepKey="openCustomerInfoTab"/>
        <seeInField selector="{{AdminQuestionSection.SenderName}}" userInput="{{question.name}}" stepKey="seeSenderName"/>
        <seeInField selector="{{AdminQuestionSection.SenderEmail}}" userInput="{{question.email}}" stepKey="seeSenderEmail"/>
    </actionGroup>
</actionGroups>
