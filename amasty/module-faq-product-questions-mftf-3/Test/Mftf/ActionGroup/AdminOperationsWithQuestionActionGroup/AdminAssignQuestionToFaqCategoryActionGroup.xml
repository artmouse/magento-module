<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminAssignQuestionToFaqCategoryActionGroup">
        <arguments>
            <argument name="category" defaultValue="defaultCategory.title"/>
        </arguments>
        <click selector="{{AdminQuestionSection.CategoriesTab}}" stepKey="openCategoriesTab"/>
        <waitForPageLoad stepKey="waitForCategoriesTabLoad"/>
        <click selector="{{AdminQuestionSection.AskedInOption(category)}}" stepKey="setCategory"/>
        <click selector="{{AdminQuestionSection.SaveAndContinueEdit}}" stepKey="saveAndContinueEdit"/>
        <seeElement selector="{{AdminQuestionSection.SaveSuccessMsg}}" stepKey="seeSaveSuccessMsg"/>
        <waitForPageLoad stepKey="waitForQuestionSaved"/>
    </actionGroup>
</actionGroups>
