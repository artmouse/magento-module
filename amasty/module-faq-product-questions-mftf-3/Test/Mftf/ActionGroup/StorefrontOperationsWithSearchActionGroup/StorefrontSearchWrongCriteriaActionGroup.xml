<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontSearchWrongCriteriaActionGroup">
        <arguments>
            <argument name="question"/>
        </arguments>
        <fillField selector="{{StorefrontSearchSection.SearchField}}" userInput="{{question.wrongSearchCriteria}}" stepKey="fillSearchField"/>
        <waitForAjaxLoad stepKey="waitForResultLoad"/>
        <dontSeeElement selector="{{StorefrontSearchSection.ResultSelect(question.title)}}" stepKey="dontSeeResultInSelect"/>
    </actionGroup>
</actionGroups>
