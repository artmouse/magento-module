<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontSearchActionGroup">
        <arguments>
            <argument name="searchCriteria"/>
        </arguments>
        <fillField selector="{{StorefrontSearchSection.SearchField}}" userInput="{{searchCriteria}}" stepKey="fillSearchField"/>
        <pressKey selector="{{StorefrontSearchSection.SearchField}}" parameterArray="[\Facebook\WebDriver\WebDriverKeys::ENTER]" stepKey="search"/>
        <waitForPageLoad stepKey="waitForSearchResult"/>
        <seeElement selector="{{StorefrontSearchSection.SearchResult(searchCriteria)}}" stepKey="seeSearchResultHeader"/>
    </actionGroup>
</actionGroups>
