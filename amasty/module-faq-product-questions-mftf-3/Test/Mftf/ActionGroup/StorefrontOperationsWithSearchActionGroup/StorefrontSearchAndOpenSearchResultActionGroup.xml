<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontSearchAndOpenSearchResultActionGroup">
        <arguments>
            <argument name="question"/>
        </arguments>
        <fillField selector="{{StorefrontSearchSection.SearchField}}" userInput="{{question.searchCriteria}}" stepKey="fillSearchField"/>
        <waitForAjaxLoad stepKey="waitForResultLoad"/>
        <click selector="{{StorefrontSearchSection.ResultSelect(question.title)}}" stepKey="selectResult"/>
        <waitForPageLoad stepKey="waitForQuestionLoad"/>
        <seeElement selector="{{StorefrontQuestionSection.QuestionTitle(question.title)}}" stepKey="seeQuestionTitleInPageTitle"/>
    </actionGroup>
</actionGroups>
