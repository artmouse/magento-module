<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminCreateFaqSearchBoxWidgetActionGroup" extends="AdminCreateWidgetActionGroup">
        <fillField selector="{{AdminAmWidgetSection.SearchBoxWidth}}" userInput="{{widget.boxWidth}}" stepKey="fillSearchBoxWidth"/>
        <click selector="{{AdminMainActionsSection.save}}" stepKey="clickSaveWidget"/>
        <waitForPageLoad stepKey="waitForWidgetSave"/>
        <see selector="{{AdminMessagesSection.success}}" userInput="{{successMessage.widgetSaved}}" stepKey="seeSuccessMessage"/>
        <magentoCLI command="cache:flush" stepKey="flushCache"/>
    </actionGroup>
</actionGroups>
