<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminCreateFaqWidgetActionGroup" extends="AdminCreateWidgetActionGroup">
        <remove keyForRemoval="scrollToTopOfPage"/>
        <remove keyForRemoval="clickWidgetOptions"/>
        <click selector="{{AdminMainActionsSection.save}}" after="waitForPageLoad"  stepKey="clickSaveWidget"/>
        <waitForPageLoad after="clickSaveWidget" stepKey="waitForWidgetSave"/>
        <see selector="{{AdminMessagesSection.success}}" after="clickSaveWidget" userInput="{{successMessage.widgetSaved}}" stepKey="seeSuccessMessage"/>
        <magentoCLI command="cache:flush" after="seeSuccessMessage" stepKey="flushCache"/>
    </actionGroup>
</actionGroups>
