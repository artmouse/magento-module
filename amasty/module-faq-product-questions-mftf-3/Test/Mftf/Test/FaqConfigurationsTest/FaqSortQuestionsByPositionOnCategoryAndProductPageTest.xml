<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqSortQuestionsByPositionOnCategoryAndProductPageTest">
        <annotations>
            <features value="Sort Questions By"/>
            <stories value="Sort Questions By Position"/>
            <title value="Assert Question Are Sorted By Position on Category Page, Added Product And Category Product"/>
            <description value="Assert Question Are Sorted By Position on Category Page, Added Product And Category Product"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-43"/>
            <group value="AmFaq"/>
            <group value="AmFaqQuestion"/>
            <group value="AmFaqConfigurations"/>
        </annotations>

        <before>
            <createData entity="SimpleSubCategory" stepKey="firstCategory"/>
            <createData entity="SimpleProductByFusionBackpack" stepKey="firstProduct">
                <requiredEntity createDataKey="firstCategory"/>
            </createData>
            <createData entity="SimpleSubCategory" stepKey="secondCategory"/>
            <createData entity="SimpleProductByDrivenBackpack" stepKey="secondProduct">
                <requiredEntity createDataKey="secondCategory"/>
            </createData>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminCreateCategoryActionGroup" stepKey="createCategory"/>
            <actionGroup ref="AdminCreateQuestionWithPositionActionGroup" stepKey="createSecondPositionQuestion">
                <argument name="question" value="secondPositionQuestion"/>
            </actionGroup>
            <actionGroup ref="AdminAssignQuestionToFaqCategoryActionGroup" stepKey="assignSecondPositionQuestionToCategory"/>
            <actionGroup ref="AdminAssignProductToQuestionActionGroup" stepKey="assignFirstProductToSecondPositionQuestion">
                <argument name="productName" value="$$firstProduct.product[name]$$"/>
            </actionGroup>
            <actionGroup ref="AdminAssignCategoryToQuestionActionGroup" stepKey="assignSecondCategoryToSecondPositionQuestion">
                <argument name="categoryName" value="$$secondCategory.name$$"/>
            </actionGroup>
            <actionGroup ref="AdminCreateQuestionWithPositionActionGroup" stepKey="createFirstPositionQuestion"/>
            <actionGroup ref="AdminAssignQuestionToFaqCategoryActionGroup" stepKey="assignDefQuestionToCategory"/>
            <actionGroup ref="AdminAssignProductToQuestionActionGroup" stepKey="assignFirstProductToQuestion">
                <argument name="productName" value="$$firstProduct.product[name]$$"/>
            </actionGroup>
            <actionGroup ref="AdminAssignCategoryToQuestionActionGroup" stepKey="assignSecondCategoryToQuestion">
                <argument name="categoryName" value="$$secondCategory.name$$"/>
            </actionGroup>
            <actionGroup ref="AdminFaqSearchNavigationSortingActionGroup" stepKey="setSortQuestionBy"/>
        </before>
        <after>
            <deleteData createDataKey="firstProduct" stepKey="deleteFirstProduct"/>
            <deleteData createDataKey="secondProduct" stepKey="deleteSecondProduct"/>
            <deleteData createDataKey="firstCategory" stepKey="deleteFirstCategory"/>
            <actionGroup ref="AdminDeleteQuestionFromGridActionGroup" stepKey="deleteSecondPositionQuestionOnGrid">
                <argument name="questionTitle" value="secondPositionQuestion.title"/>
            </actionGroup>
            <deleteData createDataKey="secondCategory" stepKey="deleteSecondCategory"/>
            <actionGroup ref="AdminDeleteQuestionFromGridActionGroup" stepKey="deleteQuestionOnGrid"/>
            <actionGroup ref="AdminDeleteCategoryFromGridActionGroup" stepKey="deleteCategoryOnGrid"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openDefCategoryPage"/>
        <actionGroup ref="StorefrontAssertQuestionPositionOnCategoryPageActionGroup" stepKey="assertDefQuestionPositionOnCategoryPage"/>
        <actionGroup ref="StorefrontAssertQuestionPositionOnCategoryPageActionGroup" stepKey="assertSecondQuestionPositionOnCategoryPage">
            <argument name="question" value="secondPositionQuestion"/>
        </actionGroup>
        <!--assert question on added product-->
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openFirstProductPage">
            <argument name="productUrl" value="$$firstProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionPositionOnProductPageActionGroup" stepKey="assertDefQuestionPositionOnFirstProductPage"/>
        <actionGroup ref="StorefrontAssertQuestionPositionOnProductPageActionGroup" stepKey="assertSecondQuestionPositionOnOnFirstProductPage">
            <argument name="question" value="secondPositionQuestion"/>
        </actionGroup>
        <!--assert question on added category product-->
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openSecondProductPage">
            <argument name="productUrl" value="$$secondProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionPositionOnProductPageActionGroup" stepKey="assertDefQuestionPositionOnSecondProductPage"/>
        <actionGroup ref="StorefrontAssertQuestionPositionOnProductPageActionGroup" stepKey="assertSecondQuestionPositionOnOnSecondProductPage">
            <argument name="question" value="secondPositionQuestion"/>
        </actionGroup>
    </test>
</tests>
