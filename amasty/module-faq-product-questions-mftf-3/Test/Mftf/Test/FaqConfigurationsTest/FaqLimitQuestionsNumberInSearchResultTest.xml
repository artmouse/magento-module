<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqLimitQuestionsNumberInSearchResultTest" extends="FaqLimitQuestionsNumberInCategoryTest">
        <annotations>
            <features value="Limit Questions Number in Search Results"/>
            <stories value="Limit Questions Number in Search Results"/>
            <title value="Assert Limit Questions Number in Search Results"/>
            <description value="Assert Only Set Questions Number Is Available in Search Results. Pagination Is on Category Page When Question Amount Is More Set Question"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-46"/>
            <group value="AmFaq"/>
            <group value="AmFaqQuestion"/>
            <group value="AmFaqConfigurations"/>
        </annotations>

        <actionGroup ref="StorefrontSearchActionGroup" after="openFaqCategoryPageDefConf" stepKey="searchAllQuestionsByCommonTitle">
            <argument name="searchCriteria" value="searchRequest.text"/>
        </actionGroup>
        <!--assert custom limit questions number in search results-->
        <actionGroup ref="AdminFaqSearchNavigationSortingActionGroup" stepKey="setTwoQuestionOnPage">
            <argument name="setting" value="twoQuestionInSearchResult"/>
        </actionGroup>
        <actionGroup ref="StorefrontSearchActionGroup" after="openFaqCategoryPage" stepKey="searchQuestionsByCommonTitle">
            <argument name="searchCriteria" value="searchRequest.text"/>
        </actionGroup>
    </test>
</tests>
