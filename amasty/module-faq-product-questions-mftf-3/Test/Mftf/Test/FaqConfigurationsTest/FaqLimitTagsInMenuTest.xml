<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqLimitTagsInMenuTest">
        <annotations>
            <features value="Limit Tags in Menu"/>
            <stories value="Default and Custom Limit Tags in Menu"/>
            <title value="Assert Default and Custom Limit Tags in Menu"/>
            <description value="Assert Tags Quantity On Category Page Matches Set Limit Tags in Configuration"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-50"/>
            <group value="AmFaq"/>
            <group value="AmFaqConfigurations"/>
            <group value="AmFaqTag"/>
        </annotations>

        <before>
            <createData entity="SimpleSubCategory" stepKey="simpleCategory"/>
            <createData entity="SimpleProductByFusionBackpack" stepKey="simpleProduct">
                <requiredEntity createDataKey="simpleCategory"/>
            </createData>
            <createData entity="apiFaqCategory" stepKey="faqCategory"/>
            <createData entity="apiFaqTag" stepKey="faqTag"/>
            <createData entity="apiFaqSecondTag" stepKey="faqSecondTag"/>
            <createData entity="apiFaqQuestionWithTwoTags" stepKey="faqQuestion">
                <requiredEntity createDataKey="simpleProduct"/>
                <requiredEntity createDataKey="faqCategory"/>
                <requiredEntity createDataKey="faqTag"/>
                <requiredEntity createDataKey="faqSecondTag"/>
            </createData>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminFaqSearchNavigationSortingActionGroup" stepKey="setDefaultLimitTagsInMenu"/>
        </before>
        <after>
            <deleteData createDataKey="faqQuestion" stepKey="deleteFaqQuestion"/>
            <deleteData createDataKey="faqTag" stepKey="deleteFaqTag"/>
            <deleteData createDataKey="faqSecondTag" stepKey="deleteFaqSecondTag"/>
            <deleteData createDataKey="faqCategory" stepKey="deleteFaqCategory"/>
            <deleteData createDataKey="simpleProduct" stepKey="deleteProduct"/>
            <deleteData createDataKey="simpleCategory" stepKey="deleteCategory"/>
            <actionGroup ref="AdminFaqSearchNavigationSortingActionGroup" stepKey="setDefSearchNavigationSorting"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <!--default tags limit-->
        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openCategoryPage">
            <argument name="category" value="$$faqCategory$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertTagOnCategoryPageActionGroup" stepKey="assertApiTag">
            <argument name="tag" value="$$faqTag.title$$"/>
            <argument name="qty" value="tagQty.one"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertTagOnCategoryPageActionGroup" stepKey="assertSecondApiTag">
            <argument name="tag" value="$$faqSecondTag.title$$"/>
            <argument name="qty" value="tagQty.one"/>
        </actionGroup>
        <!--custom tags limit-->
        <actionGroup ref="AdminFaqSearchNavigationSortingActionGroup" stepKey="setOneTagInMenu">
            <argument name="setting" value="oneTagInMenu"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openCategoryPageAfterSetTagLimit">
            <argument name="category" value="$$faqCategory$$"/>
        </actionGroup>
        <!--available error case: tag2 is on page instead tag1-->
        <actionGroup ref="StorefrontAssertTagOnCategoryPageActionGroup" stepKey="assertApiTagAfterSetTagLimit">
            <argument name="tag" value="$$faqTag.title$$"/>
            <argument name="qty" value="tagQty.one"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoTagOnCategoryPageActionGroup" stepKey="assertNoSecondApiTagAfterSetTagLimit">
            <argument name="tag" value="$$faqSecondTag.title$$"/>
            <argument name="qty" value="tagQty.one"/>
        </actionGroup>
    </test>
</tests>
