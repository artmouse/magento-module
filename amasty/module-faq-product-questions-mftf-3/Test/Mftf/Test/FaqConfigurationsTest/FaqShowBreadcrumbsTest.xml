<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqShowBreadcrumbsTest">
        <annotations>
            <features value="Show breadcrumbs"/>
            <stories value="Assert Show breadcrumbs"/>
            <title value="Assert Enabled and Disabled Showing Breadcrumbs on FAQ Category and Question Pages"/>
            <description value="Assert Enabled and Disabled Showing Breadcrumbs on FAQ Category and Question Pages"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-38"/>
            <group value="AmFaq"/>
            <group value="AmFaqConfigurations"/>
        </annotations>

        <before>
            <createData entity="SimpleSubCategory" stepKey="simpleCategory"/>
            <createData entity="SimpleProductByFusionBackpack" stepKey="simpleProduct">
                <requiredEntity createDataKey="simpleCategory"/>
            </createData>
            <createData entity="apiFaqCategory" stepKey="faqCategory"/>
            <createData entity="apiFaqQuestionWithCategory" stepKey="faqQuestion">
                <requiredEntity createDataKey="faqCategory"/>
                <requiredEntity createDataKey="simpleProduct"/>
            </createData>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
        </before>
        <after>
            <deleteData createDataKey="faqQuestion" stepKey="deleteFaqQuestion"/>
            <deleteData createDataKey="faqCategory" stepKey="deleteFaqCategory"/>
            <deleteData createDataKey="simpleProduct" stepKey="deleteProduct"/>
            <deleteData createDataKey="simpleCategory" stepKey="deleteCategory"/>
            <actionGroup ref="AdminFaqSearchNavigationSortingActionGroup" stepKey="setDefSearchNavigationSorting"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <!--assert enabled breadcrumbs-->
        <actionGroup ref="AdminFaqSearchNavigationSortingActionGroup" stepKey="setShowBreadcrumbs"/>
        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openCategoryPageToCheckBreadcrumbs">
            <argument name="category" value="$$faqCategory$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertBreadcrumbsOnCategoryPageActionGroup" stepKey="assertBreadcrumbsOnCategoryPage">
            <argument name="category" value="$$faqCategory.title$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenFaqQuestionPageActionGroup" stepKey="openQuestionPageToCheckBreadcrumbs">
            <argument name="question" value="$$faqQuestion$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertBreadcrumbsOnQuestionPageActionGroup" stepKey="assertBreadcrumbsOnQuestionPage">
            <argument name="category" value="$$faqCategory.title$$"/>
            <argument name="question" value="$$faqQuestion.title$$"/>
        </actionGroup>
        <!--assert disabled breadcrumbs-->
        <actionGroup ref="AdminFaqSearchNavigationSortingActionGroup" stepKey="setNotShowBreadcrumbs">
            <argument name="setting" value="notShowBreadcrumbs"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openCategoryPageToCheckNoBreadcrumbs">
            <argument name="category" value="$$faqCategory$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoBreadcrumbsOnCategoryPageActionGroup" stepKey="assertNoBreadcrumbsOnCategoryPage">
            <argument name="category" value="$$faqCategory.title$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenFaqQuestionPageActionGroup" stepKey="openQuestionPageToCheckNoBreadcrumbs">
            <argument name="question" value="$$faqQuestion$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoBreadcrumbsOnQuestionPageActionGroup" stepKey="assertNoBreadcrumbsOnQuestionPage">
            <argument name="category" value="$$faqCategory.title$$"/>
            <argument name="question" value="$$faqQuestion.title$$"/>
        </actionGroup>
    </test>
</tests>
