<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqSortCategoriesByNameOnCategoryPageTest">
        <annotations>
            <features value="Sort Categories By"/>
            <stories value="Sort Categories By Name"/>
            <title value="Assert Categories Are Sorted By Name on Category Page in Sidebar"/>
            <description value="Assert Categories Are Sorted By Name on Category Page in Sidebar"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-42"/>
            <group value="AmFaq"/>
            <group value="AmFaqCategory"/>
            <group value="AmFaqConfigurations"/>
        </annotations>

        <before>
            <createData entity="firstApiFaqCategory" stepKey="firstFaqCategory"/>
            <createData entity="secondApiFaqCategory" stepKey="secondFaqCategory"/>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminFaqSearchNavigationSortingActionGroup" stepKey="setSortCategoriesByName">
                <argument name="setting" value="sortCategoriesByName"/>
            </actionGroup>
        </before>
        <after>
            <deleteData createDataKey="firstFaqCategory" stepKey="deleteFirstFaqCategory"/>
            <deleteData createDataKey="secondFaqCategory" stepKey="deleteSecondFaqCategory"/>
            <actionGroup ref="AdminFaqSearchNavigationSortingActionGroup" stepKey="setDefSearchNavigationSorting"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openCategory">
            <argument name="category" value="$$firstFaqCategory$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertCategoryPositionInSidebarOnCategoryPageActionGroup" stepKey="assertCategoryPositionInSidebar">
            <argument name="firstCategory" value="$$firstFaqCategory.title$$"/>
            <argument name="secondCategory" value="$$secondFaqCategory.title$$"/>
        </actionGroup>
    </test>
</tests>
