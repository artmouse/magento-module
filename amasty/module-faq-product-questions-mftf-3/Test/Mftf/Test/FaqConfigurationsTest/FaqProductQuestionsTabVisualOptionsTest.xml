<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqProductQuestionsTabVisualOptionsTest">
        <annotations>
            <features value="Product Questions Tab Features"/>
            <stories value="Show Tab, Tab Name, Tab Position"/>
            <title value="Assert Show Tab, Tab Name, Tab Position Features"/>
            <description value="Enabled Questions Tab Is on Product Page. Assert Default and Custom Tab Configurations: Name, Position.
                                Question Quantity in Tab Name Matches Question Quantity"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-51"/>
            <group value="AmFaq"/>
            <group value="AmFaqConfigurations"/>
        </annotations>

        <before>
            <createData entity="SimpleSubCategory" stepKey="simpleCategory"/>
            <createData entity="SimpleProductByFusionBackpack" stepKey="simpleProduct">
                <requiredEntity createDataKey="simpleCategory"/>
            </createData>
            <createData entity="apiFaqCategory" stepKey="faqCategory"/>
            <createData entity="apiFaqQuestionWithCategory" stepKey="firstFaqQuestion">
                <requiredEntity createDataKey="faqCategory"/>
                <requiredEntity createDataKey="simpleProduct"/>
            </createData>
            <createData entity="apiFaqQuestionWithCategory" stepKey="secondFaqQuestion">
                <requiredEntity createDataKey="faqCategory"/>
                <requiredEntity createDataKey="simpleProduct"/>
            </createData>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminDisableQuestionsTabOnProductPageActionGroup" stepKey="disableQuestionTab"/>
        </before>
        <after>
            <deleteData createDataKey="firstFaqQuestion" stepKey="deleteFirstFaqQuestion"/>
            <deleteData createDataKey="secondFaqQuestion" stepKey="deleteSecondFaqQuestion"/>
            <deleteData createDataKey="faqCategory" stepKey="deleteFaqCategory"/>
            <deleteData createDataKey="simpleProduct" stepKey="deleteProduct"/>
            <deleteData createDataKey="simpleCategory" stepKey="deleteCategory"/>
            <actionGroup ref="AdminFaqProductPageActionGroup" stepKey="returnDefFaqProductPage"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <!--assert disabled question tab-->
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openProductPageTabDisabled">
            <argument name="productUrl" value="$$simpleProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoQuestionTabActionGroup" stepKey="assertNoQuestionTab"/>
        <!--assert default options question tab-->
        <actionGroup ref="AdminFaqProductPageActionGroup" stepKey="setDefFaqProductPage"/>
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openProductPageDefConfig">
            <argument name="productUrl" value="$$simpleProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTabOptionsActionGroup" stepKey="assertQuestionTabDefConfig">
            <argument name="questionQty" value="questionQty.twoQuestion"/>
        </actionGroup>
        <!--assert custom question tab name and position-->
        <actionGroup ref="AdminFaqProductPageActionGroup" stepKey="setCustomFaqProductPage">
            <argument name="setting" value="customTabNameAndPosition"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openProductPageCustomConfig">
            <argument name="productUrl" value="$$simpleProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTabOptionsActionGroup" stepKey="assertQuestionTabCustomConfig">
            <argument name="tab" value="customTabNameAndPosition"/>
            <argument name="questionQty" value="questionQty.twoQuestion"/>
        </actionGroup>
    </test>
</tests>
