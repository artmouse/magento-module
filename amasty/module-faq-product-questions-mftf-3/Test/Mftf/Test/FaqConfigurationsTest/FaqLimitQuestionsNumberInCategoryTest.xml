<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqLimitQuestionsNumberInCategoryTest">
        <annotations>
            <features value="Limit Questions Number in Category"/>
            <stories value="Limit Questions Number in Category"/>
            <title value="Assert Limit Questions Number in Category"/>
            <description value="Assert Only Set Questions Number Is Available on FAQ Category Page. Pagination Is on Category Page When Question Amount Is More Set Question"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-45"/>
            <group value="AmFaq"/>
            <group value="AmFaqQuestion"/>
            <group value="AmFaqConfigurations"/>
        </annotations>

        <before>
            <createData entity="SimpleSubCategory" stepKey="simpleCategory"/>
            <createData entity="SimpleProductByFusionBackpack" stepKey="simpleProduct">
                <requiredEntity createDataKey="simpleCategory"/>
            </createData>
            <createData entity="apiFaqCategory" stepKey="faqCategory"/>
            <createData entity="apiFaqQuestionWithCategory" stepKey="firstFaqQuestion">
                <requiredEntity createDataKey="faqCategory"/>
                <requiredEntity createDataKey="simpleProduct"/>
            </createData>
            <createData entity="apiFaqQuestionWithCategory" stepKey="secondFaqQuestion">
                <requiredEntity createDataKey="faqCategory"/>
                <requiredEntity createDataKey="simpleProduct"/>
            </createData>
            <createData entity="apiFaqQuestionWithCategory" stepKey="thirdFaqQuestion">
                <requiredEntity createDataKey="faqCategory"/>
                <requiredEntity createDataKey="simpleProduct"/>
            </createData>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminFaqSearchNavigationSortingActionGroup" stepKey="setSearchNavigationSorting"/>
        </before>
        <after>
            <deleteData createDataKey="firstFaqQuestion" stepKey="deleteFirstFaqQuestion"/>
            <deleteData createDataKey="secondFaqQuestion" stepKey="deleteSecondFaqQuestion"/>
            <deleteData createDataKey="thirdFaqQuestion" stepKey="deleteThirdFaqQuestion"/>
            <deleteData createDataKey="faqCategory" stepKey="deleteFaqCategory"/>
            <deleteData createDataKey="simpleProduct" stepKey="deleteProduct"/>
            <deleteData createDataKey="simpleCategory" stepKey="deleteCategory"/>
            <actionGroup ref="AdminFaqSearchNavigationSortingActionGroup" stepKey="setDefSearchNavigationSorting"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openFaqCategoryPageDefConf">
            <argument name="category" value="$$faqCategory$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertFirstQuestionOnCategoryPageDefConf">
            <argument name="questionTitle" value="$$firstFaqQuestion.title$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertSecondQuestionOnCategoryPageDefConf">
            <argument name="questionTitle" value="$$secondFaqQuestion.title$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertThirdQuestionOnCategoryPageDefConf">
            <argument name="questionTitle" value="$$thirdFaqQuestion.title$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoPaginationOnCategoryPageActionGroup" stepKey="assertNoPaginationOnCategoryPage"/>
        <!--assert custom limit questions number in category-->
        <actionGroup ref="AdminFaqSearchNavigationSortingActionGroup" stepKey="setTwoQuestionOnPage">
            <argument name="setting" value="twoQuestionInCategory"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openFaqCategoryPage">
            <argument name="category" value="$$faqCategory$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertFirstQuestionOnCategoryPage">
            <argument name="questionTitle" value="$$firstFaqQuestion.title$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertSecondQuestionOnCategoryPage">
            <argument name="questionTitle" value="$$secondFaqQuestion.title$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnCategoryPageActionGroup" stepKey="assertNoThirdQuestionOnCategoryPage">
            <argument name="questionTitle" value="$$thirdFaqQuestion.title$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertPaginationOnCategoryPageActionGroup" stepKey="assertPaginationOnCategoryPage"/>
        <actionGroup ref="StorefrontUsePaginationActionGroup" stepKey="openNextPageWithQuestions"/>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnCategoryPageActionGroup" stepKey="assertNoFirstQuestionOnNextCategoryPage">
            <argument name="questionTitle" value="$$firstFaqQuestion.title$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnCategoryPageActionGroup" stepKey="assertNoSecondQuestionOnNextCategoryPage">
            <argument name="questionTitle" value="$$secondFaqQuestion.title$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertThirdQuestionOnNextCategoryPage">
            <argument name="questionTitle" value="$$thirdFaqQuestion.title$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertPaginationOnCategoryPageActionGroup" stepKey="assertPaginationOnNextCategoryPage"/>
    </test>
</tests>
