<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqUseCanonicalUrlOnPagesTest">
        <annotations>
            <features value="Use Canonical URL on Pages"/>
            <stories value="Assert Use Canonical URL on Pages"/>
            <title value="Assert Canonical URL in Question and Category Page Source"/>
            <description value="Assert Canonical URL in Question and Category Page Source"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-61"/>
            <group value="AmFaq"/>
            <group value="AmFaqConfigurations"/>
        </annotations>

        <before>
            <createData entity="SimpleSubCategory" stepKey="simpleCategory"/>
            <createData entity="SimpleProductByFusionBackpack" stepKey="simpleProduct">
                <requiredEntity createDataKey="simpleCategory"/>
            </createData>
            <createData entity="apiFaqCategory" stepKey="faqCategory"/>
            <createData entity="apiFaqQuestionWithCategory" stepKey="faqQuestion">
                <requiredEntity createDataKey="faqCategory"/>
                <requiredEntity createDataKey="simpleProduct"/>
            </createData>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminFaqSeoActionGroup" stepKey="setFaqSeo"/>
        </before>
        <after>
            <deleteData createDataKey="faqQuestion" stepKey="deleteFaqQuestion"/>
            <deleteData createDataKey="faqCategory" stepKey="deleteFaqCategory"/>
            <deleteData createDataKey="simpleProduct" stepKey="deleteProduct"/>
            <deleteData createDataKey="simpleCategory" stepKey="deleteCategory"/>
            <actionGroup ref="AdminFaqSeoActionGroup" stepKey="setDefaultSeo"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <!--not use canonical Url-->
        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openCategoryPageNoCanonicalUrl">
            <argument name="category" value="$$faqCategory$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoCanonicalUrlInPageSourceActionGroup" stepKey="assertNoDataInPageSourceOnCategory">
            <argument name="canonicalUrl" value="$$faqCategory.canonical_url$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenFaqQuestionPageActionGroup" stepKey="openQuestionPageNoCanonicalUrl">
            <argument name="question" value="$$faqQuestion$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoCanonicalUrlInPageSourceActionGroup" stepKey="assertNoDataInPageSourceOnQuestion">
            <argument name="canonicalUrl" value="$$faqQuestion.canonical_url$$"/>
        </actionGroup>
        <!--use canonical Url-->
        <actionGroup ref="AdminFaqSeoActionGroup" stepKey="enableSeoFeature">
            <argument name="setting" value="enableCanonicalUrl"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openCategoryPageCanonicalUrl">
            <argument name="category" value="$$faqCategory$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertCanonicalUrlInPageSourceActionGroup" stepKey="assertDataInPageSourceOnCategory">
            <argument name="canonicalUrl" value="$$faqCategory.canonical_url$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenFaqQuestionPageActionGroup" stepKey="openQuestionPageCanonicalUrl">
            <argument name="question" value="$$faqQuestion$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertCanonicalUrlInPageSourceActionGroup" stepKey="assertDataInPageSourceOnQuestion">
            <argument name="canonicalUrl" value="$$faqQuestion.canonical_url$$"/>
        </actionGroup>
    </test>
</tests>
