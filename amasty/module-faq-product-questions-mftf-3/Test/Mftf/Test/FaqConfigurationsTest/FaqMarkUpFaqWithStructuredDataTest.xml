<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqMarkUpFaqWithStructuredDataTest" extends="FaqUseCanonicalUrlOnPagesTest">
        <annotations>
            <features value="Mark Up FAQ with Structured Data"/>
            <stories value="Assert Mark Up FAQ with Structured Data"/>
            <title value="Assert Mark Up FAQ in Question and Category Page Source"/>
            <description value="Assert Mark Up FAQ in Question and Category Page Source"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-62"/>
            <group value="AmFaq"/>
            <group value="AmFaqConfigurations"/>
        </annotations>

        <!--disabled Mark Up FAQ with Structured Data-->
        <actionGroup ref="StorefrontAssertNoMarkUpFaqInPageSourceActionGroup" stepKey="assertNoDataInPageSourceOnCategory"/>
        <actionGroup ref="StorefrontAssertNoMarkUpFaqInPageSourceActionGroup" stepKey="assertNoDataInPageSourceOnQuestion"/>
        <!--enabled Mark Up FAQ with Structured Data-->
        <actionGroup ref="AdminFaqSeoActionGroup" stepKey="enableSeoFeature">
            <argument name="setting" value="enableStructuredData"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertMarkUpFaqInPageSourceActionGroup" stepKey="assertDataInPageSourceOnCategory"/>
        <actionGroup ref="StorefrontAssertMarkUpFaqInPageSourceActionGroup" stepKey="assertDataInPageSourceOnQuestion"/>
    </test>
</tests>
