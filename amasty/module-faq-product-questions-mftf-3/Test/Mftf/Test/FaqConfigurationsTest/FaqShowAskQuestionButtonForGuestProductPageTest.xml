<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqShowAskQuestionButtonForGuestProductPageTest" extends="FaqShowAskQuestionButtonForLoggedInCustomerProductPageTest">
        <annotations>
            <features value="Show Ask a Question Button"/>
            <stories value="Assert Show Ask a Question Button On Product Page for Guest"/>
            <title value="Guest Sees Ask a Question Button On Product Page When the Button Is Enabled Only"/>
            <description value="Guest Sees Ask a Question Button On Product Page When the Button Is Enabled Only"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-53"/>
            <group value="AmFaq"/>
            <group value="AmFaqConfigurations"/>
        </annotations>

        <before>
            <remove keyForRemoval="customer"/>
            <actionGroup ref="AdminFaqGeneralSettingsActionGroup" stepKey="setAllowGuestAskQuestion">
                <argument name="setting" value="allowGuestAskQuestion"/>
            </actionGroup>
        </before>
        <after>
            <remove keyForRemoval="deleteCustomer"/>
            <actionGroup ref="AdminFaqProductPageActionGroup" stepKey="setDefFaqProductPage"/>
            <actionGroup ref="AdminFaqGeneralSettingsActionGroup" after="setDefFaqProductPage" stepKey="setDefFaqGeneralSettings"/>
        </after>

        <remove keyForRemoval="loginToStorefront"/>
    </test>
</tests>
