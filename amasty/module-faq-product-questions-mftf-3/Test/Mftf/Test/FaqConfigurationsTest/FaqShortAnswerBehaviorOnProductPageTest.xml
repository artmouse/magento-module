<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqShortAnswerBehaviorOnProductPageTest">
        <annotations>
            <features value="Short Answer Behavior"/>
            <stories value="Show Short Answer and Cut Full Answer"/>
            <title value="Assert Show Short Answer and Cut Full Answer on Product Page"/>
            <description value="Show Short Answer: Short Answer Is on Product Page if Question Has Short Answer.
                                Cut Full Answer: Cut Answer Is on Product Page Even if Question Has Short Answer"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-55"/>
            <group value="AmFaq"/>
            <group value="AmFaqConfigurations"/>
        </annotations>

        <before>
            <createData entity="SimpleSubCategory" stepKey="simpleCategory"/>
            <createData entity="SimpleProductByFusionBackpack" stepKey="simpleProduct">
                <requiredEntity createDataKey="simpleCategory"/>
            </createData>
            <createData entity="apiFaqCategory" stepKey="faqCategory"/>
            <createData entity="apiFaqQuestionWithCategory" stepKey="faqQuestionWithShortAnswer">
                <requiredEntity createDataKey="faqCategory"/>
                <requiredEntity createDataKey="simpleProduct"/>
            </createData>
            <createData entity="apiFaqQuestionNoShortAnswer" stepKey="faqQuestionNoShortAnswer">
                <requiredEntity createDataKey="faqCategory"/>
                <requiredEntity createDataKey="simpleProduct"/>
            </createData>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminFaqSearchNavigationSortingActionGroup" stepKey="setAnswerLength">
                <argument name="setting" value="limitDisplayedAnswerLength"/>
            </actionGroup>
            <actionGroup ref="AdminFaqProductPageActionGroup" stepKey="setShowCutFullAnswerOnProductPage"/>
        </before>
        <after>
            <deleteData createDataKey="faqQuestionWithShortAnswer" stepKey="deleteQuestionWithShortAnswer"/>
            <deleteData createDataKey="faqQuestionNoShortAnswer" stepKey="deleteQuestionNoShortAnswer"/>
            <deleteData createDataKey="faqCategory" stepKey="deleteFaqCategory"/>
            <deleteData createDataKey="simpleProduct" stepKey="deleteProduct"/>
            <deleteData createDataKey="simpleCategory" stepKey="deleteCategory"/>
            <actionGroup ref="AdminFaqSearchNavigationSortingActionGroup" stepKey="setDefSearchNavigationSorting"/>
            <actionGroup ref="AdminFaqProductPageActionGroup" stepKey="setDefFaqProductPage"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <!--show cut full answer-->
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openProductPageCutFullAnswer">
            <argument name="productUrl" value="$$simpleProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenQuestionTabActionGroup" stepKey="openQuestionTabCutFullAnswer"/>
        <actionGroup ref="StorefrontAssertQuestionAnswerOnProductPageActionGroup" stepKey="assertQuestionWithShortAnswerConfCutFullAnswer">
            <argument name="questionName" value="$$faqQuestionWithShortAnswer.title$$"/>
            <argument name="questionAnswer" value="faqQuestionCutFullAnswer.cut_answer"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionAnswerOnProductPageActionGroup" stepKey="assertQuestionNoShortAnswerConfCutFullAnswer">
            <argument name="questionName" value="$$faqQuestionNoShortAnswer.title$$"/>
            <argument name="questionAnswer" value="faqQuestionNoShortAnswer.cut_answer"/>
        </actionGroup>
        <!--show short answer-->
        <actionGroup ref="AdminFaqProductPageActionGroup" stepKey="setShowShortAnswerOnProductPage">
            <argument name="setting" value="showShortAnswerOnProductPage"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openProductPageShortAnswer">
            <argument name="productUrl" value="$$simpleProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenQuestionTabActionGroup" stepKey="openQuestionTabShortAnswer"/>
        <actionGroup ref="StorefrontAssertQuestionAnswerOnProductPageActionGroup" stepKey="assertQuestionWithShortAnswerConfShortAnswer">
            <argument name="questionName" value="$$faqQuestionWithShortAnswer.title$$"/>
            <argument name="questionAnswer" value="$$faqQuestionWithShortAnswer.short_answer$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionAnswerOnProductPageActionGroup" stepKey="assertQuestionNoShortAnswerConfShortAnswer">
            <argument name="questionName" value="$$faqQuestionNoShortAnswer.title$$"/>
            <argument name="questionAnswer" value="faqQuestionNoShortAnswer.cut_answer"/>
        </actionGroup>
    </test>
</tests>
