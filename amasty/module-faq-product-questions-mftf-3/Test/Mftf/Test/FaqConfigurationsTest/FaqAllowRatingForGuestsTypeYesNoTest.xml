<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqAllowRatingForGuestsTypeYesNoTest">
        <annotations>
            <features value="Allow Rating for Guests"/>
            <stories value="Assert Allow Rating for Guests"/>
            <title value="Assert Allow Rating for Guests, Question Rating Type Yes/No"/>
            <description value="Assert Guest Can Rate a Question When Rate Is Allowed Only"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-60"/>
            <group value="AmFaq"/>
            <group value="AmFaqConfigurations"/>
        </annotations>

        <before>
            <createData entity="SimpleSubCategory" stepKey="firstCategory"/>
            <createData entity="SimpleProductByFusionBackpack" stepKey="firstProduct">
                <requiredEntity createDataKey="firstCategory"/>
            </createData>
            <createData entity="SimpleSubCategory" stepKey="secondCategory"/>
            <createData entity="SimpleProductByDrivenBackpack" stepKey="secondProduct">
                <requiredEntity createDataKey="secondCategory"/>
            </createData>
            <createData entity="Simple_US_Customer" stepKey="customer"/>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminRatingActionGroup" stepKey="setDefRating"/>
            <actionGroup ref="AdminCreateCategoryActionGroup" stepKey="createCategory"/>
            <actionGroup ref="AdminCreateQuestionWithRatingActionGroup" stepKey="createQuestionWithRating">
                <argument name="question" value="ratedQuestion"/>
            </actionGroup>
            <actionGroup ref="AdminAssignQuestionToFaqCategoryActionGroup" stepKey="assignDefQuestionToCategory"/>
            <actionGroup ref="AdminAssignProductToQuestionActionGroup" stepKey="assignFirstProductToQuestion">
                <argument name="productName" value="$$firstProduct.product[name]$$"/>
            </actionGroup>
            <actionGroup ref="AdminAssignCategoryToQuestionActionGroup" stepKey="assignSecondCategoryToQuestion">
                <argument name="categoryName" value="$$secondCategory.name$$"/>
            </actionGroup>
        </before>
        <after>
            <deleteData createDataKey="customer" stepKey="deleteCustomer"/>
            <deleteData createDataKey="firstProduct" stepKey="deleteFirstProduct"/>
            <deleteData createDataKey="secondProduct" stepKey="deleteSecondProduct"/>
            <deleteData createDataKey="firstCategory" stepKey="deleteFirstCategory"/>
            <deleteData createDataKey="secondCategory" stepKey="deleteSecondCategory"/>
            <actionGroup ref="AdminDeleteQuestionFromGridActionGroup" stepKey="deleteRatedQuest">
                <argument name="questionTitle" value="ratedQuestion.title"/>
            </actionGroup>
            <actionGroup ref="AdminDeleteCategoryFromGridActionGroup" stepKey="deleteCategoryOnGrid"/>
            <actionGroup ref="AdminRatingActionGroup" stepKey="setDefRating"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <!--attempt rate as guest-->
        <actionGroup ref="StorefrontOpenFaqQuestionPageActionGroup" stepKey="openRatedQuestionPage">
            <argument name="question" value="ratedQuestion"/>
        </actionGroup>
        <actionGroup ref="StorefrontAttemptRateYesNoVoteAsGuestOnQuestionPageActionGroup" stepKey="attemptRateYesNoVoteAsGuestOnQuestionPage"/>
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openFirstProductPage">
            <argument name="productUrl" value="$$firstProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAttemptRateYesNoVoteAsGuestOnProductPageActionGroup" stepKey="attemptRateYesNoVoteAsGuestOnFirstProductPage"/>
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openSecondProductPage">
            <argument name="productUrl" value="$$secondProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAttemptRateYesNoVoteAsGuestOnProductPageActionGroup" stepKey="attemptRateYesNoVoteAsGuestOnSecondProductPage"/>
        <!--rate as logged in customer-->
        <actionGroup ref="LoginToStorefrontActionGroup" stepKey="loginToStorefront">
            <argument name="Customer" value="$$customer$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenFaqQuestionPageActionGroup" stepKey="openRatedQuestionPageAsCustomer">
            <argument name="question" value="ratedQuestion"/>
        </actionGroup>
        <actionGroup ref="StorefrontVoteTypeYesNoOnQuestionPageActionGroup" stepKey="positiveVoteQuestion"/>
        <actionGroup ref="StorefrontAssertVoteTypeYesNoOnQuestionPageActionGroup" stepKey="assertPositiveVotedOnQuestionPage"/>
    </test>
</tests>
