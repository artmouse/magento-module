<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqAllowGuestAskQuestionTest">
        <annotations>
            <features value="Allow Unregistered Customers To Ask Questions"/>
            <stories value="Assert Allow Unregistered Customers To Ask Questions Feature"/>
            <title value="Guest Can Ask a Question on FAQ Category and Question Pages, Product Page"/>
            <description value="Guest Can Ask Ask a Question on FAQ Category and Question Pages, Product Page When Feature Is Enabled"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-36"/>
            <group value="AmFaq"/>
            <group value="AmFaqConfigurations"/>
        </annotations>

        <before>
            <createData entity="SimpleSubCategory" stepKey="simpleCategory"/>
            <createData entity="SimpleProductByFusionBackpack" stepKey="simpleProduct">
                <requiredEntity createDataKey="simpleCategory"/>
            </createData>
            <createData entity="apiFaqCategory" stepKey="faqCategory"/>
            <createData entity="apiFaqQuestionWithCategory" stepKey="faqQuestion">
                <requiredEntity createDataKey="faqCategory"/>
                <requiredEntity createDataKey="simpleProduct"/>
            </createData>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminFaqGeneralSettingsActionGroup" stepKey="setNotAllowGuestAskQuestion"/>
        </before>
        <after>
            <deleteData createDataKey="faqQuestion" stepKey="deleteFaqQuestion"/>
            <deleteData createDataKey="faqCategory" stepKey="deleteFaqCategory"/>
            <deleteData createDataKey="simpleProduct" stepKey="deleteProduct"/>
            <deleteData createDataKey="simpleCategory" stepKey="deleteCategory"/>
            <actionGroup ref="AdminDeleteAllQuestionsFromGridActionGroup" stepKey="deleteAllQuestionsFromGrid"/>
            <actionGroup ref="AdminFaqGeneralSettingsActionGroup" stepKey="setDefFaqGeneralSettings"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openCategoryPage">
            <argument name="category" value="$$faqCategory$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoAskQuestionBlockActionGroup" stepKey="assertNoAskQuestionBlockOnCategoryPage"/>
        <actionGroup ref="StorefrontOpenFaqQuestionPageActionGroup" stepKey="openQuestionPage">
            <argument name="question" value="$$faqQuestion$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoAskQuestionBlockActionGroup" stepKey="assertNoAskQuestionBlockOnQuestionPage"/>
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openProductPage">
            <argument name="productUrl" value="$$simpleProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenQuestionTabActionGroup" stepKey="openQuestionTab"/>
        <actionGroup ref="StorefrontAssertNoAskQuestionBlockActionGroup" stepKey="assertNoAskQuestionBlockOnProductPage"/>
        <!--allow guest ask question-->
        <actionGroup ref="AdminFaqGeneralSettingsActionGroup" stepKey="setAllowGuestAskQuestion">
            <argument name="setting" value="allowGuestAskQuestion"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openCategoryPageToAskQuestion">
            <argument name="category" value="$$faqCategory$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAskQuestionWithoutNotifyActionGroup" stepKey="askQuestionOnCategoryPage"/>
        <actionGroup ref="StorefrontOpenFaqQuestionPageActionGroup" stepKey="openQuestionPageToAskQuestion">
            <argument name="question" value="$$faqQuestion$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAskQuestionWithoutNotifyActionGroup" stepKey="askQuestionOnQuestionPage"/>
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openProductPageToAskQuestion">
            <argument name="productUrl" value="$$simpleProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenQuestionTabActionGroup" stepKey="openQuestionTabToAskQuestion"/>
        <actionGroup ref="StorefrontAskQuestionWithoutNotifyActionGroup" stepKey="askQuestionOnProductPage"/>
    </test>
</tests>
