<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqDefaultCategoryNameDescriptionUrlKeyTest">
        <annotations>
            <features value="FAQ Category Name, URL Key, Description"/>
            <stories value="Assert Category Name, URL Key, Description"/>
            <title value="Assert Category Name, URL Key, Description on FAQ Page, Category Page, Breadcrumbs"/>
            <description value="Assert Category Name, URL Key, Description on FAQ Page, Category Page, Breadcrumbs"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-01"/>
            <group value="AmFaq"/>
            <group value="AmFaqCategory"/>
        </annotations>

        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminCreateCategoryActionGroup" stepKey="createDefFaqCategory"/>
        </before>
        <after>
            <actionGroup ref="AdminDeleteCategoryFromGridActionGroup" stepKey="deleteFaqCategoryOnGrid"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="StorefrontOpenFaqPageActionGroup" stepKey="openFaqPage"/>
        <actionGroup ref="StorefrontAssertCategoryTitleOnFaqPageActionGroup" stepKey="assertCategoryTitleOnFaqPage"/>
        <actionGroup ref="StorefrontOpenCategoryFromFaqPageActionGroup" stepKey="openCategoryFromFaqPage"/>
        <actionGroup ref="StorefrontAssertCategoryTitleAndDescOnCategoryPageActionGroup" stepKey="assertCategoryTitleAndDescriptionOnCategoryPage"/>
    </test>
</tests>
