<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqCategoryAssignedToSpecifiedCustomerGroupTest">
        <annotations>
            <features value="FAQ Category Is Assigned to Specified Customer Group"/>
            <stories value="Assert Category Is Assigned to Specified Customer Group"/>
            <title value="Assert Category Is Available for Specified Customer Group. Category Is Not Available for Other Customer Group"/>
            <description value="Assert Category Is Available for Specified Customer Group. Category Is Not Available for Other Customer Group"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-03"/>
            <group value="AmFaq"/>
            <group value="AmFaqCategory"/>
        </annotations>

        <before>
            <createData entity="Simple_US_Customer" stepKey="customer"/>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminCreateCategoryActionGroup" stepKey="createDefCategoryForAllCustomers"/>
            <actionGroup ref="AdminCreateCategoryActionGroup" stepKey="createCategoryForGeneralCustomer">
                <argument name="category" value="generalCustomerCategory"/>
            </actionGroup>
        </before>
        <after>
            <deleteData createDataKey="customer" stepKey="deleteCustomer"/>
            <actionGroup ref="AdminDeleteCategoryFromGridActionGroup" stepKey="deleteCategoryForAllCustomers"/>
            <actionGroup ref="AdminDeleteCategoryFromGridActionGroup" stepKey="deleteCategoryForGeneralCustomer">
                <argument name="categoryTitle" value="generalCustomerCategory.title"/>
            </actionGroup>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <!--assert categories as guest-->
        <actionGroup ref="StorefrontOpenFaqPageActionGroup" stepKey="openFaqPageAsGuest"/>
        <actionGroup ref="StorefrontAssertCategoryTitleOnFaqPageActionGroup" stepKey="assertCategoryForAllCustomers"/>
        <actionGroup ref="StorefrontAssertNoCategoryOnFaqPageActionGroup" stepKey="assertNoCategoryForGeneralCustomer">
                <argument name="categoryTitle" value="generalCustomerCategory.title"/>
        </actionGroup>
        <!--assert category for all customers as guest-->
        <actionGroup ref="StorefrontOpenCategoryFromFaqPageActionGroup" stepKey="openCategoryForAllCustomersAsGuest"/>
        <actionGroup ref="StorefrontAssertOpenedCategoryInSidebarOnCategoryPageActionGroup" stepKey="assertCategoryForAllCustomersInSidebar"/>
        <actionGroup ref="StorefrontAssertNoCategoryInSidebarOnCategoryPageActionGroup" stepKey="assertNoCategoryForGeneralCustomersInSidebar">
            <argument name="category" value="generalCustomerCategory.title"/>
        </actionGroup>
        <!--assert categories as logged in customer-->
        <actionGroup ref="LoginToStorefrontActionGroup" stepKey="loginToStorefront">
            <argument name="Customer" value="$$customer$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenFaqPageActionGroup" stepKey="openFaqPageAsLoggedInCustomer"/>
        <actionGroup ref="StorefrontAssertCategoryTitleOnFaqPageActionGroup" stepKey="assertCatForAllCustomersAsLoggedCustomer"/>
        <actionGroup ref="StorefrontAssertCategoryTitleOnFaqPageActionGroup" stepKey="assertCatForGeneralCustomersAsLoggedCustomer">
            <argument name="categoryTitle" value="generalCustomerCategory.title"/>
        </actionGroup>
        <!--assert category for all customers as logged in customer-->
        <actionGroup ref="StorefrontOpenCategoryFromFaqPageActionGroup" stepKey="openCategoryForAllCustomersAsLoggedCustomer"/>
        <actionGroup ref="StorefrontAssertOpenedCategoryInSidebarOnCategoryPageActionGroup" stepKey="assertCatForAllCustomInSidebarAsLoggedCustom"/>
        <actionGroup ref="StorefrontAssertCategoryInSidebarOnCategoryPageActionGroup" stepKey="assertCatForGenCustomInSidebarAsLoggedCustom">
            <argument name="category" value="generalCustomerCategory.title"/>
        </actionGroup>
        <!--assert category for general customer as logged in customer-->
        <actionGroup ref="StorefrontOpenFaqPageActionGroup" stepKey="openFaqPageToCheckSecondCategory"/>
        <actionGroup ref="StorefrontOpenCategoryFromFaqPageActionGroup" stepKey="openCategoryForGenCustomerAsLoggedCustomer">
            <argument name="category" value="generalCustomerCategory.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertOpenedCategoryInSidebarOnCategoryPageActionGroup" stepKey="assertGenCatForGenCustomInSidebarAsLoggedCustom">
            <argument name="category" value="generalCustomerCategory.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertCategoryInSidebarOnCategoryPageActionGroup" stepKey="assertGenCatForAllCustomInSidebarAsLoggedCustom"/>
    </test>
</tests>
