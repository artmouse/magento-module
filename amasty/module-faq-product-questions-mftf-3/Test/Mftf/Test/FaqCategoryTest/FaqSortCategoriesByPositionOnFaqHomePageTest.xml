<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqSortCategoriesByPositionOnFaqHomePageTest">
        <annotations>
            <features value="FAQ Category Position"/>
            <stories value="Assert Category Position"/>
            <title value="Assert Category Position on FAQ Home Page"/>
            <description value="Assert Category Position on FAQ Home Page"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-04"/>
            <group value="AmFaq"/>
            <group value="AmFaqCategory"/>
        </annotations>

        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminCreateCategoryActionGroup" stepKey="createCategorySecondPosition">
                <argument name="category" value="secondPositionCategory"/>
            </actionGroup>
            <actionGroup ref="AdminCreateCategoryActionGroup" stepKey="createCategoryFirstPosition"/>
        </before>
        <after>
            <actionGroup ref="AdminDeleteCategoryFromGridActionGroup" stepKey="deleteCategoryFirstPosition"/>
            <actionGroup ref="AdminDeleteCategoryFromGridActionGroup" stepKey="deleteCategorySecondPosition">
                <argument name="categoryTitle" value="secondPositionCategory.title"/>
            </actionGroup>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="StorefrontOpenFaqPageActionGroup" stepKey="openFaqPage"/>
        <actionGroup ref="StorefrontAssertCategoryPositionOnFaqPageActionGroup" stepKey="assertCategoryFirstPosition">
            <argument name="category" value="defaultCategory"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertCategoryPositionOnFaqPageActionGroup" stepKey="assertCategorySecondPosition">
            <argument name="category" value="secondPositionCategory"/>
        </actionGroup>
    </test>
</tests>
