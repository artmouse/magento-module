<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqInlineEditCategoryOnGridTest">
        <annotations>
            <features value="Inline Edit FAQ Category"/>
            <stories value="Inline Edit FAQ Category"/>
            <title value="Assert Inline Edit FAQ Category"/>
            <description value="Inline Edit FAQ Category. Assert Category After Inline Edit"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-78"/>
            <group value="AmFaq"/>
            <group value="AmFaqCategory"/>
        </annotations>

        <before>
            <createData entity="SimpleSubCategory" stepKey="simpleCategory"/>
            <createData entity="SimpleProductByFusionBackpack" stepKey="simpleProduct">
                <requiredEntity createDataKey="simpleCategory"/>
            </createData>
            <createData entity="apiFaqQuestion" stepKey="faqQuestion">
                <requiredEntity createDataKey="simpleProduct"/>
            </createData>
            <createData entity="apiFaqCategoryWithQuestion" stepKey="faqCategory">
                <requiredEntity createDataKey="faqQuestion"/>
            </createData>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
        </before>
        <after>
            <deleteData createDataKey="faqQuestion" stepKey="deleteFaqQuestion"/>
            <deleteData createDataKey="simpleProduct" stepKey="deleteProduct"/>
            <deleteData createDataKey="simpleCategory" stepKey="deleteCategory"/>
            <actionGroup ref="AdminDeleteCategoryFromCategoryPageActionGroup" stepKey="deleteFaqCategory"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="AdminFindCategoryOnGridActionGroup" stepKey="findCategoryOnGrid">
            <argument name="categoryTitle" value="$$faqCategory.title$$"/>
        </actionGroup>
        <actionGroup ref="AdminInlineEditCategoryOnGridActionGroup" stepKey="inlineEditCategoryOnGrid"/>
        <actionGroup ref="AdminFindCategoryOnGridActionGroup" stepKey="findEditedCategoryOnGrid">
            <argument name="categoryTitle" value="editedCategory.title"/>
        </actionGroup>
        <actionGroup ref="AdminAssertCategoryDataOnGridActionGroup" stepKey="assertEditedCategoryDataOnGrid"/>
        <actionGroup ref="AdminOpenCategoryFromGridActionGroup" stepKey="openEditedCategoryFromGrid">
            <argument name="categoryTitle" value="editedCategory.title"/>
        </actionGroup>
        <actionGroup ref="AdminAssertEditedOnGridCategoryDataActionGroup" stepKey="assertEditedCategory"/>
    </test>
</tests>
