<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqCategoryImportTest">
        <annotations>
            <features value="FAQ Category Import"/>
            <stories value="Assert FAQ Category Import"/>
            <title value="Assert Imported Category on Storefront and Admin Part"/>
            <description value="Assert Imported Category on Storefront and Admin Part"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-33"/>
            <group value="AmFaq"/>
            <group value="AmFaqCategory"/>
            <group value="AmFaqImport"/>
        </annotations>

        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
        </before>
        <after>
            <actionGroup ref="AdminDeleteCategoryFromCategoryPageActionGroup" stepKey="deleteImportedCategory"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <amOnPage url="{{AdminCategoryImportPage.url}}" stepKey="openCategoryImportPage"/>
        <waitForPageLoad stepKey="waitForCategoryImportPageLoad"/>
        <actionGroup ref="AdminCategoryImportActionGroup" stepKey="importCategory"/>
        <actionGroup ref="StorefrontOpenFaqPageActionGroup" stepKey="openFaqPage"/>
        <actionGroup ref="StorefrontAssertCategoryTitleOnFaqPageActionGroup" stepKey="assertCategoryTitleOnFaqPage">
            <argument name="categoryTitle" value="importCategory.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenCategoryFromFaqPageActionGroup" stepKey="openCategoryFromFaqPage">
            <argument name="category" value="importCategory.title"/>
        </actionGroup>
        <actionGroup ref="AdminOpenCategoryFromGridActionGroup" stepKey="openImportedCategoryFromGrid">
            <argument name="categoryTitle" value="importCategory.title"/>
        </actionGroup>
        <actionGroup ref="AdminAssertImportedCategoryDataActionGroup" stepKey="assertImportedCategoryData"/>
    </test>
</tests>
