<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqDeleteCategoryFromCategoryPageTest" extends="FaqDefaultCategoryNameDescriptionUrlKeyTest">
        <annotations>
            <features value="FAQ Category Delete"/>
            <stories value="Assert Category Delete"/>
            <title value="Delete Category from Category Page"/>
            <description value="Assert Category Is Deleted From Category Page. Category Is Not Available on FAQ Page and by Direct URL"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-07"/>
            <group value="AmFaq"/>
            <group value="AmFaqCategory"/>
        </annotations>

        <after>
            <remove keyForRemoval="deleteFaqCategoryOnGrid"/>
        </after>

        <actionGroup ref="AdminOpenCategoryFromGridActionGroup" stepKey="openCategoryFromGrid"/>
        <actionGroup ref="AdminDeleteCategoryFromCategoryPageActionGroup" stepKey="deleteCategoryFromCategoryPage"/>
        <actionGroup ref="StorefrontOpenFaqPageActionGroup" stepKey="openFaqPageAfterDeleteCategory"/>
        <actionGroup ref="StorefrontAssertNoCategoryOnFaqPageActionGroup" stepKey="assertNoCategory"/>
        <actionGroup ref="StorefrontOpenDeletedCategoryPageActionGroup" stepKey="assertDeletedFaqCategoryPage"/>
    </test>
</tests>
