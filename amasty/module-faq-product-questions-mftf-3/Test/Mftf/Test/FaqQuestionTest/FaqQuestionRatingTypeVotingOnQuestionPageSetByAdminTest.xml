<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqQuestionRatingTypeVotingOnQuestionPageSetByAdminTest" extends="FaqQuestionRatingTypeYesNoOnQuestionPageSetByAdminTest">
        <annotations>
            <features value="Question Rating"/>
            <stories value="Assert Question Rating Type Voting"/>
            <title value="Assert Question Rating Type Voting Set by Admin"/>
            <description value="Assert Question Rating Type Voting Set by Admin. Guest Customer Makes Positive Rate Question on Question Page"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-57"/>
            <group value="AmFaq"/>
            <group value="AmFaqConfigurations"/>
            <group value="AmFaqQuestion"/>
        </annotations>

        <before>
            <actionGroup ref="AdminRatingActionGroup" after="loginAsAdmin" stepKey="setRating">
                <argument name="setting" value="voting"/>
            </actionGroup>
        </before>

        <actionGroup ref="StorefrontAssertVoteTypeOnQuestionPageActionGroup" stepKey="assertVoteTypeOnQuestionPage">
            <argument name="type" value="voteType.vote"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoVoteTypeVotingOnQuestionPageActionGroup" stepKey="assertNoQuestionVoteOnQuestionPage"/>
        <actionGroup ref="StorefrontVoteTypeVotingOnQuestionPageActionGroup" stepKey="positiveVoteQuestion"/>
        <actionGroup ref="StorefrontAssertVoteTypeVotingOnQuestionPageActionGroup" stepKey="assertPositiveVotedOnQuestionPage"/>
        <actionGroup ref="StorefrontAssertVoteTypeVotingOnProductPageActionGroup" stepKey="assertVoteOnFirstProductPage"/>
        <actionGroup ref="StorefrontAssertVoteTypeVotingOnProductPageActionGroup" stepKey="assertVoteOnSecondProductPage"/>
    </test>
</tests>
