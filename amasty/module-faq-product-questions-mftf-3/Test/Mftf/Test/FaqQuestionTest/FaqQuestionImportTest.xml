<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqQuestionImportTest">
        <annotations>
            <features value="FAQ Question Import"/>
            <stories value="Assert FAQ Question Import"/>
            <title value="Assert Imported Question on Admin Part"/>
            <description value="Assert Imported Question on Admin Part"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-34"/>
            <group value="AmFaq"/>
            <group value="AmFaqQuestion"/>
            <group value="AmFaqImport"/>
        </annotations>

        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
        </before>
        <after>
            <actionGroup ref="AdminDeleteQuestionFromGridActionGroup" stepKey="deleteImportedQuestion">
                <argument name="questionTitle" value="importQuestion.title"/>
            </actionGroup>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <amOnPage url="{{AdminQuestionImportPage.url}}" stepKey="openQuestionImportPage"/>
        <waitForPageLoad stepKey="waitForQuestionImportPageLoad"/>
        <actionGroup ref="AdminQuestionImportActionGroup" stepKey="importQuestion"/>
        <actionGroup ref="AdminOpenQuestionFromGridActionGroup" stepKey="openImportedQuestionFromGrid">
            <argument name="questionTitle" value="importQuestion.title"/>
        </actionGroup>
        <actionGroup ref="AdminAssertImportedQuestionDataActionGroup" stepKey="assertImportedCategoryData"/>
    </test>
</tests>
