<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqQuestionAssignedToSpecifiedFaqCategoryTest">
        <annotations>
            <features value="Question Is Assigned to Specified FAQ Category"/>
            <stories value="Assert Question Is Assigned to Specified FAQ Category"/>
            <title value="Assert Question Is Available on Specified FAQ Category. Question Is Not Available on Other FAQ Category"/>
            <description value="Assert Question Is Available on Specified FAQ Category. Question Is Not Available on Other FAQ Category"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-23"/>
            <group value="AmFaq"/>
            <group value="AmFaqQuestion"/>
            <group value="AmFaqCategory"/>
        </annotations>

        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminCreateCategoryActionGroup" stepKey="createDefaultCategory"/>
            <actionGroup ref="AdminCreateCategoryActionGroup" stepKey="createSecondCategory">
                <argument name="category" value="secondCategory"/>
            </actionGroup>
            <actionGroup ref="AdminCreateQuestionActionGroup" stepKey="createQuestion"/>
            <actionGroup ref="AdminAssignQuestionToFaqCategoryActionGroup" stepKey="assignQuestionToCategory"/>
        </before>
        <after>
            <actionGroup ref="AdminDeleteQuestionFromGridActionGroup" stepKey="deleteQuestionForAllCustomers"/>
            <actionGroup ref="AdminDeleteCategoryFromGridActionGroup" stepKey="deleteDefaultCategory"/>
            <actionGroup ref="AdminDeleteCategoryFromGridActionGroup" stepKey="deleteDefCategory">
                <argument name="categoryTitle" value="secondCategory.title"/>
            </actionGroup>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="StorefrontOpenFaqPageActionGroup" stepKey="openFaqPageAsGuest"/>
        <actionGroup ref="StorefrontAssertQuestionTitleOnFaqPageActionGroup" stepKey="assertQuestAssignedToDefaultCategoryOnFaqPage"/>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnFaqPageActionGroup" stepKey="assertQuestNotAssignedToSecondCategoryOnFaqPage">
            <argument name="categoryTitle" value="secondCategory.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openDefaultCategoryPage"/>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertQuestOnDefaultCategoryPage"/>
        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openSecondCategoryPage">
            <argument name="category" value="secondCategory"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnCategoryPageActionGroup" stepKey="assertNoQuestOnSecondCategoryPage"/>
    </test>
</tests>
