<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqApiQuestionWithTagTest">
        <annotations>
            <features value="API FAQ Question. API FAQ Tag"/>
            <stories value="Assert API FAQ Question With FAQ Tag"/>
            <title value="Create FAQ Question With Added FAQ Tag Using API"/>
            <description value="Create FAQ Question Using API With Added FAQ Tag. Assert Tag Is on Question Page Admin Part. Storefront FAQ Page, Category Page, Question Page"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-28"/>
            <group value="AmFaq"/>
            <group value="AmFaqQuestion"/>
            <group value="AmFaqTag"/>
            <group value="AmFaqApi"/>
        </annotations>

        <before>
            <createData entity="SimpleSubCategory" stepKey="simpleCategory"/>
            <createData entity="SimpleProductByFusionBackpack" stepKey="simpleProduct">
                <requiredEntity createDataKey="simpleCategory"/>
            </createData>
            <createData entity="apiFaqCategory" stepKey="faqCategory"/>
            <createData entity="apiFaqTag" stepKey="faqTag"/>
            <createData entity="apiFaqQuestionWithTag" stepKey="faqQuestion">
                <requiredEntity createDataKey="simpleProduct"/>
                <requiredEntity createDataKey="faqCategory"/>
                <requiredEntity createDataKey="faqTag"/>
            </createData>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
        </before>
        <after>
            <deleteData createDataKey="faqQuestion" stepKey="deleteFaqQuestion"/>
            <deleteData createDataKey="faqTag" stepKey="deleteFaqTag"/>
            <deleteData createDataKey="faqCategory" stepKey="deleteFaqCategory"/>
            <deleteData createDataKey="simpleProduct" stepKey="deleteProduct"/>
            <deleteData createDataKey="simpleCategory" stepKey="deleteCategory"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="AdminOpenQuestionFromGridActionGroup" stepKey="openQuestionFromGrid">
            <argument name="questionTitle" value="$$faqQuestion.title$$"/>
        </actionGroup>
        <actionGroup ref="AdminAssertQuestionDataWithTagActionGroup" stepKey="assertQuestionDataWithTag">
            <argument name="question" value="$$faqQuestion$$"/>
            <argument name="categoryTitle" value="$$faqCategory.title$$"/>
            <argument name="productName" value="$$simpleProduct.name$$"/>
            <argument name="questionTag" value="$$faqTag.title$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenFaqPageActionGroup" stepKey="openFaqPage"/>
        <actionGroup ref="StorefrontAssertTagBlockOnFaqPageActionGroup" stepKey="assertTagBlockOnFaqPage"/>
        <actionGroup ref="StorefrontAssertTagOnFaqPageActionGroup" stepKey="assertApiTagOnFaqPage">
            <argument name="tag" value="$$faqTag.title$$"/>
            <argument name="qty" value="tagQty.one"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenTagOnFaqPageActionGroup" stepKey="openApiTagFromFaqPage">
            <argument name="tag" value="$$faqTag.title$$"/>
            <argument name="qty" value="tagQty.one"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertTagBlockOnCategoryPageActionGroup" stepKey="assertTagBlockOnSearchResultPage"/>
        <actionGroup ref="StorefrontAssertCurrentTagOnCategoryPageActionGroup" stepKey="assertApiTagOnSearchResultPage">
            <argument name="tag" value="$$faqTag.title$$"/>
            <argument name="qty" value="tagQty.one"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertApiQuestionTitle">
            <argument name="questionTitle" value="$$faqQuestion.title$$"/>
        </actionGroup>
        <!--assert Tag on category page-->
        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openApiCategoryPage">
            <argument name="category" value="$$faqCategory$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertTagBlockOnCategoryPageActionGroup" stepKey="assertTagBlockOnCategoryPage"/>
        <actionGroup ref="StorefrontAssertTagOnCategoryPageActionGroup" stepKey="assertApiTagOnCategoryPage">
            <argument name="tag" value="$$faqTag.title$$"/>
            <argument name="qty" value="tagQty.one"/>
        </actionGroup>
    </test>
</tests>
