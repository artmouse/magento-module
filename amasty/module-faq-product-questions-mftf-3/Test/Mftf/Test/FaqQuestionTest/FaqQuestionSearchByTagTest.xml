<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqQuestionSearchByTagTest">
        <annotations>
            <features value="Question Tag"/>
            <stories value="Assert Question Search Result by Tags"/>
            <title value="Assert Question Search Result by Tags"/>
            <description value="Add Tags To Questions by Admin. Assert Question Search Result by Tags from FAQ Page and Category Page"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-21"/>
            <group value="AmFaq"/>
            <group value="AmFaqQuestion"/>
            <group value="AmFaqTag"/>
        </annotations>

        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminCreateCategoryActionGroup" stepKey="createCategory"/>
            <actionGroup ref="AdminCreateQuestionWithTagActionGroup" stepKey="createDefaultQuestionWithTag"/>
            <actionGroup ref="AdminAssignQuestionToFaqCategoryActionGroup" stepKey="assignDefaultQuestionToCategory"/>
            <actionGroup ref="AdminCreateQuestionWithTagActionGroup" stepKey="createSecondQuestionWithTag">
                <argument name="question" value="secondQuestion"/>
            </actionGroup>
            <actionGroup ref="AdminAssignQuestionToFaqCategoryActionGroup" stepKey="assignSecondQuestionToCategory"/>
        </before>
        <after>
            <actionGroup ref="AdminDeleteQuestionFromGridActionGroup" stepKey="deleteDefaultQuestionOnGrid"/>
            <actionGroup ref="AdminDeleteQuestionFromGridActionGroup" stepKey="deleteSecondQuestionOnGrid">
                <argument name="questionTitle" value="secondQuestion.title"/>
            </actionGroup>
            <actionGroup ref="AdminDeleteCategoryFromGridActionGroup" stepKey="deleteCategoryOnGrid"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <!--open tag from faq page-->
        <!--assert default common tag from faq page-->
        <actionGroup ref="StorefrontOpenFaqPageActionGroup" stepKey="openFaqPageToCheckFirstTag"/>
        <actionGroup ref="StorefrontOpenTagOnFaqPageActionGroup" stepKey="openDefaultTagOnFaqPage"/>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertDefaultQuestFirstTagOpenedFromFaq"/>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertSecondQuestFirstTagOpenedFromFaq">
            <argument name="questionTitle" value="secondQuestion.title"/>
        </actionGroup>
        <!--assert custom tag of default question from faq page-->
        <actionGroup ref="StorefrontOpenFaqPageActionGroup" stepKey="openFaqPageToCheckSecondTag"/>
        <actionGroup ref="StorefrontOpenTagOnFaqPageActionGroup" stepKey="openCustomTagOfDefaultQuestionOnFaqPage">
            <argument name="tag" value="defaultQuestion.customTag"/>
            <argument name="qty" value="tagQty.one"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertDefaultQuestSecondTagOpenedFromFaq"/>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnCategoryPageActionGroup" stepKey="assertNoSecondQuestSecondTagOpenedFromFaq">
            <argument name="questionTitle" value="secondQuestion.title"/>
        </actionGroup>
        <!--assert custom tag of second question from faq page-->
        <actionGroup ref="StorefrontOpenFaqPageActionGroup" stepKey="openFaqPageToCheckThirdTag"/>
        <actionGroup ref="StorefrontOpenTagOnFaqPageActionGroup" stepKey="openCustomTagOfSecondQuestionOnFaqPage">
            <argument name="tag" value="secondQuestion.customTag"/>
            <argument name="qty" value="tagQty.one"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnCategoryPageActionGroup" stepKey="assertNoDefaultQuestThirdTagOpenedFromFaq"/>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertSecondQuestThirdTagOpenedFromFaq">
            <argument name="questionTitle" value="secondQuestion.title"/>
        </actionGroup>
        <!--open tag from category page-->
        <!--assert default common tag from category page-->
        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openCategoryPageToCheckFirstTag"/>
        <actionGroup ref="StorefrontOpenTagOnCategoryPageActionGroup" stepKey="openDefaultTagOnCategoryPage"/>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertDefaultQuestFirstTagOpenedFromCategory"/>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertSecondQuestFirstTagOpenedFromCategory">
            <argument name="questionTitle" value="secondQuestion.title"/>
        </actionGroup>
        <!--assert custom tag of default question from category page-->
        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openCategoryPageToCheckSecondTag"/>
        <actionGroup ref="StorefrontOpenTagOnCategoryPageActionGroup" stepKey="openCustomTagOfDefaultQuestionOnCategoryPage">
            <argument name="tag" value="defaultQuestion.customTag"/>
            <argument name="qty" value="tagQty.one"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertDefaultQuestSecondTagOpenedFromCategory"/>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnCategoryPageActionGroup" stepKey="assertNoSecondQuestSecondTagOpenedFromCategory">
            <argument name="questionTitle" value="secondQuestion.title"/>
        </actionGroup>
        <!--assert custom tag of second question from category page-->
        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openCategoryPageToCheckThirdTag"/>
        <actionGroup ref="StorefrontOpenTagOnCategoryPageActionGroup" stepKey="openCustomTagOfThirdQuestionOnCategoryPage">
            <argument name="tag" value="secondQuestion.customTag"/>
            <argument name="qty" value="tagQty.one"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnCategoryPageActionGroup" stepKey="assertNoDefaultQuestThirdTagOpenedFromCategory"/>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertNoSecondQuestThirdTagOpenedFromCategory">
            <argument name="questionTitle" value="secondQuestion.title"/>
        </actionGroup>
    </test>
</tests>
