<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqInlineEditQuestionOnGridTest">
        <annotations>
            <features value="Inline Edit FAQ Question"/>
            <stories value="Inline Edit FAQ Question"/>
            <title value="Assert Inline Edit FAQ Question"/>
            <description value="Inline Edit FAQ Question. Assert Question After Inline Edit"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-79"/>
            <group value="AmFaq"/>
            <group value="AmFaqQuestion"/>
        </annotations>

        <before>
            <createData entity="SimpleSubCategory" stepKey="simpleCategory"/>
            <createData entity="SimpleProductByFusionBackpack" stepKey="simpleProduct">
                <requiredEntity createDataKey="simpleCategory"/>
            </createData>
            <createData entity="apiFaqQuestion" stepKey="faqQuestion">
                <requiredEntity createDataKey="simpleProduct"/>
            </createData>
            <createData entity="apiFaqCategoryWithQuestion" stepKey="faqCategory">
                <requiredEntity createDataKey="faqQuestion"/>
            </createData>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
        </before>
        <after>
            <deleteData createDataKey="faqCategory" stepKey="deleteFaqCategory"/>
            <deleteData createDataKey="simpleProduct" stepKey="deleteProduct"/>
            <deleteData createDataKey="simpleCategory" stepKey="deleteCategory"/>
            <actionGroup ref="AdminDeleteAllQuestionsFromGridActionGroup" stepKey="deleteFaqQuestion"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="AdminFindQuestionOnGridActionGroup" stepKey="findQuestion">
            <argument name="questionTitle" value="$$faqQuestion.title$$"/>
        </actionGroup>
        <actionGroup ref="AdminInlineEditQuestionOnGridActionGroup" stepKey="inlineEditQuestionOnGrid"/>
        <actionGroup ref="AdminFindQuestionOnGridActionGroup" stepKey="findEditedQuestionOnGrid">
            <argument name="questionTitle" value="editedQuestion.title"/>
        </actionGroup>
        <actionGroup ref="AdminAssertQuestionDataOnGridActionGroup" stepKey="assertEditedQuestionDataOnGrid"/>
        <actionGroup ref="AdminOpenQuestionFromGridActionGroup" stepKey="openEditedQuestionFromGrid">
            <argument name="questionTitle" value="editedQuestion.title"/>
        </actionGroup>
        <actionGroup ref="AdminAssertEditedOnGridQuestionDataActionGroup" stepKey="assertEditedQuestion"/>
    </test>
</tests>
