<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqQuestionSeoTest">
        <annotations>
            <features value="FAQ Question SEO"/>
            <stories value="Assert Question SEO"/>
            <title value="Assert Question SEO on Question Page Source"/>
            <description value="Assert Question SEO on Question Page Source"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-22"/>
            <group value="AmFaq"/>
            <group value="AmFaqQuestion"/>
        </annotations>

        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminCreateCategoryActionGroup" stepKey="createDefaultCategory"/>
            <actionGroup ref="AdminCreateQuestionActionGroup" stepKey="createDefaultQuestion"/>
            <actionGroup ref="AdminAssignQuestionToFaqCategoryActionGroup" stepKey="assignDefaultQuestionToCategory"/>
            <actionGroup ref="AdminCreateQuestionWithSeoInformationActionGroup" stepKey="createQuestionWithSeo"/>
            <actionGroup ref="AdminAssignQuestionToFaqCategoryActionGroup" stepKey="assignSeoQuestionToCategory"/>
        </before>
        <after>
            <actionGroup ref="AdminDeleteCategoryFromGridActionGroup" stepKey="deleteDefaultCategory"/>
            <actionGroup ref="AdminDeleteQuestionFromGridActionGroup" stepKey="deleteDefaultQuestion"/>
            <actionGroup ref="AdminDeleteQuestionFromGridActionGroup" stepKey="deleteQuestionWithSeoInformation">
                <argument name="questionTitle" value="seoQuestion.title"/>
            </actionGroup>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="StorefrontOpenFaqQuestionPageActionGroup" stepKey="openDefaultQuestion"/>
        <actionGroup ref="StorefrontAssertQuestionSeoNoMetaDescInformActionGroup" stepKey="assertSeoInformInDefaultQuestion"/>
        <actionGroup ref="StorefrontOpenFaqQuestionPageActionGroup" stepKey="openQuestionWithSeo">
            <argument name="question" value="seoQuestion"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionSeoMetaInformActionGroup" stepKey="assertSeoInformInSeoQuestion"/>
    </test>
</tests>
