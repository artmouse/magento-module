<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqQuestionRatingTypeAverageOnQuestionPageTest" extends="FaqQuestionRatingTypeYesNoOnQuestionPageSetByAdminTest">
        <annotations>
            <features value="Question Rating"/>
            <stories value="Assert Question Rating Type Average"/>
            <title value="Assert Question Rating Type Average"/>
            <description value="Assert Question Rating Type Average. Guest Customer Rate Question on Question Page"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-58"/>
            <group value="AmFaq"/>
            <group value="AmFaqConfigurations"/>
            <group value="AmFaqQuestion"/>
        </annotations>

        <before>
            <actionGroup ref="AdminAverageRatingActionGroup" stepKey="setRating">
                <argument name="setting" value="averageNotHideZero"/>
            </actionGroup>
        </before>
        <after>
            <actionGroup ref="AdminAverageRatingActionGroup" after="deleteCategoryOnGrid" stepKey="setDefAverageRating"/>
        </after>

        <remove keyForRemoval="assertPositiveVotedOnQuestionPage"/>
        <actionGroup ref="StorefrontAssertVoteTypeOnQuestionPageActionGroup" stepKey="assertVoteTypeOnQuestionPage">
            <argument name="type" value="voteType.average"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoVoteTypeAverageOnQuestionPageActionGroup" stepKey="assertNoQuestionVoteOnQuestionPage"/>
        <actionGroup ref="StorefrontAssertAverageVoteOnQuestionPageActionGroup" after="assertNoQuestionVoteOnQuestionPage" stepKey="assertAverageVoteBeforeVotingOnQuestionPage"/>
        <actionGroup ref="StorefrontVoteTypeAverageOnQuestionPageActionGroup" stepKey="positiveVoteQuestion"/>
        <actionGroup ref="StorefrontAssertAverageVoteOnQuestionPageActionGroup" after="positiveVoteQuestion" stepKey="assertAverageVoteAfterVotingOnQuestionPage">
            <argument name="vote" value="averageTypeVoting.averageRating"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertVoteTypeAverageOnProductPageActionGroup" stepKey="assertVoteOnFirstProductPage"/>
        <actionGroup ref="StorefrontAssertVoteTypeAverageIsVotedOnProductPageActionGroup" after="assertVoteOnFirstProductPage" stepKey="assertQuestionAverageTypeIsVotedOnFirstProductPage"/>
        <actionGroup ref="StorefrontAssertVoteTypeAverageOnProductPageActionGroup" stepKey="assertVoteOnSecondProductPage"/>
        <actionGroup ref="StorefrontAssertVoteTypeAverageIsVotedOnProductPageActionGroup" stepKey="assertQuestionAverageTypeIsVotedOnSecondProductPage"/>
    </test>
</tests>
