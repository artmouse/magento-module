<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqQuestionVisibilityTest">
        <annotations>
            <features value="Question Visibility"/>
            <stories value="Assert Question Visibility"/>
            <title value="Assert Question Is Available for Guest and Logged in Customer in According With Visibility"/>
            <description value="Assert Question Is Available for Guest and Logged in Customer in According With Visibility"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-16"/>
            <group value="AmFaq"/>
            <group value="AmFaqQuestion"/>
        </annotations>

        <before>
            <createData entity="SimpleSubCategory" stepKey="firstCategory"/>
            <createData entity="SimpleProductByFusionBackpack" stepKey="firstProduct">
                <requiredEntity createDataKey="firstCategory"/>
            </createData>
            <createData entity="SimpleSubCategory" stepKey="secondCategory"/>
            <createData entity="SimpleProductByDrivenBackpack" stepKey="secondProduct">
                <requiredEntity createDataKey="secondCategory"/>
            </createData>
            <createData entity="Simple_US_Customer" stepKey="customer"/>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminCreateCategoryActionGroup" stepKey="createDefCategory"/>
            <!--create none visibility question-->
            <actionGroup ref="AdminCreateQuestionActionGroup" stepKey="createNoneVisibilityQuestion">
                <argument name="question" value="noneVisibilityQuestion"/>
            </actionGroup>
            <actionGroup ref="AdminAssignQuestionToFaqCategoryActionGroup" stepKey="assignNoneVisibilityQuestionToCategory"/>
            <actionGroup ref="AdminAssignProductToQuestionActionGroup" stepKey="assignFirstProductToNoneVisibilityQuestion">
                <argument name="productName" value="$$firstProduct.product[name]$$"/>
            </actionGroup>
            <actionGroup ref="AdminAssignCategoryToQuestionActionGroup" stepKey="assignSecondCategoryToNoneVisibilityQuestion">
                <argument name="categoryName" value="$$secondCategory.name$$"/>
            </actionGroup>
            <!--create public visibility question-->
            <actionGroup ref="AdminCreateQuestionActionGroup" stepKey="createPublicVisibilityQuestion">
                <argument name="question" value="publicVisibilityQuestion"/>
            </actionGroup>
            <actionGroup ref="AdminAssignQuestionToFaqCategoryActionGroup" stepKey="assignPublicVisibilityQuestionToCategory"/>
            <actionGroup ref="AdminAssignProductToQuestionActionGroup" stepKey="assignFirstProductToPublicVisibilityQuestion">
                <argument name="productName" value="$$firstProduct.product[name]$$"/>
            </actionGroup>
            <actionGroup ref="AdminAssignCategoryToQuestionActionGroup" stepKey="assignSecondCategoryToPublicVisibilityQuestion">
                <argument name="categoryName" value="$$secondCategory.name$$"/>
            </actionGroup>
            <!--create logged in visibility question-->
            <actionGroup ref="AdminCreateQuestionActionGroup" stepKey="createLoggedInVisibilityQuestion">
                <argument name="question" value="loggedInVisibilityQuestion"/>
            </actionGroup>
            <actionGroup ref="AdminAssignQuestionToFaqCategoryActionGroup" stepKey="assignLoggedInVisibilityQuestionToCategory"/>
            <actionGroup ref="AdminAssignProductToQuestionActionGroup" stepKey="assignFirstProductToLoggedInVisibilityQuestion">
                <argument name="productName" value="$$firstProduct.product[name]$$"/>
            </actionGroup>
            <actionGroup ref="AdminAssignCategoryToQuestionActionGroup" stepKey="assignSecondCategoryToLoggedInVisibilityQuestion">
                <argument name="categoryName" value="$$secondCategory.name$$"/>
            </actionGroup>
        </before>
        <after>
            <deleteData createDataKey="firstProduct" stepKey="deleteFirstProduct"/>
            <deleteData createDataKey="secondProduct" stepKey="deleteSecondProduct"/>
            <deleteData createDataKey="firstCategory" stepKey="deleteFirstCategory"/>
            <deleteData createDataKey="secondCategory" stepKey="deleteSecondCategory"/>
            <deleteData createDataKey="customer" stepKey="deleteCustomer"/>
            <actionGroup ref="AdminDeleteQuestionFromGridActionGroup" stepKey="deleteNoneVisibilityQuestion">
                <argument name="questionTitle" value="noneVisibilityQuestion.title"/>
            </actionGroup>
            <actionGroup ref="AdminDeleteQuestionFromGridActionGroup" stepKey="deletePublicVisibilityQuestion">
                <argument name="questionTitle" value="publicVisibilityQuestion.title"/>
            </actionGroup>
            <actionGroup ref="AdminDeleteQuestionFromGridActionGroup" stepKey="deleteLoggedInVisibilityQuestion">
                <argument name="questionTitle" value="loggedInVisibilityQuestion.title"/>
            </actionGroup>
            <actionGroup ref="AdminDeleteCategoryFromGridActionGroup" stepKey="deleteDefCategory"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <!--guest-->
        <!--assert questions on Faq page as guest-->
        <actionGroup ref="StorefrontOpenFaqPageActionGroup" stepKey="openFaqPageAsGuest"/>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnFaqPageActionGroup" stepKey="assertNoNoneVisibilityQuestionOnFaqPageAsGuest">
            <argument name="questionTitle" value="noneVisibilityQuestion.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnFaqPageActionGroup" stepKey="assertPublicVisibilityQuestionOnFaqPageAsGuest">
            <argument name="questionTitle" value="publicVisibilityQuestion.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnFaqPageActionGroup" stepKey="assertNoLoggedInVisibilityQuestionOnFaqPageAsGuest">
            <argument name="questionTitle" value="loggedInVisibilityQuestion.title"/>
        </actionGroup>
        <!--assert questions on Faq Category page as guest-->
        <actionGroup ref="StorefrontOpenCategoryFromFaqPageActionGroup" stepKey="openCategoryPageAsGuest"/>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnCategoryPageActionGroup" stepKey="assertNoNoneVisibilityQuestionOnCategoryPageAsGuest">
            <argument name="questionTitle" value="noneVisibilityQuestion.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertPublicVisibilityQuestionOnCategoryPageAsGuest">
            <argument name="questionTitle" value="publicVisibilityQuestion.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnCategoryPageActionGroup" stepKey="assertNoLoggedInVisibilityQuestionOnCategoryPageAsGuest">
            <argument name="questionTitle" value="loggedInVisibilityQuestion.title"/>
        </actionGroup>
        <!--assert questions on Product page as guest-->
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openFirstProductPageAsGuest">
            <argument name="productUrl" value="$$firstProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnProductPageActionGroup" stepKey="assertNoNoneVisibilityQuestionOnFirstProductPageAsGuest">
            <argument name="questionTitle" value="noneVisibilityQuestion.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnProductPageActionGroup" stepKey="assertPublicVisibilityQuestionOnFirstProductPageAsGuest">
            <argument name="questionTitle" value="publicVisibilityQuestion.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnProductPageActionGroup" stepKey="assertNoLoggedInVisibilityQuestionOnFirstProductPageAsGuest">
            <argument name="questionTitle" value="loggedInVisibilityQuestion.title"/>
        </actionGroup>
        <!--assert questions on Category Product page as guest-->
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openSecondProductPageAsGuest">
            <argument name="productUrl" value="$$secondProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnProductPageActionGroup" stepKey="assertNoNoneVisibilityQuestionOnSecondProductPageAsGuest">
            <argument name="questionTitle" value="noneVisibilityQuestion.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnProductPageActionGroup" stepKey="assertPublicVisibilityQuestionOnSecondProductPageAsGuest">
            <argument name="questionTitle" value="publicVisibilityQuestion.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnProductPageActionGroup" stepKey="assertNoLoggedInVisibilityQuestionOnSecondProductPageAsGuest">
            <argument name="questionTitle" value="loggedInVisibilityQuestion.title"/>
        </actionGroup>
        <!--assert none visibility question direct url as guest-->
        <actionGroup ref="StorefrontOpenNotAvailableDirectUrlQuestionActionGroup" stepKey="openNoneVisibilityQuestionDirectUrlAsGuest">
            <argument name="question" value="noneVisibilityQuestion"/>
        </actionGroup>
        <!--assert for logged in visibility question direct url as guest-->
        <actionGroup ref="StorefrontOpenNotAvailableDirectUrlQuestionActionGroup" stepKey="openLoggedInVisibilityQuestionDirectUrlAsGuest">
            <argument name="question" value="loggedInVisibilityQuestion"/>
        </actionGroup>
        <!--logged in customer-->
        <!--assert questions on Faq page as logged in customer-->
        <actionGroup ref="LoginToStorefrontActionGroup" stepKey="loginToStorefront">
            <argument name="Customer" value="$$customer$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenFaqPageActionGroup" stepKey="openFaqPageAsLoggedInCustomer"/>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnFaqPageActionGroup" stepKey="assertNoNoneVisibilityQuestionOnFaqPageAsLoggedInCustom">
            <argument name="questionTitle" value="noneVisibilityQuestion.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnFaqPageActionGroup" stepKey="assertPublicVisibilityQuestionOnFaqPageAsLoggedInCustom">
            <argument name="questionTitle" value="publicVisibilityQuestion.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnFaqPageActionGroup" stepKey="assertLoggedInVisibilityQuestionOnFaqPageAsLoggedInCustom">
            <argument name="questionTitle" value="loggedInVisibilityQuestion.title"/>
        </actionGroup>
        <!--assert questions on Category page as logged in customer-->
        <actionGroup ref="StorefrontOpenCategoryFromFaqPageActionGroup" stepKey="openCategoryPageAsLoggedInCustom"/>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnCategoryPageActionGroup" stepKey="assertNoNoneVisibilityQuestionOnCategoryPageAsLoggedInCustom">
            <argument name="questionTitle" value="noneVisibilityQuestion.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertPublicVisibilityQuestionOnCategoryPageAsLoggedInCustom">
            <argument name="questionTitle" value="publicVisibilityQuestion.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnCategoryPageActionGroup" stepKey="assertLoggedInVisibilityQuestionOnCategoryPageAsLoggedInCustom">
            <argument name="questionTitle" value="loggedInVisibilityQuestion.title"/>
        </actionGroup>
        <!--assert questions on Product page as logged in customer-->
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openFirstProductPageAsLoggedCustomer">
            <argument name="productUrl" value="$$firstProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnProductPageActionGroup" stepKey="assertNoNoneVisibilityQuestionOnFirstProductPageAsLoggedCustomer">
            <argument name="questionTitle" value="noneVisibilityQuestion.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnProductPageActionGroup" stepKey="assertPublicVisibilityQuestionOnFirstProductPageAsLoggedCustomer">
            <argument name="questionTitle" value="publicVisibilityQuestion.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnProductPageActionGroup" stepKey="assertLoggedInVisibilityQuestionOnFirstProductPageAsLoggedCustomer">
            <argument name="questionTitle" value="loggedInVisibilityQuestion.title"/>
        </actionGroup>
        <!--assert questions on Category Product page as logged in customer-->
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openSecondProductPageAsLoggedCustomer">
            <argument name="productUrl" value="$$secondProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoQuestionTitleOnProductPageActionGroup" stepKey="assertNoNoneVisibilityQuestionOnSecondProductPageAsLoggedCustomer">
            <argument name="questionTitle" value="noneVisibilityQuestion.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnProductPageActionGroup" stepKey="assertPublicVisibilityQuestionOnSecondProductPageAsLoggedCustomer">
            <argument name="questionTitle" value="publicVisibilityQuestion.title"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertQuestionTitleOnProductPageActionGroup" stepKey="assertLoggedInVisibilityQuestionOnSecondProductPageAsLoggedCustomer">
            <argument name="questionTitle" value="loggedInVisibilityQuestion.title"/>
        </actionGroup>
        <!--assert none visibility question direct url as logged in customer-->
        <actionGroup ref="StorefrontOpenNotAvailableDirectUrlQuestionActionGroup" stepKey="openNoneVisibilityQuestionDirectUrlAsLoggedCustomer">
            <argument name="question" value="noneVisibilityQuestion"/>
        </actionGroup>
    </test>
</tests>
