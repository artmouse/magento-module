<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqAskQuestionAsCustomerOnFaqQuestionPageTest" extends="FaqAskQuestionAsCustomerOnProductPageTest">
        <annotations>
            <features value="Ask Question"/>
            <stories value="Ask Question As Logged In Customer"/>
            <title value="Ask Question As Logged In Customer on FAQ Question Page"/>
            <description value="Ask Question As Logged In Customer on FAQ Question Page. Assert Question in Admin Part"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-69"/>
            <group value="AmFaq"/>
            <group value="AmFaqAskQuestion"/>
        </annotations>

        <before>
            <createData entity="apiFaqCategoryAllCustomers" after="simpleProduct" stepKey="faqCategory"/>
            <createData entity="apiFaqQuestionAllCustomers" after="faqCategory" stepKey="faqQuestion">
                <requiredEntity createDataKey="faqCategory"/>
                <requiredEntity createDataKey="simpleProduct"/>
            </createData>
        </before>
        <after>
            <deleteData createDataKey="faqCategory" before="deleteFaqQuestion" stepKey="deleteFaqCategory"/>
            <deleteData createDataKey="faqQuestion" before="deleteProduct" stepKey="deleteFaqQuestion"/>
        </after>

        <remove keyForRemoval="openQuestionTab"/>
        <actionGroup ref="StorefrontOpenFaqQuestionPageActionGroup" stepKey="openPageForQuestion">
            <argument name="question" value="$$faqQuestion$$"/>
        </actionGroup>
        <!--assert question data in admin part-->
        <actionGroup ref="AdminAssertNoProductInQuestionAskedOnFrontActionGroup" stepKey="assertProductInQuestion">
            <argument name="productName" value="$$simpleProduct.name$$"/>
        </actionGroup>
    </test>
</tests>
