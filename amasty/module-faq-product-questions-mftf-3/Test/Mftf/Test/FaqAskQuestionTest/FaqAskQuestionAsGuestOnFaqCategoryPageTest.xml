<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqAskQuestionAsGuestOnFaqCategoryPageTest" extends="FaqAskQuestionAsGuestOnProductPageTest">
        <annotations>
            <features value="Ask Question"/>
            <stories value="Ask Question As Guest"/>
            <title value="Ask Question As Guest on FAQ Category Page"/>
            <description value="Ask Question As Guest on FAQ Category Page. Assert Question in Admin Part"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-65"/>
            <group value="AmFaq"/>
            <group value="AmFaqAskQuestion"/>
        </annotations>

        <before>
            <createData entity="apiFaqQuestion" after="simpleProduct" stepKey="faqQuestion">
                <requiredEntity createDataKey="simpleProduct"/>
            </createData>
            <createData entity="apiFaqCategoryWithQuestion" after="faqQuestion" stepKey="faqCategory">
                <requiredEntity createDataKey="faqQuestion"/>
            </createData>
        </before>
        <after>
            <deleteData createDataKey="faqCategory" before="deleteFaqQuestion" stepKey="deleteFaqCategory"/>
            <deleteData createDataKey="faqQuestion" before="deleteProduct" stepKey="deleteFaqQuestion"/>
        </after>

        <remove keyForRemoval="openQuestionTab"/>
        <actionGroup ref="StorefrontOpenFaqCategoryPageActionGroup" stepKey="openPageForQuestion">
            <argument name="category" value="$$faqCategory$$"/>
        </actionGroup>
        <!--assert question data in admin part-->
        <actionGroup ref="AdminAssertNoProductInQuestionAskedOnFrontActionGroup" stepKey="assertProductInQuestion">
            <argument name="productName" value="$$simpleProduct.name$$"/>
        </actionGroup>
    </test>
</tests>
