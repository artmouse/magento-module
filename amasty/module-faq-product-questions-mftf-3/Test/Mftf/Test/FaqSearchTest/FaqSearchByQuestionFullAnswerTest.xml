<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqSearchByQuestionFullAnswerTest">
        <annotations>
            <features value="FAQ Search"/>
            <stories value="Assert FAQ Search"/>
            <title value="Search Wrong Criteria an Exist Criteria on FAQ Home Page"/>
            <description value="Search Wrong Criteria an Exist Criteria on FAQ Home Page. Open Question From Search Result Select"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-70"/>
            <group value="AmFaq"/>
            <group value="AmFaqSearch"/>
        </annotations>

        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminCreateCategoryActionGroup" stepKey="createDefaultCategory"/>
            <actionGroup ref="AdminCreateQuestionActionGroup" stepKey="createQuestion"/>
            <actionGroup ref="AdminAssignQuestionToFaqCategoryActionGroup" stepKey="assignQuestionToCategory"/>
        </before>
        <after>
            <actionGroup ref="AdminDeleteQuestionFromGridActionGroup" stepKey="deleteQuestion"/>
            <actionGroup ref="AdminDeleteCategoryFromGridActionGroup" stepKey="deleteDefaultCategory"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="StorefrontOpenFaqPageActionGroup" stepKey="openFaqPage"/>
        <actionGroup ref="StorefrontSearchWrongCriteriaActionGroup" stepKey="searchWrongCriteria">
            <argument name="question" value="defaultQuestion"/>
        </actionGroup>
        <actionGroup ref="StorefrontSearchAndOpenSearchResultActionGroup" stepKey="searchAndOpenSearchResult">
            <argument name="question" value="defaultQuestion"/>
        </actionGroup>
    </test>
</tests>
