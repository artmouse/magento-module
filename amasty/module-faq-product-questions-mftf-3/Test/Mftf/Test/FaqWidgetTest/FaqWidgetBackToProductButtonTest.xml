<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="FaqWidgetBackToProductButtonTest" extends="FaqWidgetFaqCategoriesListTest">
        <annotations>
            <features value="Widget Back to Product Button"/>
            <stories value="Widget Back to Product Button"/>
            <title value="Add Widget Back to Product Button"/>
            <description value="Assert Widget Back to Product Button on Storefront"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AmFaq-73"/>
            <group value="AmFaq"/>
            <group value="AmFaqWidget"/>
        </annotations>

        <before>
            <actionGroup ref="AdminCreateFaqWidgetActionGroup" stepKey="createAmFaqWidget">
                <argument name="widget" value="amBackToProductWidget"/>
            </actionGroup>
        </before>
        <after>
            <actionGroup ref="AdminDeleteWidgetActionGroup" stepKey="deleteAmFaqWidget">
                <argument name="widget" value="amBackToProductWidget"/>
            </actionGroup>
        </after>

        <remove keyForRemoval="openCategory"/>
        <remove keyForRemoval="assertCategory"/>
        <amOnPage url="{{StorefrontMainPage.url}}" before="openProductPage" stepKey="openHomePageBeforeProduct"/>
        <actionGroup ref="StorefrontOpenProductPageActionGroup" before="openHomePage" stepKey="openProductPage">
            <argument name="productUrl" value="$$simpleProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertBackToProductButtonActionGroup" stepKey="assertWidgetOnHomePage"/>
        <actionGroup ref="StorefrontUseBackToProductButtonActionGroup" stepKey="clickBackToProductButton"/>
        <actionGroup ref="StorefrontAssertProductNameOnProductPageActionGroup" stepKey="assertProductName">
            <argument name="productName" value="$$simpleProduct.name$$" />
        </actionGroup>
    </test>
</tests>
