<?xml version="1.0" encoding="UTF-8"?>
<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">

    <section name="StorefrontAskQuestionSection">
        <element name="RegUserCanSubmitQuestionMsg" type="block" selector="//div[@class='ask-question-form widget']//div[@class='button-info'][contains(string(),'Please, mind that only logged in users can submit questions')]"/>
        <element name="AskQuestionBlock" type="block" selector="//div[@class='ask-question-form widget'][contains(string(),'Did you find what you were looking for?')]"/>
        <element name="AskQuestion" type="button" selector="//div[@class='ask-question-form widget']//button[@title='Ask a Question']" timeout="10"/>
        <element name="Question" type="textarea" selector="//textarea[@id='amfaq-title']"/>
        <element name="Name" type="input" selector="//input[@id='amfaq-name']"/>
        <element name="GetNotification" type="input" selector="//input[@id='amfaq-notification']"/>
        <element name="Email" type="input" selector="//input[@id='amfaq-email']"/>
        <element name="SendQuestion" type="button" selector="//div[@class='ask-question-form widget']//button[contains(string(),'Send the Question')]"/>
        <element name="SuccessMessage" type="text" parameterized="true" selector="//div[@class='message-success success message']/div[contains(string(),'{{message}}')]"/>
        <element name="FaqGdprCheckbox" type="text" selector="//input[@id='amfaq-gdpr']"/>
    </section>
</sections>
