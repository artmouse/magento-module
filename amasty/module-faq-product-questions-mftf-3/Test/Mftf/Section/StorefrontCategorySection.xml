<?xml version="1.0" encoding="UTF-8"?>
<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">

    <section name="StorefrontCategorySection">
        <element name="CategoryTitle" type="text" parameterized="true" selector="//h1/span[contains(string(), '{{categoryTitle}}')]"/>
        <element name="OpenedCategoryInSidebar" type="button" parameterized="true" selector="//div[@class='amfaq_categories']//div[@class='item current']/a[contains(string(), '{{categoryTitle}}')]"/>
        <element name="CategoryInSidebar" type="button" parameterized="true" selector="//div[@class='amfaq_categories']//a[contains(string(), '{{categoryTitle}}')]"/>
        <element name="FirstCategoryInSidebar" type="button" parameterized="true" selector="//div[@class='amfaq_categories']/div[2][contains(string(), '{{categoryTitle}}')]"/>
        <element name="SecondCategoryInSidebar" type="button" parameterized="true" selector="//div[@class='amfaq_categories']/div[3][contains(string(), '{{categoryTitle}}')]"/>
        <element name="CategoryDescription" type="text" parameterized="true" selector="//div[@class='amfaq-category-description'][contains(string(), '{{categoryDescription}}')]"/>
        <element name="Breadcrumbs" type="text" selector="//div[@class='breadcrumbs']"/>
        <element name="CategoryInBreadcrumbs" type="text" parameterized="true" selector="//div[@class='breadcrumbs']//li[@class='item category_page'][contains(string(), '{{categoryTitle}}')]"/>
        <element name="QuestionTitle" type="text" parameterized="true" selector="//div[@class='am-item'][contains(string(), '{{question}}')]"/>
        <element name="QuestionTitlePosition" type="text" parameterized="true" selector="//div[{{position}}][@class='am-item'][contains(string(), '{{question}}')]"/>
        <element name="QuestionFirstPosition" type="text" parameterized="true" selector="//div[1][@class='am-item'][contains(string(), '{{question}}')]"/>
        <element name="QuestionSecondPosition" type="text" parameterized="true" selector="//div[2][@class='am-item'][contains(string(), '{{question}}')]"/>
        <element name="QuestionTab" type="button" parameterized="true" selector="//div[@class='am-item'][contains(string(), '{{question}}')]//span"/>
        <element name="QuestionRead" type="button" parameterized="true" selector="//div[@class='am-item'][contains(string(), '{{question}}')]//a[contains(string(),'Read More')]"/>
        <element name="QuestionAnswer" type="text" parameterized="true" selector="//div[@class='am-item'][contains(string(), '{{question}}')]//div[contains(@class, 'am-content')][contains(string(), '{{answer}}')]"/>
        <element name="TagsBlock" type="block" selector="//div[@class='amfaq_tags'][contains(string(),'Tags')]"/>
        <element name="Tag" type="button" parameterized="true" selector="//div[@class='tags_content']//div[@class='item']//a[contains(string(),'{{tag}}')][contains(string(),'({{questionQty}})')]"/>
        <element name="CurrentTag" type="button" parameterized="true" selector="//div[@class='tags_content']//div[@class='item current']//a[contains(string(),'{{tag}}')][contains(string(),'({{questionQty}})')]"/>
        <element name="Pagination" type="block" selector="//div[@class='amfaq-pager']//ul[@class='items pages-items']"/>
        <element name="PageAction" type="button" parameterized="true" selector="//div[@class='amfaq-pager']//li[@class='item pages-item-{{duration}}']"/>
    </section>
</sections>
