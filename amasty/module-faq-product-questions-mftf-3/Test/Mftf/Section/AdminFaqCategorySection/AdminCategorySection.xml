<?xml version="1.0" encoding="UTF-8"?>
<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">

    <section name="AdminCategorySection">
        <element name="CategoryTitle" type="text" parameterized="true" selector="//h1[@class='page-title'][contains(string(),'{{categoryTitle}}')]"/>
        <element name="SaveAndContinueEdit" type="button" selector="//button[@id='save_and_continue']"/>
        <element name="Save" type="button" selector="//button[@id='save']"/>
        <element name="Delete" type="button" selector="//button[@id='delete']"/>
        <element name="AcceptDeleteButton" type="button" selector="//button[@class='action-primary action-accept']"/>
        <element name="SaveSuccessMsg" type="text" selector="//div[@data-ui-id='messages-message-success'][contains(string(), 'You saved the item.')]"/>
        <!--Category Details tab-->
        <element name="EnableCategory" type="button" selector="//span[contains(string(), 'Enable Category')]"/>
        <element name="CategoryEnabled" type="button" parameterized="true" selector="//div[@data-index='status']//div[@data-role='switcher']//input[@value='{{isEnabled}}']"/>
        <element name="CategoryName" type="input" selector="//input[@name='title']"/>
        <element name="UrlKey" type="input" selector="//input[@name='url_key']"/>
        <element name="StoreViews" type="select" selector="//select[@name='store_ids']"/>
        <element name="StoreView" type="button" parameterized="true" selector="//option[contains(string(), '{{storeView}}')]"/>
        <element name="CustomerGroups" type="select" selector="//select[@name='customer_groups']"/>
        <element name="Position" type="input" selector="//input[@name='position']"/>
        <element name="Icon" type="input" selector="//input[@name='icon_file']"/>
        <element name="FileName" type="text" parameterized="true" selector="//div[@class='file-uploader-filename'][contains(string(), '{{fileName}}')]"/>
        <element name="ShowHideEditor" type="button" selector="//button[@id='toggleamastyfaq_category_form_description']"/>
        <element name="DescriptionIframe" type="iframe" selector="//iframe[@id='amastyfaq_category_form_description_ifr']"/>
        <element name="Description" type="textarea" selector="//textarea[@name='description']"/>
        <!--Questions tab-->
        <element name="QuestionsTab" type="button" selector="//div[@data-index='questions'][contains(string(), 'Questions')]"/>
        <element name="AddQuestions" type="button" selector="//div[@data-index='questions']//button[contains(string(), 'Add questions')]"/>
        <element name="AddSelectedQuestions" type="button" selector="//button[contains(string(), 'Add Selected Questions')]"/>
        <element name="Filters" type="button" selector="//button[@data-action='grid-filter-expand']"/>
        <element name="ApplyFilters" type="button" selector="//button[@data-action='grid-filter-apply']"/>
        <element name="ClearAllFilters" type="button" selector="//button[@data-action='grid-filter-reset']"/>
        <element name="ActiveFilters" type="text" selector="//*[@class='admin__data-grid-header']//div[@class='admin__data-grid-filters-current _show']"/>
        <element name="QuestionTitle" type="input" selector="//div[@class='modal-content']//input[@name='title']"/>
        <element name="QuestionCheckbox" type="checkbox" parameterized="true" selector="//*[@class='data-grid-cell-content'][contains(string(), '{{questionName}}')]/parent::td/parent::tr//*[@class='admin__control-checkbox']"/>
        <element name="QuestionCell" type="text" parameterized="true" selector="//tr[1]//td[count(//div[@data-role='grid-wrapper']//tr//th[contains(., '{{column}}')]/preceding-sibling::th) +1 ]"/>
        <!--SEO tab-->
        <element name="SeoTab" type="button" selector="//div[@data-index='seo'][contains(string(), 'SEO')]"/>
        <element name="MetaTitle" type="input" selector="//input[@name='meta_title']"/>
        <element name="MetaDescription" type="textarea" selector="//textarea[@name='meta_description']"/>
        <element name="Noindex" type="button" selector="//span[contains(string(), 'Noindex')]"/>
        <element name="NoindexEnabled" type="button" parameterized="true" selector="//div[@data-index='noindex']//div[@data-role='switcher']//input[@value='{{isEnabled}}']"/>
        <element name="Nofollow" type="button" selector="//span[contains(string(), 'Nofollow')]"/>
        <element name="NofollowEnabled" type="button" parameterized="true" selector="//div[@data-index='nofollow']//div[@data-role='switcher']//input[@value='{{isEnabled}}']"/>
    </section>
</sections>
