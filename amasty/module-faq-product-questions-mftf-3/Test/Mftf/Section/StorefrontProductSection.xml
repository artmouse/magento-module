<?xml version="1.0" encoding="UTF-8"?>
<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">

    <section name="StorefrontProductSection">
        <element name="ProductQuestionsTab" type="button" selector="//div[@id='tab-label-amfaq_product']"/>
        <element name="TabPosition" type="button" parameterized="true" selector="//div[contains(@class, 'data item title')][{{position}}]"/>
        <element name="QuestionTitle" type="text" parameterized="true" selector="//div[@class='am-title'][contains(string(),'{{question}}')]"/>
        <element name="QuestionTitlePosition" type="text" parameterized="true" selector="//div[{{position}}][@class='am-item'][contains(string(),'{{question}}')]"/>
        <element name="QuestionFirstPosition" type="text" parameterized="true" selector="//div[1][@class='am-item'][contains(string(),'{{question}}')]"/>
        <element name="QuestionSecondPosition" type="text" parameterized="true" selector="//div[2][@class='am-item'][contains(string(),'{{question}}')]"/>
        <element name="QuestionTab" type="button" parameterized="true" selector="//div[@class='am-title'][contains(string(),'{{question}}')]//span"/>
        <element name="QuestionRead" type="button" parameterized="true" selector="//div[@class='am-item'][contains(string(), '{{question}}')]//a[contains(string(),'Read More')]"/>
        <element name="QuestionAnswer" type="text" parameterized="true" selector="//div[@class='am-item'][contains(string(), '{{question}}')]//div[contains(@class, 'am-content')][contains(string(), '{{answer}}')]"/>
        <!--voting-->
        <element name="RatingTypeBlock" type="text" parameterized="true" selector="//div[@class='amfaq-rating-{{type}}'][contains(string(),'Was this answer helpful?')]"/>
        <element name="RatingResult" type="text" selector="//span[@class='amfaq-rating-data-wrapper']"/>
        <element name="VoteAction" type="button" parameterized="true" selector="//span[contains(@data-bind, '{{vote}}')]"/>
        <element name="LoginToRateMsg" type="button" parameterized="true" selector="//div[@class='amfaq-rating']//div[@class='messages'][contains(string(), '{{msg}}')]"/>
        <!--yes or no vote-->
        <element name="YesNoVoted" type="text" parameterized="true" selector="//div[@class='amfaq-rating-yesno']//span[contains(@class, 'yesno-voted')][contains(string(),'{{voteYesNo}}')]"/>
        <element name="PositiveRatingYesNo" type="text" parameterized="true" selector="//span[@class='amfaq-rating-data-wrapper']//span[contains(@data-bind, 'getPositiveRating')][contains(string(), '{{positiveRate}}')]"/>
        <element name="TotalRatingYesNo" type="text" parameterized="true" selector="//span[@class='amfaq-rating-data-wrapper']//span[contains(@data-bind, 'getTotalRating')][contains(string(), '{{totalRate}}')]"/>
        <!--average-->
        <element name="RatingAverageTypeIsVoted" type="text" selector="//span[contains(@class, 'amfaq-rate-the-answer -gray') and contains(text(), 'Total rating 4.0')]"/>
        <!--up or down vote-->
        <element name="UpDownVoted" type="text" parameterized="true" selector="//div[@class='amfaq-rating-voting']//span[contains(@class,'amfaq-arrow-{{upOrDownVote}} amfaq-voted')]"/>
        <element name="PositiveRatingUpDown" type="text" parameterized="true" selector="//div[@class='amfaq-rating-voting']//span[contains(@class,'amfaq-arrow-up')]//following::span[contains(string(),'{{positiveRate}}')][1]"/>
        <element name="NegativeRatingUpDown" type="text" parameterized="true" selector="//div[@class='amfaq-rating-voting']//span[contains(@class,'amfaq-arrow-down')]//following::span[contains(string(),'{{positiveRate}}')][1]"/>
    </section>
</sections>
