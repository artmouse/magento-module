<?xml version="1.0" encoding="UTF-8"?>
<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">

    <section name="StorefrontQuestionSection">
        <element name="QuestionTitle" type="text" parameterized="true" selector="//h1/span[contains(string(), '{{questionTitle}}')]"/>
        <element name="Breadcrumbs" type="text" selector="//div[@class='breadcrumbs']"/>
        <element name="CategoryInBreadcrumbs" type="text" parameterized="true" selector="//div[@class='breadcrumbs']//li[@class='item category_page'][contains(string(), '{{categoryTitle}}')]"/>
        <element name="QuestionInBreadcrumbs" type="text" parameterized="true" selector="//div[@class='breadcrumbs']//li[@class='item question_page'][contains(string(), '{{questionTitle}}')]"/>
        <element name="QuestionAnswer" type="text" parameterized="true" selector="//div[@class='question_view']//div[@class='answer'][contains(string(), '{{answer}}')]"/>
        <!--voting-->
        <element name="RatingTypeBlock" type="text" parameterized="true" selector="//div[@class='amfaq-rating-{{type}}']"/>
        <element name="RatingResultYesNo" type="text" selector="//span[@class='amfaq-rating-data-wrapper']"/>
        <element name="VoteAction" type="button" parameterized="true" selector="//span[contains(@data-bind, '{{vote}}')]"/>
        <element name="LoginToRateMsg" type="button" parameterized="true" selector="//div[@class='amfaq-rating']//div[@class='messages'][contains(string(), '{{msg}}')]"/>
        <!--yes or no vote-->
        <element name="YesNoVoted" type="text" parameterized="true" selector="//div[@class='amfaq-rating-yesno']//span[contains(@class, 'yesno-voted')][contains(string(),'{{voteYesNo}}')]"/>
        <element name="PositiveRatingYesNo" type="text" parameterized="true" selector="//span[@class='amfaq-rating-data-wrapper']//span[contains(@data-bind, 'getPositiveRating')][contains(string(), '{{positiveRate}}')]"/>
        <element name="TotalRatingYesNo" type="text" parameterized="true" selector="//span[@class='amfaq-rating-data-wrapper']//span[contains(@data-bind, 'getTotalRating')][contains(string(), '{{totalRate}}')]"/>
        <!--up or down vote-->
        <element name="RatingVotingTypeIsVoted" type="text" selector="//span[@class='amfaq-rating-data-wrapper isVoted']"/>
        <element name="UpDownVoted" type="text" parameterized="true" selector="//div[@class='amfaq-rating-voting']//span[contains(@class,'amfaq-arrow-{{upOrDownVote}} amfaq-voted')]"/>
        <element name="PositiveRatingUpDown" type="text" parameterized="true" selector="//div[@class='amfaq-rating-voting']//span[contains(@class,'amfaq-arrow-up')]//following::span[contains(string(),'{{rate}}')][1]"/>
        <element name="NegativeRatingUpDown" type="text" parameterized="true" selector="//div[@class='amfaq-rating-voting']//span[contains(@class,'amfaq-arrow-down')]//following::span[contains(string(),'{{rate}}')][1]"/>
        <!--average-->
        <element name="RatingAverageTypeIsVoted" type="text" selector="//span[contains(@class, 'amfaq-rate-the-answer -gray') and contains(text(), 'Total rating 4.0')]"/>
        <element name="TotalRatingAverage" parameterized="true" type="text" selector="//span[@class='amfaq-rate-the-answer -gray'][contains(string(), 'Total rating {{rate}}')]"/>
        <element name="AverageStar" parameterized="true" type="button" selector="//div[@class='amfaq-rating-average']//label[@title='{{star}} Stars']"/>
        <!--social buttons-->
        <element name="SocialButtonsBlock" type="block" selector="//div[@class='amfaq-social-buttons']"/>
        <element name="SocialNetwork" type="button" parameterized="true" selector="//div[@class='amfaq-social-buttons']/a/img[@title='{{network}}']"/>
    </section>
</sections>
