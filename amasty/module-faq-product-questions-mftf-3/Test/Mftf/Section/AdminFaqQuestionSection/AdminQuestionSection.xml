<?xml version="1.0" encoding="UTF-8"?>
<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">

    <section name="AdminQuestionSection">
        <element name="QuestionTitle" type="text" parameterized="true" selector="//h1[@class='page-title'][contains(string(),'{{questionTitle}}')]"/>
        <element name="SaveAndContinueEdit" type="button" selector="//button[@id='save_and_continue']"/>
        <element name="Save" type="button" selector="//button[@id='save']"/>
        <element name="Delete" type="button" selector="//button[@id='delete']"/>
        <element name="AcceptDeleteButton" type="button" selector="//button[@class='action-primary action-accept']"/>
        <element name="SaveSuccessMsg" type="text" selector="//div[@data-ui-id='messages-message-success'][contains(string(), 'You saved the item.')]"/>
        <!--General tab-->
        <element name="Question" type="textarea" selector="//textarea[@name='title']"/>
        <element name="DontShowDirectUrl" type="select" selector="//select[@name='is_show_full_answer']"/>
        <element name="UrlKey" type="input" selector="//input[@name='url_key']"/>
        <element name="StoreViews" type="select" selector="//select[@name='store_ids']"/>
        <element name="StoreView" type="button" parameterized="true" selector="//div[@data-index='store_ids']//option[contains(string(), '{{storeView}}')]"/>
        <element name="CustomerGroups" type="select" selector="//select[@name='customer_groups']"/>
        <element name="ShortAnswer" type="textarea" selector="//textarea[@name='short_answer']"/>
        <element name="ShowHideEditor" type="button" selector="//button[@id='toggleamastyfaq_question_form_answer']"/>
        <element name="FullAnswerIframe" type="iframe" selector="//iframe[@id='amastyfaq_question_form_answer_ifr']"/>
        <element name="FullAnswer" type="textarea" selector="//textarea[@name='answer']"/>
        <element name="Status" type="select" selector="//select[@name='status']"/>
        <element name="Visibility" type="select" selector="//select[@name='visibility']"/>
        <element name="PositiveRating" type="input" selector="//input[@name='positive_rating']"/>
        <element name="NegativeRating" type="input" selector="//input[@name='negative_rating']"/>
        <element name="AverageRating" type="input" selector="//input[@name='avg_rating']"/>
        <element name="Position" type="input" selector="//input[@name='position']"/>
        <element name="Tags" type="input" selector="//input[@class='ui-widget-content ui-autocomplete-input']"/>
        <element name="Tag" type="text" parameterized="true" selector="//ul[@class='tagit ui-widget ui-widget-content ui-corner-all']//li/span[contains(string(),'{{tag}}')]"/>
        <!--SEO tab-->
        <element name="SeoTab" type="button" selector="//div[@data-index='seo'][contains(string(), 'SEO')]"/>
        <element name="MetaTitle" type="input" selector="//input[@name='meta_title']"/>
        <element name="MetaDescription" type="textarea" selector="//textarea[@name='meta_description']"/>
        <element name="Noindex" type="button" selector="//span[contains(string(), 'Noindex')]"/>
        <element name="NoindexEnabled" type="button" parameterized="true" selector="//div[@data-index='noindex']//div[@data-role='switcher']//input[@value='{{isEnabled}}']"/>
        <element name="Nofollow" type="button" selector="//span[contains(string(), 'Nofollow')]"/>
        <element name="NofollowEnabled" type="button" parameterized="true" selector="//div[@data-index='nofollow']//div[@data-role='switcher']//input[@value='{{isEnabled}}']"/>
        <!--Customer Info tab-->
        <element name="CustomerInfoTab" type="button" selector="//div[@data-index='customer_info'][contains(string(), 'Customer Info')]"/>
        <element name="SenderName" type="input" selector="//input[@name='name']"/>
        <element name="SenderEmail" type="input" selector="//input[@name='email']"/>
        <!--Categories tab-->
        <element name="CategoriesTab" type="button" selector="//div[@data-index='categories'][contains(string(), 'Categories')]"/>
        <element name="AskedIn" type="select" selector="//select[@name='category_ids']"/>
        <element name="AskedInOption" type="button" parameterized="true" selector="//select[@name='category_ids']/option[contains(string(), '{{category}}')]"/>
        <!--Products tab-->
        <element name="ProductsTab" type="button" selector="//div[@data-index='products'][contains(string(), 'Products')]"/>
        <element name="AddProducts" type="button" selector="//button[contains(string(), 'Add products')]"/>
        <element name="Filters" type="button" selector="//*[@class='modal-inner-wrap']//button[@data-action='grid-filter-expand']"/>
        <element name="ApplyFilters" type="button" selector="//button[@data-action='grid-filter-apply']"/>
        <element name="ClearAll" type="button" selector="//aside//button[@data-action='grid-filter-reset']"/>
        <element name="ActiveFilters" type="text" selector="aside .admin__data-grid-header[data-bind='afterRender: \$data.setToolbarNode'] .admin__data-grid-filters-current._show"/>
        <element name="NameField" type="input" selector="//*[@class='modal-inner-wrap']//*[@name='name']"/>
        <element name="ProductCheckbox" type="checkbox" parameterized="true" selector="//*[@class='data-grid-cell-content'][contains(string(), '{{productName}}')]/parent::td/parent::tr//*[@class='admin__control-checkbox']"/>
        <element name="AddSelectedProducts" type="button" selector="//*[@type='button'][contains(string(), 'Add Selected Products')]"/>
        <element name="ProductCell" type="text" parameterized="true" selector="//tr[1]//td[count(//div[@data-role='grid-wrapper']//tr//th[contains(., '{{column}}')]/preceding-sibling::th) +1 ]"/>
        <!--Products tab-->
        <element name="ProductCategoriesTab" type="button" selector="//div[@data-index='product_categories'][contains(string(), 'Product Categories')]"/>
        <element name="SelectCategories" type="button" selector="//div[@data-index='product_category_ids']//div[@class='admin__action-multiselect-text'][contains(string(), 'Select...')]"/>
        <element name="Category" type="button" parameterized="true" selector="//label[@class='admin__action-multiselect-label'][contains(string(),'{{category}}')]"/>
        <element name="Done" type="button" selector="//button[@data-action='close-advanced-select']"/>

    </section>
</sections>
