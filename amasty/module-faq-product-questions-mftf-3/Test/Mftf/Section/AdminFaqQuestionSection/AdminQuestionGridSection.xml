<?xml version="1.0" encoding="UTF-8"?>
<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">

    <section name="AdminQuestionGridSection">
        <element name="AddNewQuestion" type="button" selector="//button[@id='add']"/>
        <element name="FiltersButton" type="button" selector="//button[@data-action='grid-filter-expand']"/>
        <element name="ApplyFilter" type="button" selector="//button[@data-action='grid-filter-apply']"/>
        <element name="ClearAllFilters" type="button" selector="//button[@data-action='grid-filter-reset']"/>
        <element name="ActiveFilters" type="text" selector="//*[@class='admin__data-grid-header']//div[@class='admin__data-grid-filters-current _show']"/>
        <element name="QuestionTitle" type="input" selector="//input[@name='title']"/>
        <element name="RecordsFoundMessage" type="text" parameterized="true" selector="//*[@class='admin__control-support-text'][contains(string(), '{{qty}} records found')]"/>
        <element name="FirstRowCheckbox" type="checkbox" selector="//tr[contains(@data-repeat-index, '0')]//input[contains(@data-action, 'select-row')]"/>
        <element name="MassActions" type="button" selector="//*[@class='admin__data-grid-header-row row row-gutter']//*[@class='action-select-wrap']"/>
        <element name="DeleteMassAction" type="button" selector="//*[@class='admin__data-grid-header-row row row-gutter']//*[@class='action-menu-items']//li[contains(string(), 'Delete')]"/>
        <element name="AcceptDeleteButton" type="button" selector="//*[@class='action-primary action-accept']"/>
        <element name="SuccessfullyRemovedMsg" type="text" parameterized="true" selector="//*[@id='messages'][contains(string(), 'A total of {{qty}} record(s) have been deleted.')]"/>
        <element name="FirstRowEditLink" type="text" selector="tr[data-repeat-index='0'] .action-menu-item"/>
        <element name="MultiCheck" type="checkbox" selector="#container>div>div.admin__data-grid-wrap>table>thead>tr>th.data-grid-multicheck-cell>div>label"/>
        <element name="FirstRow" type="button" selector="//tr[@class='data-row']"/>
        <element name="Cell" type="button" parameterized="true" selector="//tr[2]//td[count(//div[@data-role='grid-wrapper']//tr//th[contains(., '{{column}}')]/preceding-sibling::th) +1 ]"/>
        <element name="CellInput" type="button" parameterized="true" selector="//tr[2]//td[count(//div[@data-role='grid-wrapper']//tr//th[contains(., '{{column}}')]/preceding-sibling::th) +1 ]//input"/>
        <element name="CellSelect" type="select" parameterized="true" selector="//tr[2]//td[count(//div[@data-role='grid-wrapper']//tr//th[contains(., '{{column}}')]/preceding-sibling::th) +1 ]//select"/>
        <element name="SaveCell" type="button" selector="//tr[@class='data-grid-editable-row data-grid-editable-row-actions']//button[contains(string(),'Save')]"/></section>
</sections>
