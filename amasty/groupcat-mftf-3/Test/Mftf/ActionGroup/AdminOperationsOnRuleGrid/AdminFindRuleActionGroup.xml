<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminFindRuleActionGroup">
        <arguments>
            <argument name="ruleData" defaultValue="defRule.ruleName"/>
            <argument name="qtyRecords" defaultValue="qtyRecordsFound.1_record"/>
        </arguments>
        <amOnPage url="{{AdminGroupcatRuleGridPage.url}}" stepKey="openGroupcatRuleGridPage"/>
        <waitForPageLoad stepKey="waitForGroupcatRulePageLoad"/>
        <conditionalClick selector="{{AdminGroupcatRuleGridSection.ClearAllFilters}}" dependentSelector="{{AdminGroupcatRuleGridSection.ActiveFilters}}"
                          visible="true" stepKey="clearAllFilters"/>
        <waitForPageLoad stepKey="waitForCLearFilterDataLoad"/>
        <conditionalClick selector="{{AdminGroupcatRuleGridSection.Filters}}" dependentSelector="{{AdminGroupcatRuleGridSection.ApplyFilter}}"
                          visible="false" stepKey="openFilter"/>
        <fillField selector="{{AdminGroupcatRuleGridSection.RuleName}}" userInput="{{ruleData}}" stepKey="fillRuleName"/>
        <click selector="{{AdminGroupcatRuleGridSection.ApplyFilter}}" stepKey="applyFilter"/>
        <waitForPageLoad stepKey="waitForFilteredDataLoad"/>
        <seeElement selector="{{AdminGroupcatRuleGridSection.RecordsFoundMessage(qtyRecords)}}" stepKey="seeCorrectQtyRecordsFound"/>
    </actionGroup>
</actionGroups>
