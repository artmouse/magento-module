<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminFindBlockActionGroup">
        <arguments>
            <argument name="blockData" defaultValue="cmsBlock.blockTitle"/>
            <argument name="qtyRecords" defaultValue="qtyRecordsFound.1_record"/>
        </arguments>
        <amOnPage url="{{AdminBlockGridPage.url}}" stepKey="openGroupcatBlockGridPage"/>
        <waitForPageLoad stepKey="waitForBlockPageLoad"/>
        <conditionalClick selector="{{AdminBlockGridSection.ClearAllFilters}}" dependentSelector="{{AdminBlockGridSection.ActiveFilters}}"
                          visible="true" stepKey="clearAllFilters"/>
        <waitForPageLoad stepKey="waitForCLearFilterDataLoad"/>
        <conditionalClick selector="{{AdminBlockGridSection.Filters}}" dependentSelector="{{AdminBlockGridSection.ApplyFilter}}"
                          visible="false" stepKey="openFilter"/>
        <fillField selector="{{AdminBlockGridSection.Title}}" userInput="{{blockData}}" stepKey="fillBlockTitle"/>
        <click selector="{{AdminBlockGridSection.ApplyFilter}}" stepKey="applyFilter"/>
        <waitForPageLoad stepKey="waitForFilteredDataLoad"/>
        <seeElement selector="{{AdminBlockGridSection.RecordsFoundMessage(qtyRecords)}}" stepKey="seeCorrectQtyRecordsFound"/>
    </actionGroup>
</actionGroups>
