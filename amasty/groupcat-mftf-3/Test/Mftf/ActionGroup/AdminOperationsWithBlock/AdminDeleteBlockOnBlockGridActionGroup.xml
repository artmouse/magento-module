<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminDeleteBlockOnBlockGridActionGroup" extends="AdminFindBlockActionGroup">
        <checkOption selector="{{AdminBlockGridSection.FirstRowCheckbox}}" stepKey="checkBlock"/>
        <click selector="{{AdminBlockGridSection.MassAction}}" stepKey="clickActionDropdown"/>
        <click selector="{{AdminBlockGridSection.DeleteMassAction}}" stepKey="clickDeleteAction"/>
        <waitForPageLoad stepKey="waitForAcceptDeleteBlockButtonAppear"/>
        <click selector="{{AdminBlockGridSection.AcceptDeleteButton}}" stepKey="confirmBlockDelete"/>
        <waitForPageLoad stepKey="waitForBlockDelete"/>
        <seeElement selector="{{AdminBlockGridSection.BlockSuccessfullyRemovedMessage(qtyRecords)}}" stepKey="seeBlockRemovedMessage"/>
    </actionGroup>
</actionGroups>
