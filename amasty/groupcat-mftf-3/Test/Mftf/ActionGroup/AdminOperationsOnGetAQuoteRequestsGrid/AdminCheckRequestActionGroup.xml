<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCheckRequestActionGroup">
        <arguments>
            <argument name="popupData" defaultValue="defRequest.customerEmail"/>
        </arguments>
        <amOnPage url="{{AdminGroupcatGetAQuoteRequestsGridPage.url}}" stepKey="openGroupcatGetAQuoteRequestsGridPage"/>
        <waitForPageLoad stepKey="waitForGroupcatGetAQuoteRequestsGridPageLoad"/>
        <click selector="{{AdminGroupcatGetAQuoteRequestsGridSection.ResetFilter}}" stepKey="resetFilter"/>
        <waitForPageLoad stepKey="waitForCLearFilterDataLoad"/>
        <fillField selector="{{AdminGroupcatGetAQuoteRequestsGridSection.EmailFilter}}" userInput="{{popupData}}" stepKey="fillEmail"/>
        <click selector="{{AdminGroupcatGetAQuoteRequestsGridSection.Search}}" stepKey="applySearch"/>
        <waitForPageLoad stepKey="waitForFilteredDataLoad"/>
        <seeElement selector="{{AdminGroupcatGetAQuoteRequestsGridSection.RecordsFoundMessage}}" stepKey="seeCorrectQtyRecordsFound"/>
        <seeElement selector="{{AdminGroupcatGetAQuoteRequestsGridSection.Email(popupData)}}" stepKey="seeCorrectEmailInRequest"/>
    </actionGroup>
</actionGroups>
