<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSelectProductSKUForCustomerGroupOnRulePageActionGroup" extends="AdminSelectProductSKUConditionOnRulePageActionGroup">
        <arguments>
            <argument name="ruleData" defaultValue="ruleForGeneral.customerGroups"/>
        </arguments>
        <scrollTo selector="{{AdminGroupcatRuleSection.CustomerGroupsSection}}" before="setCustomerGroup" stepKey="scrollToCustomersSection"/>
        <selectOption selector="{{AdminGroupcatRuleSection.CustomerGroups}}" parameterArray="[{{ruleData}}]"
                      before="clickConditionButton" stepKey="setCustomerGroup"/>
    </actionGroup>
</actionGroups>
