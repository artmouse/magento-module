<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCreateDefRuleActionGroup">
        <arguments>
            <argument name="ruleData" defaultValue="defRule"/>
        </arguments>
        <amOnPage url="{{AdminGroupcatRuleGridPage.url}}" stepKey="openGroupcatRuleGridPage"/>
        <waitForPageLoad stepKey="waitForGroupcatRuleGridPageLoad"/>
        <click selector="{{AdminGroupcatRuleGridSection.AddNewRule}}" stepKey="clickAddNewRuleButton"/>
        <waitForPageLoad stepKey="waitForRulePageLoad"/>
        <conditionalClick selector="{{AdminGroupcatRuleSection.RuleActiveButton}}" dependentSelector="{{AdminGroupcatRuleSection.RuleInactiveValue}}"
                          visible="true" stepKey="enableRule"/>
        <fillField selector="{{AdminGroupcatRuleSection.RuleName}}" userInput="{{ruleData.ruleName}}" stepKey="fillRuleName"/>
        <selectOption selector="{{AdminGroupcatRuleSection.Stores}}" parameterArray="[{{ruleData.stores}}]" stepKey="setStores"/>
        <fillField selector="{{AdminGroupcatRuleSection.Priority}}" userInput="{{ruleData.priority}}" stepKey="fillPriority"/>
        <conditionalClick selector="{{AdminGroupcatRuleSection.AllowDirectLinksActiveButton}}" dependentSelector="{{AdminGroupcatRuleSection.AllowDirectLinksInactiveValue}}"
                          visible="true" stepKey="enableAllowDirectLinks"/>
        <click selector="{{AdminGroupcatRuleSection.SaveAndContinueEdit}}" stepKey="clickOnSave"/>
        <waitForPageLoad stepKey="waitForPageLoadAfterSave"/>
        <seeElement selector="{{AdminGroupcatRuleSection.RuleSavedMessage}}" stepKey="seeRuleSavedMessage"/>
        <grabFromCurrentUrl regex="~.*/amasty_groupcat/rule/edit/id/(\d+)/.*~" stepKey="grabRuleIdFromCurrentUrl"/>
        <setCookie userInput="setRuleIdInCookie" value="{$grabRuleIdFromCurrentUrl}" stepKey="setRuleIdInCookie"/>
    </actionGroup>
</actionGroups>
