<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSelectReplaceToRequestFormPriceOnRulePageActionGroup">
        <scrollTo selector="{{AdminGroupcatRuleSection.ProductPageDisplayOptions}}" stepKey="scrollToProductPageDisplayOptions"/>
        <conditionalClick selector="{{AdminGroupcatRuleSection.ProductPageDisplayOptions}}" dependentSelector="{{AdminGroupcatRuleSection.HidePrice}}"
                          visible="false" stepKey="openProductPageDisplayOptionsTab"/>
        <click selector="{{AdminGroupcatRuleSection.ReplaceToRequestFormPrice}}" stepKey="setReplaceToRequestFormPrice"/>
    </actionGroup>
</actionGroups>
