<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSelectHideAddToCartButtonOnRulePageActionGroup">
        <scrollTo selector="{{AdminGroupcatRuleSection.ProductPageDisplayOptions}}" stepKey="scrollToProductPageDisplayOptions"/>
        <conditionalClick selector="{{AdminGroupcatRuleSection.ProductPageDisplayOptions}}" dependentSelector="{{AdminGroupcatRuleSection.HidePrice}}"
                          visible="false" stepKey="openProductPageDisplayOptionsTab"/>
        <waitForElementVisible selector="{{AdminGroupcatRuleSection.AddToCartActiveButton}}" stepKey="waitForHideAddToCartButtonOption"/>
        <conditionalClick selector="{{AdminGroupcatRuleSection.AddToCartActiveButton}}" dependentSelector="{{AdminGroupcatRuleSection.HideAddToCartInactiveValue}}"
                          visible="true" stepKey="enableHideAddToCartButtonOption"/>
    </actionGroup>
</actionGroups>
