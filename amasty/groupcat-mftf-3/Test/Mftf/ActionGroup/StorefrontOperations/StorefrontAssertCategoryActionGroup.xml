<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontAssertCategoryActionGroup">
        <arguments>
            <argument name="category" type="string"/>
        </arguments>
        <amOnPage url="{{StorefrontMainPage.url}}" stepKey="openStorefrontMainPage"/>
        <waitForPageLoad stepKey="waitForHomePageLoad"/>
        <seeElement selector="{{StorefrontSection.CategoryName(category)}}" stepKey="assertCategoryName"/>
    </actionGroup>
</actionGroups>
