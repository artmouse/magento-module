<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontAssertReplacePriceWithImageAndTextActionGroup" extends="StorefrontAssertReplaceWithTextProductPriceActionGroup">
        <remove keyForRemoval="assertBlockTextOnCategoryPage"/>
        <remove keyForRemoval="assertBlockTextOnProductPage"/>
        <seeElement selector="{{StorefrontSection.Image}}" after="dontAssertProductPriceOnCategoryPage" stepKey="assertImageOnCategoryPage"/>
        <seeElement selector="{{StorefrontSection.Text}}" after="assertImageOnCategoryPage" stepKey="assertTextOnCategoryPage"/>
        <seeElement selector="{{StorefrontSection.Image}}" after="dontAssertProductPriceOnProductPage" stepKey="assertImageOnProductPage"/>
        <seeElement selector="{{StorefrontSection.Text}}" after="assertImageOnProductPage" stepKey="assertTextOnProductPage"/>
    </actionGroup>
</actionGroups>
