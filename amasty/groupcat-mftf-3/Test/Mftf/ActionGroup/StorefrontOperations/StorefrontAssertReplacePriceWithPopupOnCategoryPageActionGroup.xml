<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontAssertReplacePriceWithPopupOnCategoryPageActionGroup">
        <arguments>
            <argument name="category"/>
            <argument name="product" type="string"/>
        </arguments>
        <amOnPage url="{{StorefrontCategoryPage.url(category.custom_attributes[url_path])}}" stepKey="navigateToCategoryPage"/>
        <waitForPageLoad stepKey="waitForCategoryPageLoad"/>
        <seeElement selector="{{StorefrontSection.ProductName(product)}}" stepKey="assertProductName"/>
        <dontSeeElement selector="{{StorefrontSection.ProductPrice(product)}}" stepKey="dontAssertProductPriceOnCategoryPage"/>
        <seeElement selector="{{StorefrontSection.PopupLink}}" stepKey="assertPopupLinkOnCategoryPage"/>
        <click selector="{{StorefrontSection.PopupLink}}" stepKey="openPopupOnCategoryPage"/>
        <waitForAjaxLoad stepKey="waitForAjaxLoad"/>
        <seeElement selector="{{StorefrontSection.PopupWindow}}" stepKey="assertPopupWindowOnCategoryPage"/>
        <click selector="{{StorefrontSection.Close}}" stepKey="closePopupOnCategoryPage"/>
        <wait time="3" stepKey="waitThreeSeconds"/>
    </actionGroup>
</actionGroups>
