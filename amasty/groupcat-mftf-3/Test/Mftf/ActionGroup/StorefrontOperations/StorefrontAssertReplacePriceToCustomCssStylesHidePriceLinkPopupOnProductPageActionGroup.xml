<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontAssertReplacePriceToCustomCssStylesHidePriceLinkPopupOnProductPageActionGroup"
                 extends="StorefrontAssertReplacePriceWithPopupOnProductPageActionGroup">
        <remove keyForRemoval="assertPopupLinkOnProductPage"/>
        <remove keyForRemoval="openPopupOnProductPage"/>
        <seeElement selector="{{StorefrontSection.CustomCssStylesPopupLink}}"
                    after="dontAssertProductPriceOnProductPage" stepKey="assertCustomCssStylesPopupLinkOnProductPage"/>
        <click selector="{{StorefrontSection.CustomCssStylesPopupLink}}" before="waitSecondForAjaxLoad"
               stepKey="openCustomCssStylesPopupOnProductPage"/>
    </actionGroup>
</actionGroups>
