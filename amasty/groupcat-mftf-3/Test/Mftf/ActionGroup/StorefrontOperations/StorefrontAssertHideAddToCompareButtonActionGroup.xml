<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontAssertHideAddToCompareButtonActionGroup">
        <arguments>
            <argument name="category"/>
            <argument name="product" type="string"/>
        </arguments>
        <amOnPage url="{{StorefrontCategoryPage.url(category.custom_attributes[url_path])}}" stepKey="navigateToCategoryPage"/>
        <waitForPageLoad stepKey="waitForCategoryPageLoad"/>
        <seeElement selector="{{StorefrontSection.ProductName(product)}}" stepKey="assertProductName"/>
        <click selector="{{StorefrontSection.Product}}" stepKey="openProductPage"/>
        <waitForPageLoad stepKey="waitForProductPageLoad"/>
        <dontSeeElement selector="{{StorefrontSection.AddToCompareButton}}" stepKey="assertHideAddToCompareButtonOnProductPage"/>
    </actionGroup>
</actionGroups>
