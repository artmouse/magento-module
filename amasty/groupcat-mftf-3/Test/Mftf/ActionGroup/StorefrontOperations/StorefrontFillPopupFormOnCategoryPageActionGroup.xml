<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontFillPopupFormOnCategoryPageActionGroup"
                 extends="StorefrontAssertReplacePriceWithPopupOnCategoryPageActionGroup">
        <arguments>
            <argument name="popupData" defaultValue="defRequest"/>
        </arguments>
        <remove keyForRemoval="closePopupOnCategoryPage"/>
        <remove keyForRemoval="waitThreeSeconds"/>
        <fillField selector="{{StorefrontSection.CustomerName}}" userInput="{{defRequest.customerName}}" after="assertPopupWindowOnCategoryPage"
                   stepKey="fillCustomerName"/>
        <fillField selector="{{StorefrontSection.CustomerEmail}}" userInput="{{defRequest.customerEmail}}" after="fillCustomerName" stepKey="fillCustomerEmail"/>
        <fillField selector="{{StorefrontSection.PhoneNumber}}" userInput="{{defRequest.phoneNumber}}" after="fillCustomerEmail" stepKey="fillPhoneNumber"/>
        <fillField selector="{{StorefrontSection.Comment}}" userInput="{{defRequest.comment}}" after="fillPhoneNumber" stepKey="fillComment"/>
        <click selector="{{StorefrontSection.Submit}}" after="fillComment" stepKey="submitRequestOnProductPage"/>
    </actionGroup>
</actionGroups>
