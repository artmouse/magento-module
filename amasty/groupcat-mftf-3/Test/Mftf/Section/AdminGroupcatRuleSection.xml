<?xml version="1.0" encoding="UTF-8"?>
<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="AdminGroupcatRuleSection">
        <element name="RuleName" type="input" selector="//input[@name='name']"/>
        <element name="Stores" type="multiselect" selector="//div[@data-index='store_ids']//select[@class='admin__control-multiselect']"/>
        <element name="Priority" type="input" selector="//input[@name='priority']"/>
        <element name="RuleSavedMessage" type="text" selector="//div[@class='message message-success success'][contains(string(), 'The rule is saved.')]"/>
        <element name="SaveAndContinueEdit" type="button" selector="//button[@data-ui-id='save-and-continue-button']"/>
        <element name="CategoriesSection" type="button" selector="//div[@class='fieldset-wrapper amgroupcat-fieldset-container -line']"/>
        <element name="ProductsSection" type="button" selector="//div[@class='fieldset-wrapper-title'][contains(string(), 'Products')]"/>
        <element name="CategoriesDropdown" type="multiselect" selector="//div[@class='action-select admin__action-multiselect']"/>
        <element name="SelectCategory" type="input" parameterized="true"
                 selector="//*[@data-index='category_ids']//label[contains(., '{{category}}')]"/>
        <element name="Done" type="button" selector="//*[@data-index='category_ids']//button[@data-action='close-advanced-select']"/>
        <element name="CategoryName" type="text" parameterized="true"
                 selector="//span[@class='admin__action-multiselect-crumb'][contains(string(), '{{category}}')]"/>
        <element name="RuleActiveValue" type="button" selector="//input[@name='is_active'][@value='1']"/>
        <element name="RuleInactiveValue" type="button" selector="//input[@name='is_active'][@value='0']"/>
        <element name="RuleActiveButton" type="button" selector="//input[@name='is_active']//following-sibling::label"/>
        <element name="AllowDirectLinksActiveValue" type="button" selector="//input[@name='is_active'][@value='1']"/>
        <element name="AllowDirectLinksInactiveValue" type="button" selector="//input[@name='allow_direct_links'][@value='0']"/>
        <element name="AllowDirectLinksActiveButton" type="button" selector="//input[@name='allow_direct_links']//following-sibling::label"/>
        <element name="HideCategoryActiveValue" type="button" selector="//input[@name='hide_category'][@value='1']"/>
        <element name="HideCategoryInactiveValue" type="button" selector="//input[@name='hide_category'][@value='0']"/>
        <element name="HideProductActiveValue" type="button" selector="//input[@name='hide_product'][@value='1']"/>
        <element name="HideAddToCartActiveValue" type="button" selector="//input[@name='hide_cart'][@value='1']"/>
        <element name="HideProductInactiveValue" type="button" selector="//input[@name='hide_product'][@value='0']"/>
        <element name="HideAddToCartInactiveValue" type="button" selector="//input[@name='hide_cart'][@value='0']"/>
        <element name="HideAddToWishlistInactiveValue" type="button" selector="//input[@name='hide_wishlist'][@value='0']"/>
        <element name="HideAddToCompareInactiveValue" type="button" selector="//input[@name='hide_compare'][@value='0']"/>
        <element name="HideCategoryActiveButton" type="button" selector="//input[@name='hide_category']//following-sibling::label"/>
        <element name="HideProductActiveButton" type="button" selector="//input[@name='hide_product']//following-sibling::label"/>
        <element name="AddToCartActiveButton" type="button" selector="//input[@name='hide_cart']//following-sibling::label"/>
        <element name="AddToWishlistActiveButton" type="button" selector="//input[@name='hide_wishlist']//following-sibling::label"/>
        <element name="AddToCompareActiveButton" type="button" selector="//input[@name='hide_compare']//following-sibling::label"/>
        <element name="CustomerGroups" type="select" selector="//div[@data-index='customer_group_ids']//select[@class='admin__control-multiselect']"/>
        <element name="CustomerGroupsSection" type="block" selector="//div[@class='fieldset-wrapper-title'][contains(string(), 'Customer Groups')]"/>
        <element name="AddSkuConditionToProduct" type="select" selector="//*[@id='conditions__1__new_child']"/>
        <element name="AddSku" type="button" selector="//ul[@id='conditions__1__children']//li//span[@class='rule-param'][contains(string(), '...')]"/>
        <element name="Add" type="button" selector="//*[@class='rule-param rule-param-new-child']"/>
        <element name="Sku" type="input" selector="//*[@class='rule-param rule-param-edit'][contains(string(), '...')]//input[@id='conditions__1--1__value']"/>
        <element name="ProductPageDisplayOptions" type="button" selector="//div[@class='fieldset-wrapper-title'][contains(string(), 'Product Page Display Options')]"/>
        <element name="HidePrice" type="button" selector="//span[@class='admin__field-label'][contains(string(), 'Hide Price')]"/>
        <element name="HidePriceYes" type="button" selector="//div[@class='admin__field admin__field-option']//label[@for='2']"/>
        <element name="ReplaceWithTextPrice" type="button" selector="//div[@class='admin__field admin__field-option']//label[@for='3']"/>
        <element name="ReplaceBlockProdPage" type="select" selector="//*[@name='block_id_view']"/>
        <element name="ReplaceBlockCategoryPage" type="select" selector="//*[@name='block_id_list']"/>
        <element name="ReplaceToRequestFormPrice" type="button" selector="//div[@class='admin__field admin__field-option']//label[@for='4']"/>
        <element name="DirectLinks" type="block" selector="//span[contains(string(), 'Direct Links')]"/>
        <element name="ActionOnForbid" type="select" selector="//select[@name='forbidden_action']"/>
        <element name="DefaultTestCMSPage" type="select" selector="//select[@name='forbidden_page_id']"/>
    </section>
</sections>
