<?xml version="1.0" encoding="UTF-8"?>
<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="StorefrontSection">
        <element name="CategoryName" type="block" parameterized="true"
                 selector="//a[@class='level-top ui-corner-all'][contains(string(), '{{category}}')]"/>
        <element name="ProductName" type="block" parameterized="true"
                 selector="//a[@class='product-item-link'][contains(string(), '{{product}}')]"/>
        <element name="ProductPrice" type="block" selector="//*[@class='product details product-item-details']//following::div[@class='price-box price-final_price'][contains(string(), '59')]"/>
        <element name="Product" type="button" selector="//li[@class='item product product-item']"/>
        <element name="AddToCartButton" type="block" selector="//button[@title='Add to Cart']"/>
        <element name="AddToWishlistButton" type="block" selector="//span[contains(string(), 'Add to Wish List')]"/>
        <element name="AddToCompareButton" type="block" selector="//span[contains(string(), 'Add to Compare')]"/>
        <element name="BlockTextCat" type="block" selector="//div[@class='product details product-item-details'][contains(string(), '12345')]"/>
        <element name="BlockTextProd" type="block" selector="//div[@class='amgroupcat-cms-content-wrapper'][contains(string(), '12345')]"/>
        <element name="Image" type="block" selector="//img[@class='amasty-hide-price-image']"/>
        <element name="Text" type="block" selector="//span[@class='amasty-hide-price-text'][contains(string(), 'Call for Price')]"/>
        <element name="PopupLink" type="block" selector="//a[@class='amasty-hide-price-container']"/>
        <element name="CustomCssStylesPopupLink" type="block" selector="//a[@class='amasty-hide-price-container'][@style='background-color:red;color:black;']"/>
        <element name="PopupWindow" type="block" selector="//div[@class='fancybox-wrap fancybox-desktop fancybox-type-inline fancybox-opened']"/>
        <element name="Close" type="button" selector="//a[@title='Close']"/>
        <element name="ErrorPage" type="block" selector="//span[@class='base'][contains(string(), 'Whoops, our bad...')]"/>
        <element name="CmsPage" type="block" selector="//span[@class='base'][contains(string(), 'Page Title Default Tests')]"/>
        <element name="SuccessMessage" type="block" selector="//div[@class='message success']"/>
        <element name="Comment" type="textarea" selector="//textarea[@title='Comment']"/>
        <element name="CustomerName" type="input" selector="//input[@type='text'][@name='name']"/>
        <element name="CustomerEmail" type="input" selector="//input[@type='email'][@name='email'][@autocomplete='email']"/>
        <element name="PhoneNumber" type="input" selector="//input[@type='text'][@name='phone']"/>
        <element name="Submit" type="button" selector="//button[@type='submit'][@class='action submit primary'][@title='Submit']"/>
    </section>
</sections>
