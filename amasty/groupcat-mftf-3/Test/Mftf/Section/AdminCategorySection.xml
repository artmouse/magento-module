<?xml version="1.0" encoding="UTF-8"?>
<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="AdminCategorySection">
        <element name="DisplaySettings" type="button" selector="//strong[@class='admin__collapsible-title'][contains(string(), 'Display Settings')]"/>
        <element name="DisplayMode" type="select" selector="//select[@class='admin__control-select'][@name='display_mode']"/>
        <element name="Save" type="button" selector="//button[@id='save']"/>
        <element name="SuccessMessage" type="text" selector="//div[@class='message message-success success'][contains(string(), 'You saved the category.')]"/>
        <element name="CategoryName" type="text" parameterized="true" selector="//span[contains(string(), '{{name}}')]"/>
    </section>
</sections>
