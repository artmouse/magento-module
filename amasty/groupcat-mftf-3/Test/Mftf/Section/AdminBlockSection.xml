<?xml version="1.0" encoding="UTF-8"?>
<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="AdminBlockSection">
        <element name="BlockTitle" type="input" selector="//input[@name='title']"/>
        <element name="Identifier" type="input" selector="//input[@name='identifier']"/>
        <element name="BlockText" type="textarea" selector="//textarea[@name='content']"/>
        <element name="Save" type="button" selector="//button[@id='save-button']"/>
        <element name="SaveSuccessMsg" type="text" selector="//div[@data-ui-id='messages-message-success'][contains(string(), 'You saved the block.')]"/>
    </section>
</sections>
