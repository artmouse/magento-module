<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="GroupcatDisableRuleToHideCategoryTest">
        <annotations>
            <features value="Disable Customer Group Catalog Rule for Hide Category"/>
            <stories value="Check Disable Customer Group Catalog Rule for Hide Category"/>
            <title value="Check Disable Customer Group Catalog Rule for Hide Category at Storefront Product Page"/>
            <description value="Check Disable Customer Group Catalog Rule for Hide Category at Storefront Product Page"/>
            <severity value="MAJOR"/>
            <testCaseId value="AmGroupCatalog-5"/>
            <group value="AmGroupCatalog"/>
        </annotations>

        <before>
            <createData entity="SimpleSubCategory" stepKey="category"/>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginToAdminArea"/>
            <actionGroup ref="AdminCreateDefRuleActionGroup" stepKey="createDefRule"/>
        </before>

        <after>
            <deleteData createDataKey="category" stepKey="deleteCategory"/>
            <actionGroup ref="AdminDeleteRuleOnRuleGridActionGroup" stepKey="deleteRule"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="adminLogout"/>
        </after>

        <actionGroup ref="StorefrontAssertCategoryActionGroup" stepKey="storefrontCheckCategory">
            <argument name="category" value="$$category.name$$"/>
        </actionGroup>
        <actionGroup ref="AdminOpenRuleActionGroup" stepKey="openRule"/>
        <actionGroup ref="AdminSelectCategoryOnRulePageActionGroup" stepKey="addCategory">
            <argument name="category" value="$$category.name$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertHideCategoryActionGroup" stepKey="storefrontCheckHideCategory">
            <argument name="category" value="$$category.name$$"/>
        </actionGroup>
        <actionGroup ref="AdminOpenRuleActionGroup" stepKey="openRuleAgain"/>
        <actionGroup ref="AdminDisableRuleActionGroup" stepKey="addCategoryAgain"/>
        <actionGroup ref="StorefrontAssertCategoryActionGroup" stepKey="storefrontCheckCategoryAppears">
            <argument name="category" value="$$category.name$$"/>
        </actionGroup>
    </test>
</tests>
