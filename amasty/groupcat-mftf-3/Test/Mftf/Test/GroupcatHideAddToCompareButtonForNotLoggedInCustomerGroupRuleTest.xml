<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="GroupcatHideAddToCompareButtonForNotLoggedInCustomerGroupRuleTest"
          extends="GroupcatHideAddToCompareButtonRuleTest">
        <annotations>
            <features value="Creation Hide Add To Compare Button Customer Group Catalog Rule for Not Logged In Customer Group"/>
            <stories value="Check Hide Add To Compare Button Customer Group Catalog Rule for Not Logged In Customer Group"/>
            <title value="Check Hide Add To Compare Button Customer Group Catalog Rule for Not Logged In Customer Group at Storefront Product Page"/>
            <description value="Check Hide Add To Compare Button Customer Group Catalog Rule for Not Logged In Customer Group at Storefront Product Page"/>
            <severity value="MAJOR"/>
            <testCaseId value="AmGroupCatalog-20"/>
            <group value="AmGroupCatalog"/>
            <group value="AmHideButton"/>
        </annotations>

        <before>
            <createData entity="Simple_US_Customer" stepKey="customer"/>
        </before>

        <after>
            <deleteData createDataKey="customer" stepKey="deleteCustomer"/>
        </after>

        <remove keyForRemoval="addProduct"/>
        <actionGroup ref="AdminSelectProductSKUForCustomerGroupOnRulePageActionGroup" after="hideAddToCompareButton" stepKey="addCustomerGroupForProduct">
            <argument name="product" value="$$firstSimpleProduct.sku$$"/>
            <argument name="ruleData" value="ruleForNotLoggedIn.customerGroups"/>
        </actionGroup>
        <actionGroup ref="LoginToStorefrontActionGroup" after="storefrontCheckHideAddToCompareButton" stepKey="loginToStorefront">
            <argument name="Customer" value="$$customer$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertAddToCompareButtonActionGroup" after="loginToStorefront" stepKey="storefrontSecondCheckAddToCompareButton">
            <argument name="category" value="$category$"/>
            <argument name="product" value="$$firstSimpleProduct.name$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontCustomerLogoutActionGroup" after="storefrontSecondCheckAddToCompareButton" stepKey="customerLogout"/>
    </test>
</tests>
