<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="GroupcatReplacePriceToRequestFormCustomCSSStylesHidePriceLinkPopupProductForGeneralCustomerGroupRuleTest"
        extends="GroupcatReplacePriceToRequestFormTextAndImageProductRuleTest">
        <annotations>
            <features value="Creation Replace Price To Request Form Custom CSS Styles Hide Price Link Pop-up Customer Group Catalog Rule For General Customer Group"/>
            <stories value="Check Replace Price To Request Form Custom CSS Styles Hide Price Link Pop-up Customer Group Catalog Rule For General Customer Group"/>
            <title value="Check Replace Price To Request Form Custom CSS Styles Hide Price Link Pop-up Customer Group Catalog Rule For General Customer Group at Storefront Product Page"/>
            <description value="Check Replace Price To Request Form Custom CSS Styles Hide Price Link Pop-up Customer Group Catalog Rule For General Customer Group at Storefront Product Page"/>
            <severity value="MAJOR"/>
            <testCaseId value="AmGroupCatalog-35"/>
            <group value="AmGroupCatalog"/>
            <group value="AmReplacePriceToRequestFormRule"/>
        </annotations>

        <before>
            <remove keyForRemoval="setConfigurationFrontendOptions"/>
            <actionGroup ref="AdminConfigurationFrontendOptionsCustomCSSStylesForHidePriceLinkActionGroup" after="createDefRule"
                         stepKey="setConfigurationFrontendOptionsCustomCSSStylesForHidePriceLinkActionGroup"/>
            <createData entity="Simple_US_Customer" after="firstSimpleProduct" stepKey="customer"/>
        </before>

        <after>
            <remove keyForRemoval="clearConfigurationFrontendOptions"/>
            <deleteData createDataKey="customer" after="deleteRule" stepKey="deleteCustomer"/>
            <actionGroup ref="AdminConfigurationFrontendOptionsClearCustomCSSStylesForHidePriceLinkActionGroup" after="deleteRule"
                         stepKey="clearConfigurationFrontendOptionsCustomCSSStylesForHidePriceLinkActionGroup"/>
        </after>

        <remove keyForRemoval="storefrontCheckReplaceWithTextAndImageProductPrice"/>
        <remove keyForRemoval="addProduct"/>
        <actionGroup ref="AdminSelectProductSKUForCustomerGroupOnRulePageActionGroup" after="replaceToRequestFormPrice" stepKey="addCustomerGroupForProduct">
            <argument name="product" value="$$firstSimpleProduct.sku$$"/>
            <argument name="ruleData" value="ruleForGeneral.customerGroups"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertProductPriceActionGroup" after="addCustomerGroupForProduct" stepKey="storefrontSecondCheckProductPrice">
            <argument name="category" value="$category$"/>
            <argument name="product" value="$$firstSimpleProduct.name$$"/>
        </actionGroup>
        <actionGroup ref="LoginToStorefrontActionGroup" after="storefrontSecondCheckProductPrice" stepKey="loginToStorefront">
            <argument name="Customer" value="$$customer$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertReplacePriceToCustomCssStylesHidePriceLinkPopupOnCategoryPageActionGroup" after="loginToStorefront"
                     stepKey="storefrontCheckReplaceToCustomCssStylesHidePriceLinkPopupProductPriceOnCategoryPage">
            <argument name="category" value="$category$"/>
            <argument name="product" value="$$firstSimpleProduct.name$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertReplacePriceToCustomCssStylesHidePriceLinkPopupOnProductPageActionGroup" after="storefrontCheckReplaceToCustomCssStylesHidePriceLinkPopupProductPriceOnCategoryPage"
                     stepKey="storefrontCheckReplaceToCustomCssStylesHidePriceLinkPopupProductPriceOnProductPage">
            <argument name="category" value="$category$"/>
            <argument name="product" value="$$firstSimpleProduct.name$$"/>
        </actionGroup>
    </test>
</tests>
