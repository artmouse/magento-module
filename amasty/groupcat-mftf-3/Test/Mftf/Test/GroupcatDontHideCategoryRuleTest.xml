<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="GroupcatDontHideCategoryRuleTest" extends="GroupcatHideCategoryRuleTest">
        <annotations>
            <features value="Don't Hide Category in Customer Group Catalog Rule"/>
            <stories value="Check Don't Hide Category in Customer Group Catalog Rule"/>
            <title value="Check Don't Hide Category in Customer Group Catalog Rule at Storefront Product Page"/>
            <description value="Check Don't Hide Category in Customer Group Catalog Rule at Storefront Product Page"/>
            <severity value="MAJOR"/>
            <testCaseId value="AmGroupCatalog-2"/>
            <group value="AmGroupCatalog"/>
        </annotations>

        <actionGroup ref="AdminOpenRuleActionGroup" after="storefrontCheckHideCategory" stepKey="openRuleAgain"/>
        <actionGroup ref="AdminDisableHighCategoryOnRulePageActionGroup" after="openRuleAgain" stepKey="disableHideCategory"/>
        <actionGroup ref="StorefrontAssertCategoryActionGroup" after="disableHideCategory" stepKey="storefrontCheckCategoryAppears">
            <argument name="category" value="$$category.name$$"/>
        </actionGroup>
    </test>
</tests>
