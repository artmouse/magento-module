<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="GroupcatDontAllowDirectLinksErrorPageRuleTest">
        <annotations>
            <features value="Creation Don't Allow Direct Links with Error Page Option Customer Group Catalog Rule"/>
            <stories value="Check Don't Allow Direct Links with Error Page Option Customer Group Catalog Rule"/>
            <title value="Check Don't Allow Direct Links with Error Page Option Customer Group Catalog Rule at Storefront Product Page"/>
            <description value="Check Don't Allow Direct Links with Error Page Option Customer Group Catalog Rule at Storefront Product Page"/>
            <severity value="MAJOR"/>
            <testCaseId value="AmGroupCatalog-28"/>
            <group value="AmGroupCatalog"/>
        </annotations>

        <before>
            <createData entity="SimpleSubCategory" stepKey="category"/>
            <createData entity="amSimpleProduct" stepKey="firstSimpleProduct">
                <requiredEntity createDataKey="category"/>
            </createData>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginToAdminArea"/>
            <actionGroup ref="AdminCreateDefRuleActionGroup" stepKey="createDefRule"/>
        </before>

        <after>
            <deleteData createDataKey="firstSimpleProduct" stepKey="deleteFirstSimpleProduct"/>
            <deleteData createDataKey="category" stepKey="deleteCategory"/>
            <actionGroup ref="AdminDeleteRuleOnRuleGridActionGroup" stepKey="deleteRule"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="adminLogout"/>
        </after>

        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openStorefrontProdPage">
            <argument name="productUrl" value="$$firstSimpleProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertProductNameOnProductPageActionGroup" stepKey="seeProductName">
            <argument name="productName" value="$$firstSimpleProduct.name$$"/>
        </actionGroup>
        <actionGroup ref="AdminOpenRuleActionGroup" stepKey="openRule"/>
        <actionGroup ref="AdminSelectHideProductOnRulePageActionGroup" stepKey="hideProduct"/>
        <actionGroup ref="AdminSelectDontAllowDirectLinksErrorPageOnRulePageActionGroup"
                     stepKey="selectDontAllowDirectLinksErrorPage"/>
        <actionGroup ref="AdminSelectProductSKUConditionOnRulePageActionGroup" stepKey="addProduct">
            <argument name="product" value="$$firstSimpleProduct.sku$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openStorefrontProductPage">
            <argument name="productUrl" value="$$firstSimpleProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertDontAllowDirectLinksErrorPageActionGroup"
                     stepKey="storefrontDontAllowDirectLinksErrorPage"/>
    </test>
</tests>
