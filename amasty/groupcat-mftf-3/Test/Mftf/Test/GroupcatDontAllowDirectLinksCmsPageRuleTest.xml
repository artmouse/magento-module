<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="GroupcatDontAllowDirectLinksCmsPageRuleTest" extends="GroupcatDontAllowDirectLinksErrorPageRuleTest">
        <annotations>
            <features value="Creation Don't Allow Direct Links with Cms Page Option Customer Group Catalog Rule"/>
            <stories value="Check Don't Allow Direct Links with Cms Page Option Customer Group Catalog Rule"/>
            <title value="Check Don't Allow Direct Links with Cms Page Option Customer Group Catalog Rule at Storefront Product Page"/>
            <description value="Check Don't Allow Direct Links with Cms Page Option Customer Group Catalog Rule at Storefront Product Page"/>
            <severity value="MAJOR"/>
            <testCaseId value="AmGroupCatalog-29"/>
            <group value="AmGroupCatalog"/>
        </annotations>

        <before>
            <actionGroup ref="AdminCreateCMSPageActionGroup" after="loginToAdminArea" stepKey="createNewPage">
                <argument name="page" value="defaultTestCMSPage"/>
            </actionGroup>
        </before>

        <after>
            <actionGroup ref="AdminDeleteCMSPageActionGroup" after="deleteRule" stepKey="openPageForEdit"/>
        </after>

        <remove keyForRemoval="selectDontAllowDirectLinksErrorPage"/>
        <remove keyForRemoval="storefrontDontAllowDirectLinksErrorPage"/>
        <actionGroup ref="AdminSelectDontAllowDirectLinksCmsPageOnRulePageActionGroup" after="hideProduct"
                     stepKey="selectDontAllowDirectLinksCmsPage"/>
        <actionGroup ref="StorefrontAssertDontAllowDirectLinksCmsPageActionGroup" after="openStorefrontProductPage"
                     stepKey="storefrontDontAllowDirectLinksCmsPage"/>
    </test>
</tests>
