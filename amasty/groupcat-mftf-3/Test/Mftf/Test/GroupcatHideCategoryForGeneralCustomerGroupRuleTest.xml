<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="GroupcatHideCategoryForGeneralCustomerGroupRuleTest" extends="GroupcatHideCategoryRuleTest">
        <annotations>
            <features value="Creation Hide Category Customer Group Catalog Rule for General Customer Group"/>
            <stories value="Check Hide Category Customer Group Catalog Rule for General Customer Group"/>
            <title value="Check Hide Category Customer Group Catalog Rule for General Customer Group at Storefront Product Page"/>
            <description value="Check Hide Category Customer Group Catalog Rule for General Customer Group at Storefront Product Page"/>
            <severity value="MAJOR"/>
            <testCaseId value="AmGroupCatalog-3"/>
            <group value="AmGroupCatalog"/>
            <group value="AmHideCategory"/>
        </annotations>

        <before>
            <createData entity="Simple_US_Customer" stepKey="customer"/>
        </before>

        <after>
            <deleteData createDataKey="customer" stepKey="deleteCustomer"/>
        </after>

        <remove keyForRemoval="addCategory"/>
        <actionGroup ref="AdminSelectCategoryForCustomerGroupOnRulePageActionGroup" after="openRule" stepKey="addCustomerGroup">
            <argument name="category" value="$$category.name$$"/>
            <argument name="ruleData" value="ruleForGeneral.customerGroups"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertCategoryActionGroup" after="addCustomerGroup" stepKey="storefrontSecondCheckCategory">
            <argument name="category" value="$$category.name$$"/>
        </actionGroup>
        <actionGroup ref="LoginToStorefrontActionGroup" after="storefrontSecondCheckCategory" stepKey="loginToStorefront">
            <argument name="Customer" value="$$customer$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontCustomerLogoutActionGroup" after="storefrontCheckHideCategory" stepKey="customerLogout"/>
    </test>
</tests>
