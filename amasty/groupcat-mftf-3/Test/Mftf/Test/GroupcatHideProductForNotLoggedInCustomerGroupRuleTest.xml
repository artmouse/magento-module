<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="GroupcatHideProductForNotLoggedInCustomerGroupRuleTest" extends="GroupcatHideProductRuleTest">
        <annotations>
            <features value="Creation Hide Category Customer Group Catalog Rule for General Customer Group"/>
            <stories value="Check Hide Category Customer Group Catalog Rule for General Customer Group"/>
            <title value="Check Hide Category Customer Group Catalog Rule for General Customer Group at Storefront Product Page"/>
            <description value="Check Hide Category Customer Group Catalog Rule for General Customer Group at Storefront Product Page"/>
            <severity value="MAJOR"/>
            <testCaseId value="AmGroupCatalog-8"/>
            <group value="AmGroupCatalog"/>
            <group value="AmHideProduct"/>
        </annotations>

        <before>
            <createData entity="Simple_US_Customer" stepKey="customer"/>
        </before>

        <after>
            <deleteData createDataKey="customer" stepKey="deleteCustomer"/>
        </after>

        <remove keyForRemoval="addProduct"/>
        <actionGroup ref="AdminSelectProductSKUForCustomerGroupOnRulePageActionGroup" after="hideProduct" stepKey="addCustomerGroupForProduct">
            <argument name="product" value="$$firstSimpleProduct.sku$$"/>
            <argument name="ruleData" value="ruleForNotLoggedIn.customerGroups"/>
        </actionGroup>
        <actionGroup ref="LoginToStorefrontActionGroup" after="storefrontCheckDontHideSecondProduct" stepKey="loginToStorefront">
            <argument name="Customer" value="$$customer$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertProductActionGroup" after="loginToStorefront" stepKey="storefrontCheckAppearFirstProduct">
            <argument name="category" value="$category$"/>
            <argument name="product" value="$$firstSimpleProduct.name$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertProductActionGroup" after="storefrontCheckAppearFirstProduct" stepKey="storefrontSecondCheckSecondProduct">
            <argument name="category" value="$category$"/>
            <argument name="product" value="$$secondSimpleProduct.name$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontCustomerLogoutActionGroup" after="storefrontSecondCheckSecondProduct" stepKey="customerLogout"/>
    </test>
</tests>
