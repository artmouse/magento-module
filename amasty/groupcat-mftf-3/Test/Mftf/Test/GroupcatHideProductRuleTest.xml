<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="GroupcatHideProductRuleTest">
        <annotations>
            <features value="Creation Hide Product Customer Group Catalog Rule"/>
            <stories value="Check Hide Product Customer Group Catalog Rule"/>
            <title value="Check Hide Product Customer Group Catalog Rule at Storefront Product Page"/>
            <description value="Check Hide Product Customer Group Catalog Rule at Storefront Product Page"/>
            <severity value="MAJOR"/>
            <testCaseId value="AmGroupCatalog-6"/>
            <group value="AmGroupCatalog"/>
            <group value="AmHideProduct"/>
        </annotations>

        <before>
            <createData entity="SimpleSubCategory" stepKey="category"/>
            <createData entity="amSimpleProduct" stepKey="firstSimpleProduct">
                <requiredEntity createDataKey="category"/>
            </createData>
            <createData entity="amSimpleProduct" stepKey="secondSimpleProduct">
                <requiredEntity createDataKey="category"/>
            </createData>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginToAdminArea"/>
            <actionGroup ref="AdminCreateDefRuleActionGroup" stepKey="createDefRule"/>
        </before>

        <after>
            <deleteData createDataKey="firstSimpleProduct" stepKey="deleteFirstSimpleProduct"/>
            <deleteData createDataKey="secondSimpleProduct" stepKey="deleteSecondSimpleProduct"/>
            <deleteData createDataKey="category" stepKey="deleteCategory"/>
            <actionGroup ref="AdminDeleteRuleOnRuleGridActionGroup" stepKey="deleteRule"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="adminLogout"/>
        </after>

        <actionGroup ref="StorefrontAssertProductActionGroup" stepKey="storefrontCheckFirstProduct">
            <argument name="category" value="$category$"/>
            <argument name="product" value="$$firstSimpleProduct.name$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertProductActionGroup" stepKey="storefrontCheckSecondProduct">
            <argument name="category" value="$category$"/>
            <argument name="product" value="$$secondSimpleProduct.name$$"/>
        </actionGroup>
        <actionGroup ref="AdminOpenRuleActionGroup" stepKey="openRule"/>
        <actionGroup ref="AdminSelectHideProductOnRulePageActionGroup" stepKey="hideProduct"/>
        <actionGroup ref="AdminSelectProductSKUConditionOnRulePageActionGroup" stepKey="addProduct">
            <argument name="product" value="$$firstSimpleProduct.sku$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertHideProductActionGroup" stepKey="storefrontCheckHideFirstProduct">
            <argument name="category" value="$category$"/>
            <argument name="product" value="$$firstSimpleProduct.name$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertProductActionGroup" stepKey="storefrontCheckDontHideSecondProduct">
            <argument name="category" value="$category$"/>
            <argument name="product" value="$$secondSimpleProduct.name$$"/>
        </actionGroup>
    </test>
</tests>
